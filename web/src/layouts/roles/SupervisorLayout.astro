---
import BaseLayout from '../BaseLayout.astro';
import SidebarSupervisor from '../../components/sidebar/SidebarSupervisor';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="role-container role-supervisor">
    <SidebarSupervisor client:load />
    <div class="role-content">
      <header class="role-topbar">
        <div class="topbar-left">
          <h1 class="page-title">{title}</h1>
        </div>
        <div class="topbar-right">
          <div class="status-indicator">
            <span class="status-dot"></span>
            <span class="status-text">Sistema operativo</span>
          </div>
          <button class="icon-btn alerts">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
              <line x1="12" y1="9" x2="12" y2="13"/>
              <line x1="12" y1="17" x2="12.01" y2="17"/>
            </svg>
            <span class="alert-badge">5</span>
          </button>
          <button class="icon-btn notifications">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
              <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
            </svg>
          </button>
        </div>
      </header>
      <main class="role-main">
        <slot />
      </main>
    </div>
  </div>
</BaseLayout>

<style>
  .role-container {
    display: flex;
    min-height: 100vh;
    background: var(--neutral-50);
  }

  .role-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow-x: hidden;
  }

  .role-topbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: white;
    border-bottom: 1px solid var(--neutral-200);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .page-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--neutral-800);
  }

  .topbar-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .status-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--success-green-50);
    border: 1px solid var(--success-green-200);
    border-radius: 20px;
  }

  .status-dot {
    width: 8px;
    height: 8px;
    background: var(--success-green-500);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .status-text {
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--success-green-700);
  }

  .icon-btn {
    position: relative;
    padding: 0.5rem;
    background: transparent;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    cursor: pointer;
    color: var(--neutral-600);
    transition: all 0.2s;
  }

  .icon-btn:hover {
    background: var(--neutral-100);
    color: var(--neutral-800);
  }

  .icon-btn.alerts {
    color: var(--warning-yellow-700);
    border-color: var(--warning-yellow-300);
  }

  .alert-badge {
    position: absolute;
    top: -4px;
    right: -4px;
    width: 18px;
    height: 18px;
    background: var(--warning-yellow-500);
    color: white;
    font-size: 0.6875rem;
    font-weight: 600;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .role-main {
    flex: 1;
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
  }

  /* Supervisor specific accent - Green */
  .role-supervisor {
    --role-accent: #4ADE80;
    --role-accent-light: #dcfce7;
    --role-accent-dark: #22c55e;
  }

  @media (max-width: 1024px) {
    .role-main {
      padding: 1.5rem;
    }

    .status-indicator {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .role-topbar {
      padding: 1rem;
    }

    .role-main {
      padding: 1rem;
    }
  }
</style>

