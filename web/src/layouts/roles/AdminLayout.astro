---
import BaseLayout from '../BaseLayout.astro';
import SidebarAdmin from '../../components/sidebar/SidebarAdmin';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="role-container role-admin">
    <SidebarAdmin client:load />
    <div class="role-content">
      <header class="role-topbar">
        <div class="topbar-left">
          <h1 class="page-title">{title}</h1>
        </div>
        <div class="topbar-right">
          <div class="search-box">
            <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" strokeWidth="2">
              <circle cx="11" cy="11" r="8"/>
              <line x1="21" y1="21" x2="16.65" y2="16.65"/>
            </svg>
            <input type="text" placeholder="Buscar..." />
          </div>
          <button class="icon-btn notifications">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
              <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
            </svg>
            <span class="notification-badge">3</span>
          </button>
        </div>
      </header>
      <main class="role-main">
        <slot />
      </main>
    </div>
  </div>
</BaseLayout>

<style>
  .role-container {
    display: flex;
    min-height: 100vh;
    background: var(--neutral-50);
  }

  .role-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow-x: hidden;
  }

  .role-topbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: white;
    border-bottom: 1px solid var(--neutral-200);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .page-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--neutral-800);
  }

  .topbar-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .search-box {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--neutral-100);
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    transition: all 0.2s;
  }

  .search-box:focus-within {
    background: white;
    border-color: var(--color-primary-400);
    box-shadow: 0 0 0 3px rgba(61, 133, 209, 0.1);
  }

  .search-box svg {
    color: var(--neutral-400);
  }

  .search-box input {
    border: none;
    background: transparent;
    outline: none;
    font-size: 0.875rem;
    color: var(--neutral-700);
    min-width: 200px;
  }

  .icon-btn {
    position: relative;
    padding: 0.5rem;
    background: transparent;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    cursor: pointer;
    color: var(--neutral-600);
    transition: all 0.2s;
  }

  .icon-btn:hover {
    background: var(--neutral-100);
    color: var(--neutral-800);
  }

  .notification-badge {
    position: absolute;
    top: -4px;
    right: -4px;
    width: 18px;
    height: 18px;
    background: var(--error-red-500);
    color: white;
    font-size: 0.6875rem;
    font-weight: 600;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .role-main {
    flex: 1;
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
  }

  /* Admin specific accent */
  .role-admin {
    --role-accent: #3d85d1;
    --role-accent-light: #e0eff9;
    --role-accent-dark: #2c5aa0;
  }

  @media (max-width: 1024px) {
    .role-main {
      padding: 1.5rem;
    }

    .search-box {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .role-topbar {
      padding: 1rem;
    }

    .role-main {
      padding: 1rem;
    }
  }
</style>
