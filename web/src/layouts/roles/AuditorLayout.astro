---
import BaseLayout from '../BaseLayout.astro';
import SidebarAuditor from '../../components/sidebar/SidebarAuditor';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="role-container role-auditor">
    <SidebarAuditor client:load />
    <div class="role-content">
      <header class="role-topbar">
        <div class="topbar-left">
          <h1 class="page-title">{title}</h1>
          <span class="readonly-badge">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
            Solo Lectura
          </span>
        </div>
        <div class="topbar-right">
          <div class="date-range">
            <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
            <span>Diciembre 2025</span>
          </div>
          <button class="icon-btn export">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
              <polyline points="7 10 12 15 17 10"/>
              <line x1="12" y1="15" x2="12" y2="3"/>
            </svg>
          </button>
        </div>
      </header>
      <main class="role-main">
        <slot />
      </main>
    </div>
  </div>
</BaseLayout>

<style>
  .role-container {
    display: flex;
    min-height: 100vh;
    background: var(--neutral-50);
  }

  .role-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow-x: hidden;
  }

  .role-topbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: white;
    border-bottom: 1px solid var(--neutral-200);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .topbar-left {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .page-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--neutral-800);
  }

  .readonly-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.75rem;
    background: var(--secondary-purple-100);
    color: var(--secondary-purple-700);
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .topbar-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .date-range {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--neutral-100);
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    font-size: 0.875rem;
    color: var(--neutral-700);
  }

  .date-range svg {
    color: var(--neutral-500);
  }

  .icon-btn {
    position: relative;
    padding: 0.5rem;
    background: transparent;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    cursor: pointer;
    color: var(--neutral-600);
    transition: all 0.2s;
  }

  .icon-btn:hover {
    background: var(--neutral-100);
    color: var(--neutral-800);
  }

  .icon-btn.export {
    color: var(--secondary-purple-600);
    border-color: var(--secondary-purple-200);
  }

  .icon-btn.export:hover {
    background: var(--secondary-purple-50);
  }

  .role-main {
    flex: 1;
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
  }

  /* Auditor specific accent - Purple */
  .role-auditor {
    --role-accent: #A78BFA;
    --role-accent-light: #f3e8ff;
    --role-accent-dark: #8b5cf6;
  }

  @media (max-width: 1024px) {
    .role-main {
      padding: 1.5rem;
    }

    .date-range {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .role-topbar {
      padding: 1rem;
    }

    .role-main {
      padding: 1rem;
    }

    .readonly-badge span {
      display: none;
    }
  }
</style>

