---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="min-h-screen flex flex-col">
    <nav class="bg-white border-b border-primary-200 shadow-sm">
      <div class="container">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-8">
            <a href="/dashboard" class="text-2xl font-bold text-primary-900">
              Tracely
            </a>
            <div class="hidden md:flex gap-4">
              <a href="/dashboard" class="nav-link">Dashboard</a>
              <a href="/reportes" class="nav-link">Reportes</a>
              <a href="/calendario" class="nav-link">Calendario</a>
              <a href="/entidades" class="nav-link">Entidades</a>
            </div>
          </div>
          <div id="user-menu"></div>
        </div>
      </div>
    </nav>
    <main class="flex-1 py-6">
      <div class="container">
        <slot />
      </div>
    </main>
    <footer class="bg-white border-t border-primary-200 py-4">
      <div class="container text-center text-sm text-primary-700">
        © 2025 Tracely. Sistema de Gestión de Reportes Regulatorios
      </div>
    </footer>
  </div>
</BaseLayout>

<script>
  import { authService } from '../lib/auth';

  if (typeof window !== 'undefined') {
    const isAuth = authService.isAuthenticated();
    if (!isAuth) {
      window.location.href = '/login';
    } else {
      const user = authService.getUser();
      const userMenu = document.getElementById('user-menu');
      if (userMenu && user) {
        userMenu.innerHTML = `
          <div style="display: flex; align-items: center; gap: 1rem;">
            <span style="font-size: 0.875rem; color: var(--color-primary-900);">
              ${user.nombre} ${user.apellido}
            </span>
            <button id="logout-btn" class="btn btn-sm btn-secondary">
              Cerrar sesión
            </button>
          </div>
        `;
        
        document.getElementById('logout-btn')?.addEventListener('click', () => {
          authService.logout();
        });
      }
    }
  }
</script>

<style>
  .min-h-screen {
    min-height: 100vh;
  }

  .flex {
    display: flex;
  }

  .flex-col {
    flex-direction: column;
  }

  .flex-1 {
    flex: 1;
  }

  .items-center {
    align-items: center;
  }

  .justify-between {
    justify-content: space-between;
  }

  .gap-4 {
    gap: 1rem;
  }

  .gap-8 {
    gap: 2rem;
  }

  .h-16 {
    height: 4rem;
  }

  .py-4 {
    padding-top: 1rem;
    padding-bottom: 1rem;
  }

  .py-6 {
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
  }

  .bg-white {
    background-color: white;
  }

  .border-b {
    border-bottom-width: 1px;
  }

  .border-t {
    border-top-width: 1px;
  }

  .border-primary-200 {
    border-color: var(--color-primary-200);
  }

  .shadow-sm {
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  }

  .text-2xl {
    font-size: 1.5rem;
  }

  .text-sm {
    font-size: 0.875rem;
  }

  .text-center {
    text-align: center;
  }

  .font-bold {
    font-weight: 700;
  }

  .text-primary-900 {
    color: var(--color-primary-900);
  }

  .text-primary-700 {
    color: var(--color-primary-700);
  }

  .nav-link {
    color: var(--color-primary-800);
    font-weight: 500;
    font-size: 0.9375rem;
    padding: 0.5rem 0.75rem;
    border-radius: 6px;
    transition: all 0.2s;
  }

  .nav-link:hover {
    background-color: var(--color-primary-100);
    color: var(--color-primary-900);
    text-decoration: none;
  }

  .hidden {
    display: none;
  }

  @media (min-width: 768px) {
    .md\:flex {
      display: flex;
    }
  }
</style>
