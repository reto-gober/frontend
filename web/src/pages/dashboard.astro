---
import MainLayout from '../layouts/MainLayout.astro';
import DashboardStats from '../components/DashboardStats';
---

<MainLayout title="Dashboard">
  <div class="dashboard-container">
    <div class="page-header">
      <h1 class="page-title">Dashboard</h1>
      <p class="page-subtitle">Resumen de reportes regulatorios</p>
    </div>

    <DashboardStats client:load />

    <div class="dashboard-grid">
      <div class="card">
        <h2 class="card-title">Acciones Rápidas</h2>
        <div class="quick-actions">
          <a href="/reportes/nuevo" class="btn btn-primary">
            Nuevo Reporte
          </a>
          <a href="/reportes" class="btn btn-secondary">
            Ver Todos los Reportes
          </a>
          <a href="/calendario" class="btn btn-secondary">
            Ver Calendario
          </a>
        </div>
      </div>

      <div class="card">
        <h2 class="card-title">Enlaces Útiles</h2>
        <div class="links-list">
          <a href="/reportes?estado=PENDIENTE" class="link-item">
            Reportes Pendientes
          </a>
          <a href="/reportes?estado=EN_PROGRESO" class="link-item">
            Reportes en Progreso
          </a>
          <a href="/entidades" class="link-item">
            Gestionar Entidades
          </a>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .dashboard-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .page-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-primary-900);
    margin-bottom: 0.5rem;
  }

  .page-subtitle {
    font-size: 1rem;
    color: var(--color-primary-700);
  }

  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-primary-900);
    margin-bottom: 1rem;
  }

  .quick-actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .links-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .link-item {
    padding: 0.75rem;
    border-radius: 6px;
    transition: background-color 0.2s;
    color: var(--color-primary-800);
    font-size: 0.9375rem;
  }

  .link-item:hover {
    background-color: var(--color-primary-50);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 1.5rem;
    }

    .dashboard-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<style is:global>
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
  }

  .stat-card {
    padding: 1.5rem;
    border-radius: 8px;
    box-shadow: 0 1px 3px rgba(31, 49, 76, 0.1);
  }

  .stat-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-light);
    margin-bottom: 0.5rem;
  }

  .stat-value {
    font-size: 2rem;
    font-weight: 700;
  }

  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    }

    .stat-card {
      padding: 1rem;
    }

    .stat-value {
      font-size: 1.5rem;
    }
  }
</style>
