---
export const prerender = false;

import MainLayout from '../layouts/MainLayout.astro';
import DashboardStats from '../components/DashboardStats';
---

<MainLayout title="Dashboard">
  <div class="dashboard-container">
    <div class="page-header">
      <p class="page-subtitle">Resumen de reportes regulatorios</p>
    </div>

    <div class="toolbar">
      <div class="toolbar-row">
        <div class="segment">
          <button class="seg is-active">30D</button>
          <button class="seg">3M</button>
          <button class="seg">6M</button>
          <button class="seg">12M</button>
        </div>
        <div class="filters">
          <button class="chip">Riesgos</button>
          <button class="chip">Planes de Acción</button>
          <button class="chip">Sugerencias</button>
        </div>
        <div class="actions">
          <button class="btn btn-secondary btn-sm">Exportar</button>
          <a href="/reportes/nuevo" class="btn btn-primary btn-sm">Nuevo reporte</a>
        </div>
      </div>
    </div>

    <DashboardStats client:load />

    <div class="dashboard-grid">
      <div class="card">
        <h2 class="card-title">Acciones Rápidas</h2>
        <div class="quick-actions">
          <a href="/reportes/nuevo" class="btn btn-primary">
            Nuevo Reporte
          </a>
          <a href="/reportes" class="btn btn-secondary">
            Ver Todos los Reportes
          </a>
          <a href="/calendario" class="btn btn-secondary">
            Ver Calendario
          </a>
        </div>
      </div>

      <div class="card">
        <h2 class="card-title">Enlaces Útiles</h2>
        <div class="links-list">
          <a href="/reportes?estado=PENDIENTE" class="link-item">
            Reportes Pendientes
          </a>
          <a href="/reportes?estado=EN_PROGRESO" class="link-item">
            Reportes en Progreso
          </a>
          <a href="/entidades" class="link-item">
            Gestionar Entidades
          </a>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .dashboard-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .page-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-primary-900);
    margin-bottom: 0.5rem;
  }

  .page-subtitle {
    font-size: 1rem;
    color: var(--color-primary-700);
  }

  .toolbar { position: sticky; top: 64px; z-index: 10; background: rgba(255,255,255,.75); backdrop-filter: blur(8px); border: 1px solid var(--color-primary-200); padding: .5rem; border-radius: 10px; margin-bottom: 1rem; }
  .toolbar-row { display: grid; grid-template-columns: 1fr auto auto; gap: .75rem; align-items: center; }
  .segment { display: inline-flex; background: var(--color-primary-50); padding: .25rem; border-radius: 999px; border: 1px solid var(--color-border); }
  .seg { border: 0; background: transparent; padding: .4rem .75rem; border-radius: 999px; font-weight: 600; color: var(--color-primary-800); }
  .seg:hover { background: #fff; }
  .seg.is-active { background: #fff; color: var(--color-primary-900); box-shadow: 0 1px 6px rgba(31,49,76,.12); }
  .filters { display: inline-flex; gap: .5rem; }
  .chip { border: 1px dashed var(--color-border); background: #fff; padding: .35rem .6rem; border-radius: 999px; color: var(--color-primary-800); }
  .chip:hover { border-style: solid; }
  .actions { display: inline-flex; gap: .5rem; }

  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-primary-900);
    margin-bottom: 1rem;
  }

  .quick-actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .links-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .link-item {
    padding: 0.75rem;
    border-radius: 6px;
    transition: background-color 0.2s;
    color: var(--color-primary-800);
    font-size: 0.9375rem;
  }

  .link-item:hover {
    background-color: var(--color-primary-50);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 1.5rem;
    }

    .dashboard-grid {
      grid-template-columns: 1fr;
    }

    .toolbar-row { grid-template-columns: 1fr; }
  }
</style>

<style is:global>
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
  }

  .stat-card {
    padding: 1.5rem;
    border-radius: 8px;
    box-shadow: 0 1px 3px rgba(31, 49, 76, 0.1);
  }

  .stat-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-light);
    margin-bottom: 0.5rem;
  }

  .stat-value {
    font-size: 2rem;
    font-weight: 700;
  }

  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    }

    .stat-card {
      padding: 1rem;
    }

    .stat-value {
      font-size: 1.5rem;
    }
  }
</style>
