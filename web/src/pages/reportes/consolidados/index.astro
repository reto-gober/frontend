---
import MainLayout from '../../../layouts/MainLayout.astro';
---

<MainLayout title="Reportes Consolidados">
  <div class="container mx-auto px-4 py-8">
    <div id="reportes-consolidados-root"></div>
  </div>
</MainLayout>

<script>
  import { createRoot } from 'react-dom/client';
  import { createElement } from 'react';
  import ReportesConsolidadosList from '../../../components/ReportesConsolidadosList';

  const container = document.getElementById('reportes-consolidados-root');
  if (container) {
    const root = createRoot(container);
    root.render(createElement(ReportesConsolidadosList));
  }
</script>
