---
import MainLayout from '../../../layouts/MainLayout.astro';

const { id } = Astro.params;
---

<MainLayout title="Detalle del Reporte Consolidado">
  <div class="container mx-auto px-4 py-8">
    <div id="reporte-consolidado-detalle-root" data-id={id}></div>
  </div>
</MainLayout>

<script>
  import { createRoot } from 'react-dom/client';
  import { createElement } from 'react';
  import ReporteConsolidadoDetalle from '../../../components/ReporteConsolidadoDetalle';

  const container = document.getElementById('reporte-consolidado-detalle-root');
  if (container) {
    const id = parseInt(container.getAttribute('data-id') || '0', 10);
    const root = createRoot(container);
    root.render(createElement(ReporteConsolidadoDetalle, { id }));
  }
</script>
