---
import MainLayout from '../../layouts/MainLayout.astro';
import ReporteForm from '../../components/ReporteForm';
---

<MainLayout title="Nuevo Reporte">
  <ReporteForm client:load />
</MainLayout>

<style is:global>
  .reporte-form-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .form-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .form-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-primary-900);
  }

  .form-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .form-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .form-title {
      font-size: 1.5rem;
    }

    .form-grid {
      grid-template-columns: 1fr;
    }

    .form-actions {
      flex-direction: column;
    }
  }
</style>
