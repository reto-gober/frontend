---
import MainLayout from '../../layouts/MainLayout.astro';
import EntidadesList from '../../components/EntidadesList';
---

<MainLayout title="Entidades">
  <EntidadesList client:load />
</MainLayout>

<style is:global>
  .entidades-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .entidades-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 2rem;
    gap: 1rem;
  }

  .entidades-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-primary-900);
    margin-bottom: 0.5rem;
  }

  .entidades-subtitle {
    font-size: 1rem;
    color: var(--color-primary-700);
  }

  .form-subtitle {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-primary-900);
    margin-bottom: 1rem;
  }

  .form-grid-2 {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }

  .form-checkbox {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
  }

  .form-checkbox input {
    width: 18px;
    height: 18px;
    cursor: pointer;
  }

  .form-actions-inline {
    display: flex;
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .mb-2 {
    margin-bottom: 2rem;
  }

  .entidades-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 1.5rem;
  }

  .entidad-card {
    background: white;
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 1px 3px rgba(31, 49, 76, 0.1);
    border: 1px solid var(--color-border);
    transition: box-shadow 0.2s;
  }

  .entidad-card:hover {
    box-shadow: 0 4px 6px rgba(31, 49, 76, 0.15);
  }

  .entidad-card-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .entidad-icon {
    color: var(--color-primary-600);
    flex-shrink: 0;
  }

  .entidad-info {
    flex: 1;
    min-width: 0;
  }

  .entidad-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-primary-900);
    margin-bottom: 0.25rem;
  }

  .entidad-code {
    font-size: 0.875rem;
    color: var(--color-primary-700);
    font-family: 'Courier New', monospace;
  }

  .entidad-description {
    font-size: 0.875rem;
    color: var(--color-text-light);
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .entidad-actions {
    display: flex;
    gap: 0.5rem;
  }

  @media (max-width: 768px) {
    .entidades-header {
      flex-direction: column;
    }

    .entidades-title {
      font-size: 1.5rem;
    }

    .entidades-grid {
      grid-template-columns: 1fr;
    }

    .entidad-actions {
      flex-direction: column;
    }
  }
</style>
