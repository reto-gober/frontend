---
import BaseLayout from '../layouts/BaseLayout.astro';

// Obtener el token de la URL
const url = Astro.url;
const token = url.searchParams.get('token');
---

<BaseLayout title="Completar Registro">
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <div class="icon-container">
          <svg viewBox="0 0 24 24" width="48" height="48" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
            <circle cx="8.5" cy="7" r="4"/>
            <line x1="20" y1="8" x2="20" y2="14"/>
            <line x1="23" y1="11" x2="17" y2="11"/>
          </svg>
        </div>
        <h1 class="auth-title">Completar Registro</h1>
        <p class="auth-subtitle">Has sido invitado al Sistema de Gestión de Reportes</p>
      </div>

      <div id="validating-token" class="loading-state">
        <div class="spinner"></div>
        <p>Validando invitación...</p>
      </div>

      <div id="error-message" style="display: none;"></div>
      <div id="success-message" style="display: none;"></div>

      <form id="registro-invitado-form" class="auth-form" style="display: none;">
        <input type="hidden" id="token" name="token" value={token} />

        <div class="form-row">
          <div class="form-group">
            <label for="firstName" class="form-label">Primer Nombre *</label>
            <input
              type="text"
              id="firstName"
              name="firstName"
              class="form-input"
              required
            />
          </div>

          <div class="form-group">
            <label for="secondName" class="form-label">Segundo Nombre</label>
            <input
              type="text"
              id="secondName"
              name="secondName"
              class="form-input"
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="firstLastname" class="form-label">Primer Apellido *</label>
            <input
              type="text"
              id="firstLastname"
              name="firstLastname"
              class="form-input"
              required
            />
          </div>

          <div class="form-group">
            <label for="secondLastname" class="form-label">Segundo Apellido</label>
            <input
              type="text"
              id="secondLastname"
              name="secondLastname"
              class="form-input"
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="documentType" class="form-label">Tipo de Documento *</label>
            <select
              id="documentType"
              name="documentType"
              class="form-select"
              required
            >
              <option value="">Seleccionar</option>
              <option value="CC">Cédula de Ciudadanía</option>
              <option value="CE">Cédula de Extranjería</option>
              <option value="PA">Pasaporte</option>
            </select>
          </div>

          <div class="form-group">
            <label for="documentNumber" class="form-label">Número de Documento *</label>
            <input
              type="text"
              id="documentNumber"
              name="documentNumber"
              class="form-input"
              required
            />
          </div>
        </div>

        <div class="form-group">
          <label for="telefono" class="form-label">Teléfono</label>
          <input
            type="tel"
            id="telefono"
            name="telefono"
            class="form-input"
            placeholder="+57 300 1234567"
          />
        </div>

        <div class="form-group">
          <label for="password" class="form-label">Contraseña *</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-input"
            minlength="6"
            required
          />
          <small class="form-hint">Mínimo 6 caracteres</small>
        </div>

        <div class="form-group">
          <label for="confirmPassword" class="form-label">Confirmar Contraseña *</label>
          <input
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            class="form-input"
            minlength="6"
            required
          />
        </div>

        <button type="submit" class="btn-primary btn-full" id="submit-btn">
          Completar Registro
        </button>
      </form>

      <div class="auth-footer">
        <p>¿Ya tienes cuenta? <a href="/login">Inicia sesión</a></p>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .auth-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .auth-card {
    background: white;
    border-radius: 1rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    padding: 2.5rem;
    width: 100%;
    max-width: 600px;
  }

  .auth-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .icon-container {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 50%;
    margin-bottom: 1rem;
  }

  .icon-container svg {
    stroke: white;
  }

  .auth-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1a202c;
    margin: 0 0 0.5rem 0;
  }

  .auth-subtitle {
    color: #718096;
    font-size: 0.9375rem;
    margin: 0;
  }

  .loading-state {
    text-align: center;
    padding: 2rem;
  }

  .spinner {
    width: 40px;
    height: 40px;
    margin: 0 auto 1rem;
    border: 4px solid #e2e8f0;
    border-top-color: #667eea;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .auth-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: #4a5568;
    margin-bottom: 0.5rem;
  }

  .form-input,
  .form-select {
    padding: 0.75rem;
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
    font-size: 0.9375rem;
    transition: all 0.2s;
  }

  .form-input:focus,
  .form-select:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

  .form-hint {
    font-size: 0.75rem;
    color: #a0aec0;
    margin-top: 0.25rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 0.875rem 1.5rem;
    border: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
  }

  .btn-primary:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  .btn-full {
    width: 100%;
    margin-top: 0.5rem;
  }

  .auth-footer {
    margin-top: 1.5rem;
    text-align: center;
    font-size: 0.875rem;
    color: #718096;
  }

  .auth-footer a {
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
  }

  .auth-footer a:hover {
    text-decoration: underline;
  }

  #error-message,
  #success-message {
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
  }

  #error-message {
    background: #fff5f5;
    color: #c53030;
    border: 1px solid #feb2b2;
  }

  #success-message {
    background: #f0fff4;
    color: #276749;
    border: 1px solid #9ae6b4;
  }

  @media (max-width: 640px) {
    .auth-card {
      padding: 1.5rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .auth-title {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  import { usuariosService } from '../lib/services';
  import notifications from '../lib/notifications';

  const form = document.getElementById('registro-invitado-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const validatingDiv = document.getElementById('validating-token') as HTMLDivElement;
  const errorDiv = document.getElementById('error-message') as HTMLDivElement;
  const successDiv = document.getElementById('success-message') as HTMLDivElement;
  const tokenInput = document.getElementById('token') as HTMLInputElement;

  // Validar token al cargar la página
  async function validateToken() {
    const token = tokenInput.value;

    if (!token) {
      showError('Token de invitación no válido. Por favor verifica el enlace.');
      validatingDiv.style.display = 'none';
      return;
    }

    try {
      const result = await usuariosService.validarTokenInvitacion(token);
      
      if (result.data === true) {
        // Token válido, mostrar formulario
        validatingDiv.style.display = 'none';
        form.style.display = 'flex';
      } else {
        showError('Token de invitación inválido o expirado. Por favor contacta al administrador.');
        validatingDiv.style.display = 'none';
      }
    } catch (error: any) {
      console.error('Error validating token:', error);
      showError(error.response?.data?.message || 'Error al validar la invitación. Por favor intenta nuevamente.');
      validatingDiv.style.display = 'none';
    }
  }

  // Validar token al cargar
  validateToken();

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const password = formData.get('password') as string;
    const confirmPassword = formData.get('confirmPassword') as string;

    // Validar contraseñas
    if (password !== confirmPassword) {
      showError('Las contraseñas no coinciden');
      return;
    }

    if (password.length < 6) {
      showError('La contraseña debe tener al menos 6 caracteres');
      return;
    }

    const data = {
      token: formData.get('token') as string,
      firstName: formData.get('firstName') as string,
      secondName: formData.get('secondName') as string || '',
      firstLastname: formData.get('firstLastname') as string,
      secondLastname: formData.get('secondLastname') as string || '',
      documentType: formData.get('documentType') as string,
      documentNumber: formData.get('documentNumber') as string,
      password: password,
      telefono: formData.get('telefono') as string || ''
    };

    try {
      submitBtn.disabled = true;
      submitBtn.textContent = 'Completando registro...';
      errorDiv.style.display = 'none';

      await usuariosService.completarRegistroInvitacion(data);

      // Mostrar mensaje de éxito
      showSuccess('¡Registro completado exitosamente! Redirigiendo al login...');
      form.style.display = 'none';

      // Redirigir al login después de 2 segundos
      setTimeout(() => {
        window.location.href = '/login';
      }, 2000);

    } catch (error: any) {
      console.error('Error completing registration:', error);
      showError(error.response?.data?.message || 'Error al completar el registro. Por favor intenta nuevamente.');
      submitBtn.disabled = false;
      submitBtn.textContent = 'Completar Registro';
    }
  });

  function showError(message: string) {
    errorDiv.textContent = message;
    errorDiv.style.display = 'block';
    successDiv.style.display = 'none';
  }

  function showSuccess(message: string) {
    successDiv.textContent = message;
    successDiv.style.display = 'block';
    errorDiv.style.display = 'none';
  }
</script>
