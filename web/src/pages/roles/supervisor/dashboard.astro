---
import SupervisorLayout from '../../../layouts/roles/SupervisorLayout.astro';
import SupervisorDashboardClient from '../../../components/supervisor/SupervisorDashboardClient';
---

<SupervisorLayout title="Tablero de SupervisiÃ³n">
  <SupervisorDashboardClient client:load />
</SupervisorLayout>

<style is:global>
  .dashboard-supervisor {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .dashboard-header-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 1.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .header-left {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .period-filter {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .filter-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--neutral-700);
  }

  .filter-select {
    padding: 0.5rem 1rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    background: white;
    font-size: 0.875rem;
    color: var(--neutral-700);
    cursor: pointer;
    transition: all 0.2s;
  }

  .filter-select:hover {
    border-color: var(--color-primary-400);
  }

  .filter-select:focus {
    outline: none;
    border-color: var(--color-primary-500);
    box-shadow: 0 0 0 3px rgba(61, 133, 209, 0.1);
  }

  .header-actions {
    display: flex;
    gap: 0.75rem;
  }

  .btn-review {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.125rem;
    background: var(--color-primary-600);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-review:hover {
    background: var(--color-primary-700);
    transform: translateY(-1px);
    box-shadow: var(--shadow-hover);
  }

  .kpis-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  .kpi-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: all 0.2s;
  }

  .kpi-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-hover);
  }

  .kpi-card.primary { border-left: 4px solid var(--color-primary-600); }
  .kpi-card.warning { border-left: 4px solid var(--accent-orange-600); }
  .kpi-card.info { border-left: 4px solid var(--secondary-purple-600); }
  .kpi-card.danger { border-left: 4px solid var(--error-red-600); }

  .kpi-icon {
    width: 56px;
    height: 56px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .kpi-card.primary .kpi-icon {
    background: var(--color-primary-100);
    color: var(--color-primary-600);
  }

  .kpi-card.warning .kpi-icon {
    background: var(--accent-orange-100);
    color: var(--accent-orange-600);
  }

  .kpi-card.info .kpi-icon {
    background: var(--secondary-purple-100);
    color: var(--secondary-purple-600);
  }

  .kpi-card.danger .kpi-icon {
    background: var(--error-red-100);
    color: var(--error-red-600);
  }

  .kpi-content {
    flex: 1;
  }

  .kpi-value {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    color: var(--neutral-900);
    line-height: 1;
    margin-bottom: 0.25rem;
  }

  .kpi-label {
    display: block;
    font-size: 0.875rem;
    color: var(--neutral-600);
  }

  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .dashboard-card {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    overflow: hidden;
  }

  .dashboard-card.wide {
    grid-column: span 2;
  }

  .card-header {
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--neutral-100);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .card-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .card-body {
    padding: 1.5rem;
  }

  .donut-chart-container {
    display: flex;
    justify-content: center;
    margin-bottom: 1.5rem;
  }

  .donut-chart {
    width: 200px;
    height: 200px;
  }

  .legend-grid {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--neutral-700);
  }

  .legend-dot {
    width: 12px;
    height: 12px;
    border-radius: 3px;
  }

  .table-container {
    overflow-x: auto;
  }

  .data-table {
    width: 100%;
    border-collapse: collapse;
  }

  .data-table thead {
    background: var(--neutral-50);
  }

  .data-table th {
    padding: 0.75rem 1rem;
    text-align: left;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--neutral-600);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .data-table tbody tr {
    border-bottom: 1px solid var(--neutral-100);
    transition: background 0.2s;
  }

  .data-table tbody tr:hover {
    background: var(--neutral-50);
  }

  .data-table td {
    padding: 0.875rem 1rem;
    font-size: 0.875rem;
    color: var(--neutral-700);
  }

  .badge {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .badge.neutral {
    background: var(--neutral-100);
    color: var(--neutral-700);
  }

  .badge.info {
    background: var(--color-primary-100);
    color: var(--color-primary-700);
  }

  .badge.danger {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  .progress-bar-small {
    height: 6px;
    background: var(--neutral-200);
    border-radius: 3px;
    overflow: hidden;
    margin-bottom: 0.25rem;
  }

  .progress-fill-small {
    height: 100%;
    border-radius: 3px;
    transition: width 0.3s;
  }

  .progress-label-small {
    font-size: 0.75rem;
    color: var(--neutral-600);
  }

  .loading-spinner {
    display: inline-block;
    width: 40px;
    height: 40px;
    border: 4px solid var(--neutral-200);
    border-top-color: var(--color-primary-600);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  @media (max-width: 1024px) {
    .kpis-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .dashboard-grid {
      grid-template-columns: 1fr;
    }

    .dashboard-card.wide {
      grid-column: span 1;
    }
  }

  @media (max-width: 640px) {
    .kpis-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
