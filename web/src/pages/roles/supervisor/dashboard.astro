---
import SupervisorLayout from '../../../layouts/roles/SupervisorLayout.astro';
---

<SupervisorLayout title="Dashboard">
  <div class="dashboard-page">
    <!-- Welcome Section -->
    <div class="welcome-section">
      <div class="welcome-content">
        <h1 class="welcome-title">Panel de Supervisión</h1>
        <p class="welcome-subtitle">Monitoreo y control del cumplimiento regulatorio de tu equipo</p>
      </div>
      <div class="team-status">
        <div class="status-indicator online">
          <span class="status-dot"></span>
          <span class="status-text">5 miembros activos</span>
        </div>
      </div>
    </div>

    <!-- KPIs del Equipo -->
    <div class="kpis-grid">
      <div class="kpi-card">
        <div class="kpi-icon blue">
          <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
            <polyline points="14 2 14 8 20 8"/>
          </svg>
        </div>
        <div class="kpi-content">
          <span class="kpi-value">24</span>
          <span class="kpi-label">Reportes Asignados</span>
          <div class="kpi-trend up">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/>
            </svg>
            +3 esta semana
          </div>
        </div>
      </div>

      <div class="kpi-card">
        <div class="kpi-icon green">
          <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
        </div>
        <div class="kpi-content">
          <span class="kpi-value">18</span>
          <span class="kpi-label">Enviados a Entidad</span>
          <div class="kpi-progress">
            <div class="progress-bar">
              <div class="progress-fill" style="width: 75%"></div>
            </div>
            <span class="progress-text">75% del mes</span>
          </div>
        </div>
      </div>

      <div class="kpi-card">
        <div class="kpi-icon yellow">
          <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <polyline points="12,6 12,12 16,14"/>
          </svg>
        </div>
        <div class="kpi-content">
          <span class="kpi-value">4</span>
          <span class="kpi-label">Pendientes Revisión</span>
          <div class="kpi-detail">
            <span class="detail-badge warning">Requieren acción</span>
          </div>
        </div>
      </div>

      <div class="kpi-card">
        <div class="kpi-icon red">
          <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
            <line x1="12" y1="9" x2="12" y2="13"/>
            <line x1="12" y1="17" x2="12.01" y2="17"/>
          </svg>
        </div>
        <div class="kpi-content">
          <span class="kpi-value">2</span>
          <span class="kpi-label">Reportes Vencidos</span>
          <div class="kpi-detail">
            <span class="detail-badge danger">Atención urgente</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="content-grid">
      <!-- Cumplimiento por Equipo -->
      <div class="card cumplimiento-card">
        <div class="card-header">
          <h2 class="card-title">Cumplimiento del Equipo</h2>
          <div class="card-actions">
            <select class="mini-select">
              <option>Febrero 2025</option>
              <option>Enero 2025</option>
            </select>
          </div>
        </div>
        <div class="team-members">
          <div class="member-row">
            <div class="member-info">
              <div class="member-avatar">ML</div>
              <div class="member-details">
                <span class="member-name">María López</span>
                <span class="member-role">Analista Senior</span>
              </div>
            </div>
            <div class="member-stats">
              <span class="stat">6/6 reportes</span>
              <div class="progress-mini">
                <div class="progress-fill-mini" style="width: 100%"></div>
              </div>
              <span class="percentage green">100%</span>
            </div>
          </div>
          <div class="member-row">
            <div class="member-info">
              <div class="member-avatar">JR</div>
              <div class="member-details">
                <span class="member-name">Juan Rodríguez</span>
                <span class="member-role">Analista</span>
              </div>
            </div>
            <div class="member-stats">
              <span class="stat">4/5 reportes</span>
              <div class="progress-mini">
                <div class="progress-fill-mini" style="width: 80%"></div>
              </div>
              <span class="percentage green">80%</span>
            </div>
          </div>
          <div class="member-row">
            <div class="member-info">
              <div class="member-avatar">AG</div>
              <div class="member-details">
                <span class="member-name">Ana García</span>
                <span class="member-role">Analista</span>
              </div>
            </div>
            <div class="member-stats">
              <span class="stat">3/5 reportes</span>
              <div class="progress-mini">
                <div class="progress-fill-mini warning" style="width: 60%"></div>
              </div>
              <span class="percentage yellow">60%</span>
            </div>
          </div>
          <div class="member-row">
            <div class="member-info">
              <div class="member-avatar">CP</div>
              <div class="member-details">
                <span class="member-name">Carlos Pérez</span>
                <span class="member-role">Analista Junior</span>
              </div>
            </div>
            <div class="member-stats">
              <span class="stat">3/4 reportes</span>
              <div class="progress-mini">
                <div class="progress-fill-mini" style="width: 75%"></div>
              </div>
              <span class="percentage green">75%</span>
            </div>
          </div>
          <div class="member-row">
            <div class="member-info">
              <div class="member-avatar">LS</div>
              <div class="member-details">
                <span class="member-name">Laura Sánchez</span>
                <span class="member-role">Analista Junior</span>
              </div>
            </div>
            <div class="member-stats">
              <span class="stat">2/4 reportes</span>
              <div class="progress-mini">
                <div class="progress-fill-mini warning" style="width: 50%"></div>
              </div>
              <span class="percentage yellow">50%</span>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <a href="/roles/supervisor/cumplimiento" class="link-action">Ver detalle completo</a>
        </div>
      </div>

      <!-- Reportes Pendientes de Revisión -->
      <div class="card pending-card">
        <div class="card-header">
          <h2 class="card-title">Pendientes de Revisión</h2>
          <span class="card-badge">4 reportes</span>
        </div>
        <div class="pending-list">
          <div class="pending-item urgent">
            <div class="pending-icon">
              <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                <polyline points="14 2 14 8 20 8"/>
              </svg>
            </div>
            <div class="pending-content">
              <div class="pending-header">
                <h4 class="pending-title">SUI-001 - Informe Comercial</h4>
                <span class="pending-badge urgent">Vence hoy</span>
              </div>
              <div class="pending-meta">
                <span>María López</span>
                <span>•</span>
                <span>Enviado hace 2 horas</span>
              </div>
            </div>
            <div class="pending-actions">
              <button class="btn-review">Revisar</button>
            </div>
          </div>

          <div class="pending-item warning">
            <div class="pending-icon">
              <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                <polyline points="14 2 14 8 20 8"/>
              </svg>
            </div>
            <div class="pending-content">
              <div class="pending-header">
                <h4 class="pending-title">CREG-045 - Resolución Tarifaria</h4>
                <span class="pending-badge warning">Vence en 3 días</span>
              </div>
              <div class="pending-meta">
                <span>Juan Rodríguez</span>
                <span>•</span>
                <span>Enviado ayer</span>
              </div>
            </div>
            <div class="pending-actions">
              <button class="btn-review">Revisar</button>
            </div>
          </div>

          <div class="pending-item">
            <div class="pending-icon">
              <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                <polyline points="14 2 14 8 20 8"/>
              </svg>
            </div>
            <div class="pending-content">
              <div class="pending-header">
                <h4 class="pending-title">ANH-012 - Informe Producción</h4>
                <span class="pending-badge">Vence en 7 días</span>
              </div>
              <div class="pending-meta">
                <span>Ana García</span>
                <span>•</span>
                <span>Enviado hace 3 días</span>
              </div>
            </div>
            <div class="pending-actions">
              <button class="btn-review">Revisar</button>
            </div>
          </div>

          <div class="pending-item">
            <div class="pending-icon">
              <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                <polyline points="14 2 14 8 20 8"/>
              </svg>
            </div>
            <div class="pending-content">
              <div class="pending-header">
                <h4 class="pending-title">SSPD-023 - Balance Usuarios</h4>
                <span class="pending-badge">Vence en 10 días</span>
              </div>
              <div class="pending-meta">
                <span>Carlos Pérez</span>
                <span>•</span>
                <span>Enviado hace 4 días</span>
              </div>
            </div>
            <div class="pending-actions">
              <button class="btn-review">Revisar</button>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <a href="/roles/supervisor/reportes" class="link-action">Ver todos los reportes</a>
        </div>
      </div>
    </div>

    <!-- Segunda fila -->
    <div class="content-grid">
      <!-- Cumplimiento por Entidad -->
      <div class="card entity-card">
        <div class="card-header">
          <h2 class="card-title">Cumplimiento por Entidad</h2>
        </div>
        <div class="entity-grid">
          <div class="entity-item">
            <div class="entity-header">
              <span class="entity-name">SUI</span>
              <span class="entity-percentage green">92%</span>
            </div>
            <div class="entity-progress">
              <div class="entity-fill" style="width: 92%"></div>
            </div>
            <div class="entity-detail">11/12 reportes</div>
          </div>
          <div class="entity-item">
            <div class="entity-header">
              <span class="entity-name">CREG</span>
              <span class="entity-percentage green">100%</span>
            </div>
            <div class="entity-progress">
              <div class="entity-fill" style="width: 100%"></div>
            </div>
            <div class="entity-detail">6/6 reportes</div>
          </div>
          <div class="entity-item">
            <div class="entity-header">
              <span class="entity-name">ANH</span>
              <span class="entity-percentage yellow">75%</span>
            </div>
            <div class="entity-progress">
              <div class="entity-fill warning" style="width: 75%"></div>
            </div>
            <div class="entity-detail">3/4 reportes</div>
          </div>
          <div class="entity-item">
            <div class="entity-header">
              <span class="entity-name">SSPD</span>
              <span class="entity-percentage red">50%</span>
            </div>
            <div class="entity-progress">
              <div class="entity-fill danger" style="width: 50%"></div>
            </div>
            <div class="entity-detail">1/2 reportes</div>
          </div>
        </div>
      </div>

      <!-- Alertas del Sistema -->
      <div class="card alerts-card">
        <div class="card-header">
          <h2 class="card-title">Alertas del Sistema</h2>
          <span class="card-badge danger">5 nuevas</span>
        </div>
        <div class="alerts-list">
          <div class="alert-item critical">
            <div class="alert-icon">
              <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
              </svg>
            </div>
            <div class="alert-content">
              <span class="alert-text">2 reportes SUI vencidos sin enviar</span>
              <span class="alert-time">Hace 1 hora</span>
            </div>
          </div>
          <div class="alert-item warning">
            <div class="alert-icon">
              <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="8" x2="12" y2="12"/>
              </svg>
            </div>
            <div class="alert-content">
              <span class="alert-text">Laura Sánchez tiene 2 tareas vencidas</span>
              <span class="alert-time">Hace 2 horas</span>
            </div>
          </div>
          <div class="alert-item warning">
            <div class="alert-icon">
              <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="8" x2="12" y2="12"/>
              </svg>
            </div>
            <div class="alert-content">
              <span class="alert-text">Reporte CREG-045 requiere revisión urgente</span>
              <span class="alert-time">Hace 3 horas</span>
            </div>
          </div>
          <div class="alert-item info">
            <div class="alert-icon">
              <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="16" x2="12" y2="12"/>
                <line x1="12" y1="8" x2="12.01" y2="8"/>
              </svg>
            </div>
            <div class="alert-content">
              <span class="alert-text">Nueva plantilla SUI disponible</span>
              <span class="alert-time">Hace 5 horas</span>
            </div>
          </div>
          <div class="alert-item success">
            <div class="alert-icon">
              <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
            </div>
            <div class="alert-content">
              <span class="alert-text">María López completó todos sus reportes</span>
              <span class="alert-time">Hace 6 horas</span>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <a href="/roles/supervisor/alertas" class="link-action">Ver todas las alertas</a>
        </div>
      </div>
    </div>

    <!-- Acciones Rápidas -->
    <div class="quick-actions">
      <h3 class="actions-title">Acciones Rápidas</h3>
      <div class="actions-grid">
        <a href="/roles/supervisor/reportes" class="action-card">
          <div class="action-icon">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
          </div>
          <span class="action-label">Revisar Pendientes</span>
        </a>
        <a href="/roles/supervisor/cumplimiento" class="action-card">
          <div class="action-icon">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="18" y1="20" x2="18" y2="10"/>
              <line x1="12" y1="20" x2="12" y2="4"/>
              <line x1="6" y1="20" x2="6" y2="14"/>
            </svg>
          </div>
          <span class="action-label">Ver Cumplimiento</span>
        </a>
        <a href="/roles/supervisor/evidencias" class="action-card">
          <div class="action-icon">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/>
            </svg>
          </div>
          <span class="action-label">Validar Evidencias</span>
        </a>
        <a href="/roles/supervisor/calendario" class="action-card">
          <div class="action-icon">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
          </div>
          <span class="action-label">Ver Calendario</span>
        </a>
      </div>
    </div>
  </div>
</SupervisorLayout>

<style>
  .dashboard-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* Welcome Section */
  .welcome-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: linear-gradient(135deg, var(--role-accent) 0%, var(--success-green-400) 100%);
    border-radius: 12px;
    color: var(--neutral-900);
  }

  .welcome-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
  }

  .welcome-subtitle {
    font-size: 0.875rem;
    opacity: 0.8;
    margin: 0.25rem 0 0;
  }

  .team-status {
    background: rgba(255,255,255,0.2);
    padding: 0.5rem 1rem;
    border-radius: 20px;
  }

  .status-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: white;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* KPIs Grid */
  .kpis-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .kpi-card {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .kpi-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    flex-shrink: 0;
  }

  .kpi-icon.blue { background: var(--color-primary-100); color: var(--color-primary-600); }
  .kpi-icon.green { background: var(--success-green-100); color: var(--success-green-600); }
  .kpi-icon.yellow { background: var(--warning-yellow-100); color: var(--warning-yellow-600); }
  .kpi-icon.red { background: var(--error-red-100); color: var(--error-red-600); }

  .kpi-content {
    flex: 1;
    min-width: 0;
  }

  .kpi-value {
    display: block;
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--neutral-900);
    line-height: 1;
  }

  .kpi-label {
    font-size: 0.8125rem;
    color: var(--neutral-500);
    display: block;
    margin: 0.25rem 0 0.5rem;
  }

  .kpi-trend {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .kpi-trend.up { color: var(--success-green-600); }

  .kpi-progress {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .progress-bar {
    height: 6px;
    background: var(--neutral-200);
    border-radius: 3px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: var(--role-accent);
    border-radius: 3px;
  }

  .progress-text {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  .detail-badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.6875rem;
    font-weight: 600;
  }

  .detail-badge.warning {
    background: var(--warning-yellow-100);
    color: var(--warning-yellow-700);
  }

  .detail-badge.danger {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  /* Content Grid */
  .content-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .card {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    overflow: hidden;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--neutral-100);
  }

  .card-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--neutral-800);
    margin: 0;
  }

  .card-badge {
    padding: 0.25rem 0.75rem;
    background: var(--role-accent);
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .card-badge.danger {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  .mini-select {
    padding: 0.375rem 0.75rem;
    border: 1px solid var(--neutral-200);
    border-radius: 6px;
    font-size: 0.8125rem;
    background: white;
    cursor: pointer;
  }

  .card-footer {
    padding: 0.875rem 1.25rem;
