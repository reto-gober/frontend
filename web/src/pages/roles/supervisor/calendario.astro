---
import SupervisorLayout from '../../../layouts/roles/SupervisorLayout.astro';
import SupervisorCalendarioPage from '../../../components/supervisor/SupervisorCalendarioPage';
---

<SupervisorLayout title="Calendario de supervision">
  <SupervisorCalendarioPage client:load />
</SupervisorLayout>

<style is:global>
  .calendario-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .calendario-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .calendar-controls {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .month-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--neutral-700);
    text-transform: capitalize;
    min-width: 200px;
    text-align: center;
  }

  .btn-icon {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    background: var(--neutral-100);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s;
    color: var(--neutral-600);
  }

  .btn-icon:hover {
    background: var(--color-primary-100);
    color: var(--color-primary-600);
  }

  .calendar-layout {
    display: grid;
    grid-template-columns: 2fr 320px;
    gap: 1.25rem;
    align-items: start;
  }

  .calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 1px;
    background: var(--neutral-200);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow-card);
  }

  .calendar-day-header {
    background: var(--neutral-100);
    padding: 0.75rem;
    text-align: center;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--neutral-600);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .calendar-day {
    background: white;
    padding: 0.75rem;
    min-height: 100px;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    transition: background 0.2s;
  }

  .calendar-day:hover {
    background: var(--neutral-50);
  }

  .calendar-day.empty {
    background: var(--neutral-50);
  }

  .calendar-day.today {
    background: var(--color-primary-50);
    border: 2px solid var(--color-primary-500);
  }

  .day-number {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--neutral-700);
  }

  .day-events {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
    overflow-y: auto;
  }

  .event-item {
    background: white;
    padding: 0.25rem;
    border-radius: 3px;
    border-left: 3px solid var(--color-primary-500);
    font-size: 0.7rem;
    overflow: hidden;
  }

  .event-title {
    font-weight: 600;
    color: var(--neutral-800);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .event-tipo {
    font-size: 0.65rem;
    color: var(--neutral-600);
    text-transform: uppercase;
  }

  .event-periodo {
    background: var(--color-primary-50);
  }

  .event-vencimiento {
    background: white;
  }

  .more-events {
    font-size: 0.65rem;
    color: var(--color-primary-600);
    font-weight: 600;
    text-align: center;
    margin-top: 0.25rem;
    background: var(--color-primary-50);
    padding: 0.125rem 0.25rem;
    border-radius: 3px;
  }

  .calendar-aside {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .calendar-card {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    padding: 1rem;
  }

  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }

  .pill {
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 700;
  }

  .pill-danger {
    background: var(--error-red-50);
    color: var(--error-red-700);
  }

  .incidencias-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .incidencia-item {
    display: grid;
    grid-template-columns: 12px 1fr;
    gap: 0.5rem;
    padding: 0.5rem;
    border-radius: 8px;
    border: 1px solid var(--neutral-200);
    cursor: pointer;
    transition: background 0.2s;
  }

  .incidencia-item:hover {
    background: var(--neutral-50);
  }

  .incidencia-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    margin-top: 0.35rem;
  }

  .incidencia-title {
    font-weight: 600;
    color: var(--neutral-800);
  }

  .incidencia-meta {
    font-size: 0.8rem;
    color: var(--neutral-500);
  }

  .empty-text {
    color: var(--neutral-500);
    font-size: 0.9rem;
  }

  .mini-stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
  }

  .mini-stat {
    display: flex;
    flex-direction: column;
    background: var(--neutral-50);
    border-radius: 8px;
    padding: 0.75rem;
    border: 1px solid var(--neutral-200);
  }

  .mini-label {
    font-size: 0.75rem;
    color: var(--neutral-500);
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .calendar-legend {
    display: flex;
    justify-content: center;
    gap: 2rem;
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    flex-wrap: wrap;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .legend-dot {
    width: 16px;
    height: 16px;
    border-radius: 4px;
  }

  .legend-item span {
    font-size: 0.875rem;
    color: var(--neutral-700);
  }

  .loading-spinner {
    display: inline-block;
    width: 40px;
    height: 40px;
    border: 4px solid var(--neutral-200);
    border-top-color: var(--color-primary-600);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  @media (max-width: 1024px) {
    .calendar-layout {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .calendar-day {
      min-height: 60px;
      padding: 0.5rem;
    }

    .day-number {
      font-size: 0.75rem;
    }

    .calendar-legend {
      gap: 1rem;
    }

    .legend-item span {
      font-size: 0.75rem;
    }
  }
</style>
