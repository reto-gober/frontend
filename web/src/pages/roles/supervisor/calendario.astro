---
import SupervisorLayout from '../../../layouts/roles/SupervisorLayout.astro';
import SupervisorCalendarioClient from '../../../components/supervisor/SupervisorCalendarioClient';
---

<SupervisorLayout title="Calendario del Equipo">
  <SupervisorCalendarioClient client:load />
</SupervisorLayout>
  <div class="calendario-page">
    <!-- Header -->
    <div class="page-header">
      <div class="header-info">
        <h1 class="page-title">Calendario del Equipo</h1>
        <p class="page-description">Vista general de entregas y vencimientos del equipo</p>
      </div>
      <div class="header-actions">
        <div class="view-toggle">
          <button class="view-btn active">Mes</button>
          <button class="view-btn">Semana</button>
          <button class="view-btn">Lista</button>
        </div>
        <select class="filter-select">
          <option value="">Todo el equipo</option>
          <option>María López</option>
          <option>Juan Rodríguez</option>
          <option>Ana García</option>
          <option>Carlos Pérez</option>
          <option>Laura Sánchez</option>
        </select>
      </div>
    </div>

    <div class="calendar-container">
      <!-- Calendar Main -->
      <div class="calendar-main">
        <!-- Calendar Navigation -->
        <div class="calendar-nav">
          <button class="nav-btn">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15 18 9 12 15 6"/>
            </svg>
          </button>
          <h2 class="month-title">Febrero 2025</h2>
          <button class="nav-btn">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 18 15 12 9 6"/>
            </svg>
          </button>
          <button class="btn-today">Hoy</button>
        </div>

        <!-- Calendar Grid -->
        <div class="calendar-grid">
          <!-- Header -->
          <div class="calendar-header">
            <div class="day-header">Dom</div>
            <div class="day-header">Lun</div>
            <div class="day-header">Mar</div>
            <div class="day-header">Mié</div>
            <div class="day-header">Jue</div>
            <div class="day-header">Vie</div>
            <div class="day-header">Sáb</div>
          </div>
          <!-- Days -->
          <div class="calendar-body">
            <!-- Week 1 -->
            <div class="day-cell other-month">
              <span class="day-number">26</span>
            </div>
            <div class="day-cell other-month">
              <span class="day-number">27</span>
            </div>
            <div class="day-cell other-month">
              <span class="day-number">28</span>
            </div>
            <div class="day-cell other-month">
              <span class="day-number">29</span>
            </div>
            <div class="day-cell other-month">
              <span class="day-number">30</span>
            </div>
            <div class="day-cell other-month">
              <span class="day-number">31</span>
            </div>
            <div class="day-cell">
              <span class="day-number">1</span>
            </div>
            <!-- Week 2 -->
            <div class="day-cell">
              <span class="day-number">2</span>
            </div>
            <div class="day-cell">
              <span class="day-number">3</span>
            </div>
            <div class="day-cell">
              <span class="day-number">4</span>
            </div>
            <div class="day-cell">
              <span class="day-number">5</span>
              <div class="event-dot completed"></div>
            </div>
            <div class="day-cell">
              <span class="day-number">6</span>
            </div>
            <div class="day-cell">
              <span class="day-number">7</span>
              <div class="event-dot completed"></div>
            </div>
            <div class="day-cell">
              <span class="day-number">8</span>
            </div>
            <!-- Week 3 -->
            <div class="day-cell">
              <span class="day-number">9</span>
            </div>
            <div class="day-cell">
              <span class="day-number">10</span>
              <div class="event-dot completed"></div>
              <div class="event-dot completed"></div>
            </div>
            <div class="day-cell">
              <span class="day-number">11</span>
            </div>
            <div class="day-cell today">
              <span class="day-number">12</span>
              <div class="event-dot urgent"></div>
            </div>
            <div class="day-cell">
              <span class="day-number">13</span>
              <div class="event-dot warning"></div>
              <div class="event-dot warning"></div>
            </div>
            <div class="day-cell">
              <span class="day-number">14</span>
              <div class="event-dot pending"></div>
            </div>
            <div class="day-cell">
              <span class="day-number">15</span>
            </div>
            <!-- Week 4 -->
            <div class="day-cell">
              <span class="day-number">16</span>
            </div>
            <div class="day-cell">
              <span class="day-number">17</span>
              <div class="event-dot pending"></div>
            </div>
            <div class="day-cell">
              <span class="day-number">18</span>
            </div>
            <div class="day-cell">
              <span class="day-number">19</span>
            </div>
            <div class="day-cell">
              <span class="day-number">20</span>
              <div class="event-dot pending"></div>
              <div class="event-dot pending"></div>
            </div>
            <div class="day-cell">
              <span class="day-number">21</span>
            </div>
            <div class="day-cell">
              <span class="day-number">22</span>
            </div>
            <!-- Week 5 -->
            <div class="day-cell">
              <span class="day-number">23</span>
            </div>
            <div class="day-cell">
              <span class="day-number">24</span>
            </div>
            <div class="day-cell">
              <span class="day-number">25</span>
              <div class="event-dot pending"></div>
            </div>
            <div class="day-cell">
              <span class="day-number">26</span>
            </div>
            <div class="day-cell">
              <span class="day-number">27</span>
            </div>
            <div class="day-cell">
              <span class="day-number">28</span>
              <div class="event-dot pending"></div>
              <div class="event-dot pending"></div>
              <div class="event-dot pending"></div>
            </div>
            <div class="day-cell other-month">
              <span class="day-number">1</span>
            </div>
          </div>
        </div>

        <!-- Legend -->
        <div class="calendar-legend">
          <div class="legend-item">
            <span class="legend-dot completed"></span>
            <span class="legend-label">Completado</span>
          </div>
          <div class="legend-item">
            <span class="legend-dot urgent"></span>
            <span class="legend-label">Urgente (hoy)</span>
          </div>
          <div class="legend-item">
            <span class="legend-dot warning"></span>
            <span class="legend-label">Próximo (1-3 días)</span>
          </div>
          <div class="legend-item">
            <span class="legend-dot pending"></span>
            <span class="legend-label">Pendiente</span>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="calendar-sidebar">
        <!-- Today's Events -->
        <div class="sidebar-section">
          <h3 class="section-title">
            <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <line x1="12" y1="8" x2="12" y2="12"/>
              <line x1="12" y1="16" x2="12.01" y2="16"/>
            </svg>
            Vence Hoy
          </h3>
          <div class="event-list">
            <div class="event-card urgent">
              <div class="event-time">23:59</div>
              <div class="event-info">
                <span class="event-title">Informe Comercial de Gas Natural</span>
                <span class="event-meta">
                  <span class="badge sui">SUI-001</span>
                  <span class="responsible">María López</span>
                </span>
              </div>
              <button class="event-action">
                <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Upcoming Events -->
        <div class="sidebar-section">
          <h3 class="section-title">
            <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12,6 12,12 16,14"/>
            </svg>
            Próximos 7 días
          </h3>
          <div class="event-list">
            <div class="event-card warning">
              <div class="event-date">13 Feb</div>
              <div class="event-info">
                <span class="event-title">Resolución Tarifaria</span>
                <span class="event-meta">
                  <span class="badge creg">CREG-045</span>
                  <span class="responsible">Juan Rodríguez</span>
                </span>
              </div>
              <button class="event-action">
                <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
              </button>
            </div>
            <div class="event-card warning">
              <div class="event-date">13 Feb</div>
              <div class="event-info">
                <span class="event-title">Balance Energético Mensual</span>
                <span class="event-meta">
                  <span class="badge creg">CREG-102</span>
                  <span class="responsible">Juan Rodríguez</span>
                </span>
              </div>
              <button class="event-action">
                <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
              </button>
            </div>
            <div class="event-card">
              <div class="event-date">14 Feb</div>
              <div class="event-info">
                <span class="event-title">Informe de Producción</span>
                <span class="event-meta">
                  <span class="badge anh">ANH-012</span>
                  <span class="responsible">Ana García</span>
                </span>
              </div>
              <button class="event-action">
                <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
              </button>
            </div>
            <div class="event-card">
              <div class="event-date">17 Feb</div>
              <div class="event-info">
                <span class="event-title">Balance de Usuarios</span>
                <span class="event-meta">
                  <span class="badge sspd">SSPD-023</span>
                  <span class="responsible">Carlos Pérez</span>
                </span>
              </div>
              <button class="event-action">
                <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Team Stats -->
        <div class="sidebar-section">
          <h3 class="section-title">
            <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
            Resumen del Equipo (Feb)
          </h3>
          <div class="team-stats">
            <div class="team-stat">
              <span class="stat-label">Total reportes</span>
              <span class="stat-value">24</span>
            </div>
            <div class="team-stat">
              <span class="stat-label">Completados</span>
              <span class="stat-value success">18</span>
            </div>
            <div class="team-stat">
              <span class="stat-label">Pendientes</span>
              <span class="stat-value warning">6</span>
            </div>
            <div class="team-stat">
              <span class="stat-label">Tasa cumplimiento</span>
              <span class="stat-value">87%</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</SupervisorLayout>

<style>
  .calendario-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-500);
    margin: 0.25rem 0 0;
  }

  .header-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .view-toggle {
    display: flex;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    overflow: hidden;
  }

  .view-btn {
    padding: 0.5rem 1rem;
    background: white;
    border: none;
    font-size: 0.875rem;
    cursor: pointer;
    color: var(--neutral-500);
    transition: all 0.2s;
  }

  .view-btn:not(:last-child) {
    border-right: 1px solid var(--neutral-200);
  }

  .view-btn.active {
    background: var(--role-accent);
    color: var(--neutral-900);
  }

  .view-btn:hover:not(.active) {
    background: var(--neutral-100);
  }

  .filter-select {
    padding: 0.5rem 1rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    font-size: 0.875rem;
    background: white;
    cursor: pointer;
  }

  /* Calendar Container */
  .calendar-container {
    display: grid;
    grid-template-columns: 1fr 340px;
    gap: 1.5rem;
  }

  /* Calendar Main */
  .calendar-main {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    padding: 1.5rem;
  }

  .calendar-nav {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .nav-btn {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    background: white;
    cursor: pointer;
    color: var(--neutral-500);
    transition: all 0.2s;
  }

  .nav-btn:hover {
    background: var(--neutral-100);
    color: var(--neutral-700);
  }

  .month-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--neutral-800);
    margin: 0;
  }

  .btn-today {
    margin-left: auto;
    padding: 0.5rem 1rem;
    background: var(--role-accent);
    border: none;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-900);
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-today:hover {
    background: var(--success-green-500);
    color: white;
  }

  /* Calendar Grid */
  .calendar-grid {
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    overflow: hidden;
  }

  .calendar-header {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    background: var(--neutral-100);
  }

  .day-header {
    padding: 0.75rem;
    text-align: center;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--neutral-500);
    text-transform: uppercase;
  }

  .calendar-body {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
  }

  .day-cell {
    min-height: 90px;
    padding: 0.5rem;
    border-top: 1px solid var(--neutral-200);
    border-right: 1px solid var(--neutral-200);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.25rem;
    cursor: pointer;
    transition: background 0.2s;
  }

  .day-cell:nth-child(7n) {
    border-right: none;
  }

  .day-cell:hover {
    background: var(--neutral-50);
  }

  .day-cell.other-month {
    background: var(--neutral-50);
  }

  .day-cell.other-month .day-number {
    color: var(--neutral-300);
  }

  .day-cell.today {
    background: rgba(74, 222, 128, 0.1);
  }

  .day-cell.today .day-number {
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--role-accent);
    color: var(--neutral-900);
    border-radius: 50%;
    font-weight: 600;
  }

  .day-number {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-700);
  }

  .event-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    margin-left: 2px;
  }

  .event-dot.completed {
    background: var(--success-green-500);
  }

  .event-dot.urgent {
    background: var(--error-red-500);
  }

  .event-dot.warning {
    background: var(--warning-yellow-500);
  }

  .event-dot.pending {
    background: var(--color-primary-500);
  }

  /* Legend */
  .calendar-legend {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--neutral-200);
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .legend-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .legend-dot.completed {
    background: var(--success-green-500);
  }

  .legend-dot.urgent {
    background: var(--error-red-500);
  }

  .legend-dot.warning {
    background: var(--warning-yellow-500);
  }

  .legend-dot.pending {
    background: var(--color-primary-500);
  }

  .legend-label {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  /* Sidebar */
  .calendar-sidebar {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .sidebar-section {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    padding: 1rem;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--neutral-800);
    margin: 0 0 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--neutral-100);
  }

  .section-title svg {
    color: var(--role-accent);
  }

  .event-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .event-card {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 0.75rem;
    background: var(--neutral-50);
    border-radius: 8px;
    border-left: 3px solid var(--color-primary-500);
    transition: all 0.2s;
  }

  .event-card:hover {
    background: var(--neutral-100);
  }

  .event-card.urgent {
    border-left-color: var(--error-red-500);
    background: var(--error-red-50);
  }

  .event-card.warning {
    border-left-color: var(--warning-yellow-500);
    background: var(--warning-yellow-50);
  }

  .event-time,
  .event-date {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--neutral-600);
    flex-shrink: 0;
    min-width: 50px;
  }

  .event-card.urgent .event-time {
    color: var(--error-red-600);
  }

  .event-info {
    flex: 1;
    min-width: 0;
  }

  .event-title {
    display: block;
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--neutral-800);
    margin-bottom: 0.25rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .event-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .badge {
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-size: 0.625rem;
    font-weight: 600;
    color: white;
  }

  .badge.sui { background: #3b82f6; }
  .badge.creg { background: #8b5cf6; }
  .badge.anh { background: #f59e0b; }
  .badge.sspd { background: #ef4444; }

  .responsible {
    font-size: 0.6875rem;
    color: var(--neutral-500);
  }

  .event-action {
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
    border: 1px solid var(--neutral-200);
    border-radius: 6px;
    cursor: pointer;
    color: var(--neutral-500);
    flex-shrink: 0;
    transition: all 0.2s;
  }

  .event-action:hover {
    background: var(--role-accent);
    border-color: var(--role-accent);
    color: var(--neutral-900);
  }

  /* Team Stats */
  .team-stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
  }

  .team-stat {
    display: flex;
    flex-direction: column;
    padding: 0.75rem;
    background: var(--neutral-50);
    border-radius: 8px;
  }

  .team-stat .stat-label {
    font-size: 0.6875rem;
    color: var(--neutral-500);
    margin-bottom: 0.25rem;
  }

  .team-stat .stat-value {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--neutral-800);
  }

  .team-stat .stat-value.success {
    color: var(--success-green-600);
  }

  .team-stat .stat-value.warning {
    color: var(--warning-yellow-700);
  }

  @media (max-width: 1200px) {
    .calendar-container {
      grid-template-columns: 1fr;
    }

    .calendar-sidebar {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      gap: 1rem;
    }

    .header-actions {
      flex-wrap: wrap;
    }

    .calendar-sidebar {
      grid-template-columns: 1fr;
    }

    .day-cell {
      min-height: 60px;
    }
  }
</style>

