---
import SupervisorLayout from '../../../layouts/roles/SupervisorLayout.astro';
---

<SupervisorLayout title="Reportes del Equipo">
  <div class="reportes-page">
    <!-- Header -->
    <div class="page-header">
      <div class="header-info">
        <h1 class="page-title">Reportes del Equipo</h1>
        <p class="page-description">Revisión y aprobación de reportes del equipo</p>
      </div>
    </div>

    <!-- Status Tabs -->
    <div class="status-tabs">
      <button class="status-tab active" data-status="all">
        <span class="tab-label">Todos</span>
        <span class="tab-count">24</span>
      </button>
      <button class="status-tab" data-status="pending">
        <span class="tab-label">Pendientes Revisión</span>
        <span class="tab-count warning">4</span>
      </button>
      <button class="status-tab" data-status="approved">
        <span class="tab-label">Aprobados</span>
        <span class="tab-count success">16</span>
      </button>
      <button class="status-tab" data-status="rejected">
        <span class="tab-label">Con Observaciones</span>
        <span class="tab-count danger">2</span>
      </button>
      <button class="status-tab" data-status="sent">
        <span class="tab-label">Enviados a Entidad</span>
        <span class="tab-count">18</span>
      </button>
    </div>

    <!-- Filters and Search -->
    <div class="filters-bar">
      <div class="search-box">
        <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"/>
          <path d="M21 21l-4.35-4.35"/>
        </svg>
        <input type="text" placeholder="Buscar por código, título o responsable..." class="search-input" />
      </div>
      <div class="filters">
        <select class="filter-select">
          <option value="">Responsable</option>
          <option>María López</option>
          <option>Juan Rodríguez</option>
          <option>Ana García</option>
          <option>Carlos Pérez</option>
          <option>Laura Sánchez</option>
        </select>
        <select class="filter-select">
          <option value="">Entidad</option>
          <option>SUI</option>
          <option>CREG</option>
          <option>ANH</option>
          <option>SSPD</option>
        </select>
        <select class="filter-select">
          <option value="">Período</option>
          <option>Febrero 2025</option>
          <option>Enero 2025</option>
        </select>
      </div>
    </div>

    <!-- Reports Grid -->
    <div class="reports-grid">
      <!-- Reporte Urgente - Pendiente Revisión -->
      <div class="report-card urgent">
        <div class="card-status-bar urgent"></div>
        <div class="card-header">
          <div class="card-badges">
            <span class="badge entity sui">SUI</span>
            <span class="badge status pending">Pendiente Revisión</span>
          </div>
          <span class="card-date urgent">Vence hoy</span>
        </div>
        <div class="card-body">
          <h3 class="card-title">Informe Comercial de Gas Natural</h3>
          <p class="card-code">SUI-001</p>
          <div class="card-meta">
            <div class="meta-item">
              <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                <circle cx="12" cy="7" r="4"/>
              </svg>
              María López
            </div>
            <div class="meta-item">
              <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12,6 12,12 16,14"/>
              </svg>
              Enviado hace 2h
            </div>
          </div>
          <div class="card-progress">
            <div class="progress-info">
              <span>Completado</span>
              <span>100%</span>
            </div>
            <div class="progress-bar">
              <div class="progress-fill" style="width: 100%"></div>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <button class="btn-secondary">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
            Ver Detalle
          </button>
          <button class="btn-primary">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9,11 12,14 22,4"/>
              <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
            </svg>
            Revisar
          </button>
        </div>
      </div>

      <!-- Reporte Warning - Pendiente Revisión -->
      <div class="report-card warning">
        <div class="card-status-bar warning"></div>
        <div class="card-header">
          <div class="card-badges">
            <span class="badge entity creg">CREG</span>
            <span class="badge status pending">Pendiente Revisión</span>
          </div>
          <span class="card-date warning">Vence en 3 días</span>
        </div>
        <div class="card-body">
          <h3 class="card-title">Resolución Tarifaria</h3>
          <p class="card-code">CREG-045</p>
          <div class="card-meta">
            <div class="meta-item">
              <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                <circle cx="12" cy="7" r="4"/>
              </svg>
              Juan Rodríguez
            </div>
            <div class="meta-item">
              <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12,6 12,12 16,14"/>
              </svg>
              Enviado ayer
            </div>
          </div>
          <div class="card-progress">
            <div class="progress-info">
              <span>Completado</span>
              <span>100%</span>
            </div>
            <div class="progress-bar">
              <div class="progress-fill" style="width: 100%"></div>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <button class="btn-secondary">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
            Ver Detalle
          </button>
          <button class="btn-primary">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9,11 12,14 22,4"/>
              <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
            </svg>
            Revisar
          </button>
        </div>
      </div>

      <!-- Reporte Aprobado y Enviado -->
      <div class="report-card sent">
        <div class="card-status-bar sent"></div>
        <div class="card-header">
          <div class="card-badges">
            <span class="badge entity sui">SUI</span>
            <span class="badge status sent">Enviado a Entidad</span>
          </div>
          <span class="card-date">Completado</span>
        </div>
        <div class="card-body">
          <h3 class="card-title">Calidad del Servicio</h3>
          <p class="card-code">SUI-008</p>
          <div class="card-meta">
            <div class="meta-item">
              <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                <circle cx="12" cy="7" r="4"/>
              </svg>
              María López
            </div>
            <div class="meta-item">
              <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              Enviado el 10 Feb
            </div>
          </div>
        </div>
        <div class="card-footer">
          <button class="btn-secondary">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
            Ver Detalle
          </button>
          <button class="btn-outline">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
              <polyline points="7,10 12,15 17,10"/>
              <line x1="12" y1="15" x2="12" y2="3"/>
            </svg>
            Descargar
          </button>
        </div>
      </div>

      <!-- Reporte con Observaciones -->
      <div class="report-card rejected">
        <div class="card-status-bar rejected"></div>
        <div class="card-header">
          <div class="card-badges">
            <span class="badge entity anh">ANH</span>
            <span class="badge status rejected">Con Observaciones</span>
          </div>
          <span class="card-date warning">Requiere corrección</span>
        </div>
        <div class="card-body">
          <h3 class="card-title">Informe de Producción</h3>
          <p class="card-code">ANH-012</p>
          <div class="card-meta">
            <div class="meta-item">
              <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                <circle cx="12" cy="7" r="4"/>
              </svg>
              Ana García
            </div>
            <div class="meta-item danger">
              <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
              </svg>
              3 observaciones
            </div>
          </div>
          <div class="observations-preview">
            <span class="obs-icon">!</span>
            <span class="obs-text">Datos incompletos en sección de producción</span>
          </div>
        </div>
        <div class="card-footer">
          <button class="btn-secondary">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
            Ver Detalle
          </button>
          <button class="btn-warning">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
            </svg>
            Ver Observaciones
          </button>
        </div>
      </div>

      <!-- Más reportes... -->
      <div class="report-card">
        <div class="card-status-bar pending"></div>
        <div class="card-header">
          <div class="card-badges">
            <span class="badge entity sspd">SSPD</span>
            <span class="badge status pending">Pendiente Revisión</span>
          </div>
          <span class="card-date">Vence en 10 días</span>
        </div>
        <div class="card-body">
          <h3 class="card-title">Balance de Usuarios</h3>
          <p class="card-code">SSPD-023</p>
          <div class="card-meta">
            <div class="meta-item">
              <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                <circle cx="12" cy="7" r="4"/>
              </svg>
              Carlos Pérez
            </div>
            <div class="meta-item">
              <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12,6 12,12 16,14"/>
              </svg>
              Enviado hace 4 días
            </div>
          </div>
          <div class="card-progress">
            <div class="progress-info">
              <span>Completado</span>
              <span>100%</span>
            </div>
            <div class="progress-bar">
              <div class="progress-fill" style="width: 100%"></div>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <button class="btn-secondary">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
            Ver Detalle
          </button>
          <button class="btn-primary">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9,11 12,14 22,4"/>
              <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
            </svg>
            Revisar
          </button>
        </div>
      </div>

      <div class="report-card sent">
        <div class="card-status-bar sent"></div>
        <div class="card-header">
          <div class="card-badges">
            <span class="badge entity creg">CREG</span>
            <span class="badge status sent">Enviado a Entidad</span>
          </div>
          <span class="card-date">Completado</span>
        </div>
        <div class="card-body">
          <h3 class="card-title">Balance Energético Mensual</h3>
          <p class="card-code">CREG-102</p>
          <div class="card-meta">
            <div class="meta-item">
              <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                <circle cx="12" cy="7" r="4"/>
              </svg>
              Juan Rodríguez
            </div>
            <div class="meta-item">
              <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              Enviado el 8 Feb
            </div>
          </div>
        </div>
        <div class="card-footer">
          <button class="btn-secondary">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
            Ver Detalle
          </button>
          <button class="btn-outline">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
              <polyline points="7,10 12,15 17,10"/>
              <line x1="12" y1="15" x2="12" y2="3"/>
            </svg>
            Descargar
          </button>
        </div>
      </div>
    </div>

    <!-- Pagination -->
    <div class="pagination">
      <button class="page-btn disabled">
        <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"/>
        </svg>
      </button>
      <button class="page-btn active">1</button>
      <button class="page-btn">2</button>
      <button class="page-btn">3</button>
      <span class="page-dots">...</span>
      <button class="page-btn">8</button>
      <button class="page-btn">
        <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"/>
        </svg>
      </button>
    </div>
  </div>
</SupervisorLayout>

<style>
  .reportes-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-500);
    margin: 0.25rem 0 0;
  }

  /* Status Tabs */
  .status-tabs {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .status-tab {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: white;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-600);
    cursor: pointer;
    transition: all 0.2s;
  }

  .status-tab:hover {
    background: var(--neutral-100);
  }

  .status-tab.active {
    background: var(--role-accent);
    border-color: var(--role-accent);
    color: var(--neutral-900);
  }

  .tab-count {
    padding: 0.125rem 0.5rem;
    background: var(--neutral-200);
    border-radius: 10px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .status-tab.active .tab-count {
    background: rgba(0,0,0,0.15);
  }

  .tab-count.warning {
    background: var(--warning-yellow-200);
    color: var(--warning-yellow-800);
  }

  .tab-count.success {
    background: var(--success-green-200);
    color: var(--success-green-800);
  }

  .tab-count.danger {
    background: var(--error-red-200);
    color: var(--error-red-800);
  }

  /* Filters Bar */
  .filters-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .search-box {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: var(--neutral-100);
    border-radius: 8px;
    flex: 1;
    max-width: 400px;
  }

  .search-box svg {
    color: var(--neutral-400);
    flex-shrink: 0;
  }

  .search-input {
    border: none;
    background: transparent;
    outline: none;
    font-size: 0.875rem;
    width: 100%;
  }

  .filters {
    display: flex;
    gap: 0.75rem;
  }

  .filter-select {
    padding: 0.625rem 1rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    font-size: 0.875rem;
    background: white;
    cursor: pointer;
  }

  /* Reports Grid */
  .reports-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .report-card {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .report-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-card-hover);
  }

  .card-status-bar {
    height: 4px;
    background: var(--neutral-200);
  }

  .card-status-bar.urgent { background: var(--error-red-500); }
  .card-status-bar.warning { background: var(--warning-yellow-500); }
  .card-status-bar.pending { background: var(--color-primary-500); }
  .card-status-bar.sent { background: var(--success-green-500); }
  .card-status-bar.rejected { background: var(--error-red-500); }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1rem 0;
  }

  .card-badges {
    display: flex;
    gap: 0.5rem;
  }

  .badge {
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.6875rem;
    font-weight: 600;
  }

  .badge.entity {
    color: white;
  }

  .badge.entity.sui { background: #3b82f6; }
  .badge.entity.creg { background: #8b5cf6; }
  .badge.entity.anh { background: #f59e0b; }
  .badge.entity.sspd { background: #ef4444; }

  .badge.status {
    background: var(--neutral-100);
    color: var(--neutral-600);
  }

  .badge.status.pending {
    background: var(--warning-yellow-100);
    color: var(--warning-yellow-700);
  }

  .badge.status.sent {
    background: var(--success-green-100);
    color: var(--success-green-700);
  }

  .badge.status.rejected {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  .card-date {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  .card-date.urgent {
    color: var(--error-red-600);
    font-weight: 600;
  }

  .card-date.warning {
    color: var(--warning-yellow-700);
    font-weight: 500;
  }

  .card-body {
    padding: 1rem;
    flex: 1;
  }

  .card-title {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--neutral-800);
    margin: 0 0 0.25rem;
  }

  .card-code {
    font-size: 0.75rem;
    color: var(--neutral-500);
    margin: 0 0 0.75rem;
  }

  .card-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  .meta-item.danger {
    color: var(--error-red-600);
  }

  .card-progress {
    padding-top: 0.75rem;
    border-top: 1px solid var(--neutral-100);
  }

  .progress-info {
    display: flex;
    justify-content: space-between;
    font-size: 0.75rem;
    color: var(--neutral-500);
    margin-bottom: 0.375rem;
  }

  .progress-bar {
    height: 6px;
    background: var(--neutral-200);
    border-radius: 3px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: var(--success-green-500);
    border-radius: 3px;
  }

  .observations-preview {
    display: flex;
    align-items: center;
    gap: 0.5rem;
