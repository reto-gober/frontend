---
import SupervisorLayout from '../../../layouts/roles/SupervisorLayout.astro';
---

<SupervisorLayout title="Alertas del Sistema">
  <div class="alertas-page">
    <!-- Header -->
    <div class="page-header">
      <div class="header-info">
        <h1 class="page-title">Alertas del Sistema</h1>
        <p class="page-description">Monitoreo de alertas y notificaciones del equipo</p>
      </div>
      <div class="header-actions">
        <button class="btn-secondary">
          <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" strokeWidth="2">
            <polyline points="9,11 12,14 22,4"/>
            <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
          </svg>
          Marcar todas como leídas
        </button>
      </div>
    </div>

    <!-- Alert Stats -->
    <div class="alert-stats">
      <div class="stat-card critical">
        <div class="stat-icon">
          <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
            <circle cx="12" cy="12" r="10"/>
            <line x1="12" y1="8" x2="12" y2="12"/>
            <line x1="12" y1="16" x2="12.01" y2="16"/>
          </svg>
        </div>
        <div class="stat-info">
          <span class="stat-value">5</span>
          <span class="stat-label">Críticas</span>
        </div>
      </div>
      <div class="stat-card warning">
        <div class="stat-icon">
          <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
            <line x1="12" y1="9" x2="12" y2="13"/>
            <line x1="12" y1="17" x2="12.01" y2="17"/>
          </svg>
        </div>
        <div class="stat-info">
          <span class="stat-value">12</span>
          <span class="stat-label">Advertencias</span>
        </div>
      </div>
      <div class="stat-card info">
        <div class="stat-icon">
          <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
            <circle cx="12" cy="12" r="10"/>
            <line x1="12" y1="16" x2="12" y2="12"/>
            <line x1="12" y1="8" x2="12.01" y2="8"/>
          </svg>
        </div>
        <div class="stat-info">
          <span class="stat-value">8</span>
          <span class="stat-label">Informativas</span>
        </div>
      </div>
      <div class="stat-card success">
        <div class="stat-icon">
          <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
        </div>
        <div class="stat-info">
          <span class="stat-value">23</span>
          <span class="stat-label">Resueltas Hoy</span>
        </div>
      </div>
    </div>

    <!-- Filter Tabs -->
    <div class="filter-tabs">
      <button class="filter-tab active">Todas (25)</button>
      <button class="filter-tab">Críticas (5)</button>
      <button class="filter-tab">Vencimientos (8)</button>
      <button class="filter-tab">Revisiones (6)</button>
      <button class="filter-tab">Sistema (6)</button>
    </div>

    <!-- Alerts List -->
    <div class="alerts-list">
      <!-- Alerta Crítica - Vencimiento Hoy -->
      <div class="alert-item critical">
        <div class="alert-icon">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" strokeWidth="2">
            <circle cx="12" cy="12" r="10"/>
            <line x1="12" y1="8" x2="12" y2="12"/>
            <line x1="12" y1="16" x2="12.01" y2="16"/>
          </svg>
        </div>
        <div class="alert-content">
          <div class="alert-header">
            <span class="alert-badge critical">CRÍTICO</span>
            <span class="alert-time">Hace 15 minutos</span>
          </div>
          <h3 class="alert-title">Reporte SUI-001 vence HOY</h3>
          <p class="alert-description">El reporte "Informe Comercial de Gas Natural" de María López aún no ha sido enviado y vence hoy a las 23:59.</p>
          <div class="alert-meta">
            <span class="meta-badge entity">SUI</span>
            <span class="meta-text">Responsable: María López</span>
          </div>
        </div>
        <div class="alert-actions">
          <button class="btn-action">Ver Reporte</button>
          <button class="btn-action primary">Notificar</button>
        </div>
      </div>

      <!-- Alerta Crítica - Vencimiento Mañana -->
      <div class="alert-item critical">
        <div class="alert-icon">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" strokeWidth="2">
            <circle cx="12" cy="12" r="10"/>
            <line x1="12" y1="8" x2="12" y2="12"/>
            <line x1="12" y1="16" x2="12.01" y2="16"/>
          </svg>
        </div>
        <div class="alert-content">
          <div class="alert-header">
            <span class="alert-badge critical">CRÍTICO</span>
            <span class="alert-time">Hace 1 hora</span>
          </div>
          <h3 class="alert-title">2 reportes CREG vencen mañana</h3>
          <p class="alert-description">Los reportes CREG-045 y CREG-102 de Juan Rodríguez están pendientes de revisión y vencen mañana.</p>
          <div class="alert-meta">
            <span class="meta-badge entity creg">CREG</span>
            <span class="meta-text">Responsable: Juan Rodríguez</span>
          </div>
        </div>
        <div class="alert-actions">
          <button class="btn-action">Ver Reportes</button>
          <button class="btn-action primary">Revisar Ahora</button>
        </div>
      </div>

      <!-- Alerta Warning - Revisión Pendiente -->
      <div class="alert-item warning">
        <div class="alert-icon">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" strokeWidth="2">
            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
            <line x1="12" y1="9" x2="12" y2="13"/>
            <line x1="12" y1="17" x2="12.01" y2="17"/>
          </svg>
        </div>
        <div class="alert-content">
          <div class="alert-header">
            <span class="alert-badge warning">ADVERTENCIA</span>
            <span class="alert-time">Hace 2 horas</span>
          </div>
          <h3 class="alert-title">4 reportes pendientes de tu revisión</h3>
          <p class="alert-description">Hay reportes de tu equipo esperando aprobación desde hace más de 48 horas.</p>
          <div class="alert-meta">
            <span class="meta-text">Responsables: María L., Carlos P., Ana G.</span>
          </div>
        </div>
        <div class="alert-actions">
          <button class="btn-action">Ver Cola</button>
          <button class="btn-action primary">Revisar</button>
        </div>
      </div>

      <!-- Alerta Warning - Cumplimiento Bajo -->
      <div class="alert-item warning">
        <div class="alert-icon">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" strokeWidth="2">
            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
            <line x1="12" y1="9" x2="12" y2="13"/>
            <line x1="12" y1="17" x2="12.01" y2="17"/>
          </svg>
        </div>
        <div class="alert-content">
          <div class="alert-header">
            <span class="alert-badge warning">ADVERTENCIA</span>
            <span class="alert-time">Hace 3 horas</span>
          </div>
          <h3 class="alert-title">Cumplimiento ANH bajo al 65%</h3>
          <p class="alert-description">El porcentaje de cumplimiento para la entidad ANH está por debajo del umbral mínimo (85%).</p>
          <div class="alert-meta">
            <span class="meta-badge entity anh">ANH</span>
            <span class="meta-text">Reportes atrasados: 3</span>
          </div>
        </div>
        <div class="alert-actions">
          <button class="btn-action">Ver Detalle</button>
          <button class="btn-action primary">Plan de Acción</button>
        </div>
      </div>

      <!-- Alerta Info - Nuevo reporte asignado -->
      <div class="alert-item info">
        <div class="alert-icon">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" strokeWidth="2">
            <circle cx="12" cy="12" r="10"/>
            <line x1="12" y1="16" x2="12" y2="12"/>
            <line x1="12" y1="8" x2="12.01" y2="8"/>
          </svg>
        </div>
        <div class="alert-content">
          <div class="alert-header">
            <span class="alert-badge info">INFO</span>
            <span class="alert-time">Hace 4 horas</span>
          </div>
          <h3 class="alert-title">Nuevo reporte enviado para revisión</h3>
          <p class="alert-description">Carlos Pérez ha enviado el reporte SSPD-023 "Balance de Usuarios" para tu aprobación.</p>
          <div class="alert-meta">
            <span class="meta-badge entity sspd">SSPD</span>
            <span class="meta-text">Responsable: Carlos Pérez</span>
          </div>
        </div>
        <div class="alert-actions">
          <button class="btn-action primary">Revisar</button>
        </div>
      </div>

      <!-- Alerta Info - Evidencia cargada -->
      <div class="alert-item info">
        <div class="alert-icon">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" strokeWidth="2">
            <circle cx="12" cy="12" r="10"/>
            <line x1="12" y1="16" x2="12" y2="12"/>
            <line x1="12" y1="8" x2="12.01" y2="8"/>
          </svg>
        </div>
        <div class="alert-content">
          <div class="alert-header">
            <span class="alert-badge info">INFO</span>
            <span class="alert-time">Hace 5 horas</span>
          </div>
          <h3 class="alert-title">Nueva evidencia cargada</h3>
          <p class="alert-description">Ana García ha cargado 3 archivos nuevos al reporte ANH-012 que requiere tu atención.</p>
          <div class="alert-meta">
            <span class="meta-badge entity anh">ANH</span>
            <span class="meta-text">Archivos: 3 documentos</span>
          </div>
        </div>
        <div class="alert-actions">
          <button class="btn-action">Ver Evidencias</button>
        </div>
      </div>

      <!-- Alerta Sistema -->
      <div class="alert-item system">
        <div class="alert-icon">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" strokeWidth="2">
            <circle cx="12" cy="12" r="3"/>
            <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>
          </svg>
        </div>
        <div class="alert-content">
          <div class="alert-header">
            <span class="alert-badge system">SISTEMA</span>
            <span class="alert-time">Hace 6 horas</span>
          </div>
          <h3 class="alert-title">Mantenimiento programado</h3>
          <p class="alert-description">El sistema estará en mantenimiento el próximo domingo de 2:00 AM a 4:00 AM. Los reportes deben enviarse antes de esta fecha.</p>
        </div>
        <div class="alert-actions">
          <button class="btn-action">Entendido</button>
        </div>
      </div>

      <!-- Alerta Success - Reporte enviado -->
      <div class="alert-item success">
        <div class="alert-icon">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" strokeWidth="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
        </div>
        <div class="alert-content">
          <div class="alert-header">
            <span class="alert-badge success">COMPLETADO</span>
            <span class="alert-time">Hace 8 horas</span>
          </div>
          <h3 class="alert-title">Reporte CREG-102 enviado a entidad</h3>
          <p class="alert-description">El reporte "Balance Energético Mensual" fue aprobado y enviado exitosamente a la entidad CREG.</p>
          <div class="alert-meta">
            <span class="meta-badge entity creg">CREG</span>
            <span class="meta-text">Responsable: Juan Rodríguez</span>
          </div>
        </div>
        <div class="alert-actions">
          <button class="btn-action">Ver Confirmación</button>
        </div>
      </div>
    </div>

    <!-- Load More -->
    <div class="load-more">
      <button class="btn-load-more">
        Cargar más alertas
        <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" strokeWidth="2">
          <polyline points="6 9 12 15 18 9"/>
        </svg>
      </button>
    </div>
  </div>
</SupervisorLayout>

<style>
  .alertas-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-500);
    margin: 0.25rem 0 0;
  }

  .btn-secondary {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: white;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-600);
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-secondary:hover {
    background: var(--neutral-100);
  }

  /* Alert Stats */
  .alert-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .stat-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .stat-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
  }

  .stat-card.critical .stat-icon {
    background: var(--error-red-100);
    color: var(--error-red-600);
  }

  .stat-card.warning .stat-icon {
    background: var(--warning-yellow-100);
    color: var(--warning-yellow-700);
  }

  .stat-card.info .stat-icon {
    background: var(--color-primary-100);
    color: var(--color-primary-600);
  }

  .stat-card.success .stat-icon {
    background: var(--success-green-100);
    color: var(--success-green-600);
  }

  .stat-info {
    display: flex;
    flex-direction: column;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  /* Filter Tabs */
  .filter-tabs {
    display: flex;
    gap: 0.5rem;
    padding: 0.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .filter-tab {
    padding: 0.625rem 1rem;
    background: transparent;
    border: none;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-500);
    cursor: pointer;
    transition: all 0.2s;
  }

  .filter-tab:hover {
    background: var(--neutral-100);
    color: var(--neutral-700);
  }

  .filter-tab.active {
    background: var(--role-accent);
    color: var(--neutral-900);
  }

  /* Alerts List */
  .alerts-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .alert-item {
    display: flex;
    gap: 1rem;
    padding: 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    border-left: 4px solid transparent;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .alert-item:hover {
    transform: translateX(4px);
    box-shadow: var(--shadow-card-hover);
  }

  .alert-item.critical {
    border-left-color: var(--error-red-500);
  }

  .alert-item.warning {
    border-left-color: var(--warning-yellow-500);
  }

  .alert-item.info {
    border-left-color: var(--color-primary-500);
  }

  .alert-item.success {
    border-left-color: var(--success-green-500);
  }

  .alert-item.system {
    border-left-color: var(--neutral-400);
  }

  .alert-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    flex-shrink: 0;
  }

  .alert-item.critical .alert-icon {
    background: var(--error-red-100);
    color: var(--error-red-600);
  }

  .alert-item.warning .alert-icon {
    background: var(--warning-yellow-100);
    color: var(--warning-yellow-700);
  }

  .alert-item.info .alert-icon {
    background: var(--color-primary-100);
    color: var(--color-primary-600);
  }

  .alert-item.success .alert-icon {
    background: var(--success-green-100);
    color: var(--success-green-600);
  }

  .alert-item.system .alert-icon {
    background: var(--neutral-200);
    color: var(--neutral-600);
  }

  .alert-content {
    flex: 1;
    min-width: 0;
  }

  .alert-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.375rem;
  }

  .alert-badge {
    padding: 0.125rem 0.5rem;
    border-radius: 4px;
    font-size: 0.625rem;
    font-weight: 700;
    letter-spacing: 0.5px;
  }

  .alert-badge.critical {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  .alert-badge.warning {
    background: var(--warning-yellow-100);
    color: var(--warning-yellow-800);
  }

  .alert-badge.info {
    background: var(--color-primary-100);
    color: var(--color-primary-700);
  }

  .alert-badge.success {
    background: var(--success-green-100);
    color: var(--success-green-700);
  }

  .alert-badge.system {
    background: var(--neutral-200);
    color: var(--neutral-600);
  }

  .alert-time {
    font-size: 0.75rem;
    color: var(--neutral-400);
  }

  .alert-title {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--neutral-800);
    margin: 0 0 0.25rem;
  }

  .alert-description {
    font-size: 0.8125rem;
    color: var(--neutral-500);
    margin: 0 0 0.5rem;
    line-height: 1.4;
  }

  .alert-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .meta-badge {
    padding: 0.125rem 0.5rem;
    border-radius: 4px;
    font-size: 0.6875rem;
    font-weight: 600;
  }

  .meta-badge.entity {
    background: #3b82f6;
    color: white;
  }

  .meta-badge.entity.creg {
    background: #8b5cf6;
  }

  .meta-badge.entity.anh {
    background: #f59e0b;
  }

  .meta-badge.entity.sspd {
    background: #ef4444;
  }

  .meta-text {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  .alert-actions {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .btn-action {
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.8125rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    background: var(--neutral-100);
    border: none;
    color: var(--neutral-600);
    white-space: nowrap;
  }

  .btn-action:hover {
    background: var(--neutral-200);
  }

  .btn-action.primary {
    background: var(--role-accent);
    color: var(--neutral-900);
  }

  .btn-action.primary:hover {
    background: var(--success-green-500);
    color: white;
  }

  /* Load More */
  .load-more {
    display: flex;
    justify-content: center;
  }

  .btn-load-more {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: white;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-600);
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-load-more:hover {
    background: var(--neutral-100);
    border-color: var(--neutral-300);
  }

  @media (max-width: 1024px) {
    .alert-stats {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .alert-stats {
      grid-template-columns: 1fr;
    }

    .page-header {
      flex-direction: column;
      gap: 1rem;
    }

    .filter-tabs {
      flex-wrap: wrap;
    }

    .alert-item {
      flex-direction: column;
    }

