<style>
  .evidencias-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-500);
    margin: 0.25rem 0 0;
  }

  .header-stats {
    display: flex;
    gap: 1rem;
  }

  .stat-pill {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: white;
    border-radius: 24px;
    box-shadow: var(--shadow-card);
  }

  .stat-value {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--role-accent);
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  /* Filters */
  .filters-bar {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .search-box {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: var(--neutral-100);
    border-radius: 8px;
    flex: 1;
    max-width: 350px;
  }

  .search-box svg {
    color: var(--neutral-400);
    flex-shrink: 0;
  }

  .search-input {
    border: none;
    background: transparent;
    outline: none;
    font-size: 0.875rem;
    width: 100%;
  }

  .filters {
    display: flex;
    gap: 0.75rem;
  }

  .filter-select {
    padding: 0.625rem 1rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    font-size: 0.875rem;
    background: white;
    cursor: pointer;
  }

  .view-toggle {
    display: flex;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    overflow: hidden;
    margin-left: auto;
  }

  .view-btn {
    padding: 0.5rem 0.75rem;
    background: white;
    border: none;
    cursor: pointer;
    color: var(--neutral-500);
    transition: all 0.2s;
  }

  .view-btn:first-child {
    border-right: 1px solid var(--neutral-200);
  }

  .view-btn.active {
    background: var(--role-accent);
    color: var(--neutral-900);
  }

  .view-btn:hover:not(.active) {
    background: var(--neutral-100);
  }

  /* Evidence Grid */
  .evidence-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .evidence-card {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .evidence-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-card-hover);
