          <circle cx="11" cy="11" r="8"/>
          <path d="M21 21l-4.35-4.35"/>
        </svg>
        <input type="text" placeholder="Buscar evidencia por nombre o reporte..." class="search-input" />
      </div>
      <div class="filters">
        <select class="filter-select">
          <option value="">Tipo de archivo</option>
          <option>Documento</option>
          <option>Imagen</option>
          <option>Excel</option>
          <option>PDF</option>
        </select>
        <select class="filter-select">
          <option value="">Responsable</option>
          <option>María López</option>
          <option>Juan Rodríguez</option>
          <option>Ana García</option>
          <option>Carlos Pérez</option>
        </select>
        <select class="filter-select">
          <option value="">Estado</option>
          <option>Pendiente</option>
          <option>Aprobado</option>
          <option>Con Observaciones</option>
        </select>
      </div>
      <div class="view-toggle">
        <button class="view-btn active" title="Vista de cuadrícula">
