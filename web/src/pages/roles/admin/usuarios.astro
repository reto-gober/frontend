---
import AdminLayout from '../../../layouts/roles/AdminLayout.astro';
import AdminUsuariosClient from '../../../components/admin/AdminUsuariosClient';
---

<AdminLayout title="GestiÃ³n de Usuarios">
  <AdminUsuariosClient client:load />
</AdminLayout>

<style is:global>
  .usuarios-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* Header */
  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .header-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-600);
    margin: 0;
  }

  .btn-primary {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--color-primary-600);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-primary:hover {
    background: var(--color-primary-700);
    transform: translateY(-1px);
    box-shadow: var(--shadow-hover);
  }

  .btn-primary svg {
    flex-shrink: 0;
  }

  /* Filters Bar */
  .filters-bar {
    display: flex;
    gap: 1rem;
    padding: 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .search-box {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: var(--neutral-50);
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
  }

  .search-box svg {
    color: var(--neutral-500);
    flex-shrink: 0;
  }

  .search-input {
    flex: 1;
    border: none;
    background: transparent;
    font-size: 0.875rem;
    color: var(--neutral-900);
    outline: none;
  }

  .search-input::placeholder {
    color: var(--neutral-500);
  }

  .filter-group {
    display: flex;
    gap: 0.75rem;
  }

  .filter-select {
    padding: 0.75rem 1rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    background: white;
    font-size: 0.875rem;
    color: var(--neutral-700);
    cursor: pointer;
    transition: all 0.2s;
  }

  .filter-select:hover {
    border-color: var(--color-primary-400);
  }

  .filter-select:focus {
    outline: none;
    border-color: var(--color-primary-500);
    box-shadow: 0 0 0 3px rgba(61, 133, 209, 0.1);
  }

  /* Table */
  .table-container {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    overflow: hidden;
  }

  .users-table {
    width: 100%;
    border-collapse: collapse;
  }

  .users-table thead {
    background: var(--neutral-50);
  }

  .users-table th {
    padding: 1rem 1.25rem;
    text-align: left;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--neutral-600);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .users-table tbody tr {
    border-bottom: 1px solid var(--neutral-100);
    transition: background 0.2s;
  }

  .users-table tbody tr:hover {
    background: var(--neutral-50);
  }

  .users-table td {
    padding: 1rem 1.25rem;
    font-size: 0.875rem;
    color: var(--neutral-700);
  }

  /* User Cell */
  .user-cell {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .user-avatar {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 700;
    color: white;
    flex-shrink: 0;
  }

  .user-avatar.blue { background: var(--color-primary-600); }
  .user-avatar.green { background: var(--success-green-600); }
  .user-avatar.purple { background: var(--secondary-purple-600); }
  .user-avatar.orange { background: var(--accent-orange-600); }
  .user-avatar.red { background: var(--error-red-600); }

  .user-name {
    font-weight: 600;
    color: var(--neutral-900);
  }

  /* Badges */
  .badge {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: capitalize;
  }

  .badge.role-admin {
    background: var(--color-primary-100);
    color: var(--color-primary-700);
  }

  .badge.role-supervisor {
    background: var(--success-green-100);
    color: var(--success-green-700);
  }

  .badge.role-responsable {
    background: var(--accent-orange-100);
    color: var(--accent-orange-700);
  }

  .badge.role-auditor {
    background: var(--secondary-purple-100);
    color: var(--secondary-purple-700);
  }

  .badge.role-default {
    background: var(--neutral-100);
    color: var(--neutral-700);
  }

  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .status-badge.active {
    background: var(--success-green-100);
    color: var(--success-green-700);
  }

  .status-badge.inactive {
    background: var(--neutral-200);
    color: var(--neutral-600);
  }

  /* Action Buttons */
  .action-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .btn-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    background: var(--neutral-100);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
    color: var(--neutral-600);
  }

  .btn-icon:hover {
    background: var(--neutral-200);
    color: var(--neutral-900);
  }

  .btn-icon.danger:hover {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  /* Pagination */
  .pagination {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .pagination-info {
    font-size: 0.875rem;
    color: var(--neutral-600);
  }

  /* Loading State */
  .loading-spinner {
    display: inline-block;
    width: 40px;
    height: 40px;
    border: 4px solid var(--neutral-200);
    border-top-color: var(--color-primary-600);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .filters-bar {
      flex-direction: column;
    }

    .filter-group {
      width: 100%;
    }

    .filter-select {
      flex: 1;
    }
  }

  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .table-container {
      overflow-x: auto;
    }

    .users-table {
      min-width: 800px;
    }
  }
</style>

