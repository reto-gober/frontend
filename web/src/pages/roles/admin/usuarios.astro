---
import AdminLayout from '../../../layouts/roles/AdminLayout.astro';
---

<AdminLayout title="Gestión de Usuarios">
  <div class="usuarios-page">
    <!-- Header con acciones -->
    <div class="page-header">
      <div class="header-info">
        <h1 class="page-title">Gestión de Usuarios</h1>
        <p class="page-description">Administra los usuarios del sistema y sus roles</p>
      </div>
      <button class="btn-primary" id="btnNuevoUsuario">
        <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
          <circle cx="8.5" cy="7" r="4"/>
          <line x1="20" y1="8" x2="20" y2="14"/>
          <line x1="23" y1="11" x2="17" y2="11"/>
        </svg>
        Nuevo Usuario
      </button>
    </div>

    <!-- Filtros y búsqueda -->
    <div class="filters-bar">
      <div class="search-box">
        <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"/>
          <path d="M21 21l-4.35-4.35"/>
        </svg>
        <input type="text" placeholder="Buscar usuarios..." class="search-input" />
      </div>
      <div class="filter-group">
        <select class="filter-select">
          <option value="">Todos los roles</option>
          <option value="admin">Administrador</option>
          <option value="responsable">Responsable</option>
          <option value="supervisor">Supervisor</option>
          <option value="auditor">Auditor</option>
        </select>
        <select class="filter-select">
          <option value="">Todos los estados</option>
          <option value="activo">Activo</option>
          <option value="inactivo">Inactivo</option>
        </select>
        <select class="filter-select">
          <option value="">Todas las entidades</option>
          <option value="creg">CREG</option>
          <option value="sui">SUI</option>
          <option value="anh">ANH</option>
        </select>
      </div>
    </div>

    <!-- Tabla de usuarios -->
    <div class="table-container">
      <table class="users-table">
        <thead>
          <tr>
            <th>Usuario</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Entidad</th>
            <th>Estado</th>
            <th>Último acceso</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <div class="user-cell">
                <div class="user-avatar blue">JR</div>
                <span class="user-name">Juan Rodríguez</span>
              </div>
            </td>
            <td>juan.rodriguez@llanogas.com</td>
            <td><span class="badge role-responsable">Responsable</span></td>
            <td>CREG</td>
            <td><span class="status-badge active">Activo</span></td>
            <td>Hace 15 min</td>
            <td>
              <div class="action-buttons">
                <button class="btn-icon" title="Editar">
                  <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                  </svg>
                </button>
                <button class="btn-icon danger" title="Eliminar">
                  <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 6h18"/>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                  </svg>
                </button>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <div class="user-cell">
                <div class="user-avatar green">MC</div>
                <span class="user-name">María Castro</span>
              </div>
            </td>
            <td>maria.castro@llanogas.com</td>
            <td><span class="badge role-supervisor">Supervisor</span></td>
            <td>SUI</td>
            <td><span class="status-badge active">Activo</span></td>
            <td>Hace 1 hora</td>
            <td>
              <div class="action-buttons">
                <button class="btn-icon" title="Editar">
                  <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                  </svg>
                </button>
                <button class="btn-icon danger" title="Eliminar">
                  <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 6h18"/>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                  </svg>
                </button>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <div class="user-cell">
                <div class="user-avatar purple">AL</div>
                <span class="user-name">Andrea López</span>
              </div>
            </td>
            <td>andrea.lopez@llanogas.com</td>
            <td><span class="badge role-auditor">Auditor</span></td>
            <td>Todas</td>
            <td><span class="status-badge active">Activo</span></td>
            <td>Hace 2 horas</td>
            <td>
              <div class="action-buttons">
                <button class="btn-icon" title="Editar">
                  <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                  </svg>
                </button>
                <button class="btn-icon danger" title="Eliminar">
                  <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 6h18"/>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                  </svg>
                </button>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <div class="user-cell">
                <div class="user-avatar orange">PM</div>
                <span class="user-name">Pedro Martínez</span>
              </div>
            </td>
            <td>pedro.martinez@llanogas.com</td>
            <td><span class="badge role-responsable">Responsable</span></td>
            <td>ANH</td>
            <td><span class="status-badge inactive">Inactivo</span></td>
            <td>Hace 5 días</td>
            <td>
              <div class="action-buttons">
                <button class="btn-icon" title="Editar">
                  <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                  </svg>
                </button>
                <button class="btn-icon danger" title="Eliminar">
                  <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 6h18"/>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                  </svg>
                </button>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <div class="user-cell">
                <div class="user-avatar blue">AD</div>
                <span class="user-name">Admin Principal</span>
              </div>
            </td>
            <td>admin@llanogas.com</td>
            <td><span class="badge role-admin">Administrador</span></td>
            <td>Todas</td>
            <td><span class="status-badge active">Activo</span></td>
            <td>En línea</td>
            <td>
              <div class="action-buttons">
                <button class="btn-icon" title="Editar">
                  <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                  </svg>
                </button>
                <button class="btn-icon danger" title="Eliminar" disabled>
                  <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 6h18"/>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                  </svg>
                </button>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Paginación -->
    <div class="pagination">
      <span class="pagination-info">Mostrando 1-5 de 42 usuarios</span>
      <div class="pagination-controls">
        <button class="pagination-btn" disabled>
          <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15,18 9,12 15,6"/>
          </svg>
        </button>
        <button class="pagination-btn active">1</button>
        <button class="pagination-btn">2</button>
        <button class="pagination-btn">3</button>
        <span class="pagination-ellipsis">...</span>
        <button class="pagination-btn">9</button>
        <button class="pagination-btn">
          <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9,18 15,12 9,6"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Modal Nuevo/Editar Usuario -->
  <div class="modal-overlay" id="modalUsuario">
    <div class="modal-container">
      <div class="modal-header">
        <h2 class="modal-title">Nuevo Usuario</h2>
        <button class="modal-close" id="btnCloseModal">
          <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="18" y1="6" x2="6" y2="18"/>
            <line x1="6" y1="6" x2="18" y2="18"/>
          </svg>
        </button>
      </div>
      <form class="modal-form">
        <div class="form-row">
          <div class="form-group">
            <label class="form-label">Nombre completo</label>
            <input type="text" class="form-input" placeholder="Ingrese nombre completo" />
          </div>
          <div class="form-group">
            <label class="form-label">Email</label>
            <input type="email" class="form-input" placeholder="correo@llanogas.com" />
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <label class="form-label">Rol</label>
            <select class="form-input">
              <option value="">Seleccionar rol</option>
              <option value="admin">Administrador</option>
              <option value="responsable">Responsable</option>
              <option value="supervisor">Supervisor</option>
              <option value="auditor">Auditor</option>
            </select>
          </div>
          <div class="form-group">
            <label class="form-label">Entidad asignada</label>
            <select class="form-input">
              <option value="">Seleccionar entidad</option>
              <option value="creg">CREG</option>
              <option value="sui">SUI</option>
              <option value="anh">ANH</option>
              <option value="todas">Todas las entidades</option>
            </select>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <label class="form-label">Contraseña</label>
            <input type="password" class="form-input" placeholder="Mínimo 8 caracteres" />
          </div>
          <div class="form-group">
            <label class="form-label">Confirmar contraseña</label>
            <input type="password" class="form-input" placeholder="Repetir contraseña" />
          </div>
        </div>
        <div class="form-group">
          <label class="form-label">
            <input type="checkbox" checked /> Enviar credenciales por correo
          </label>
        </div>
        <div class="modal-actions">
          <button type="button" class="btn-secondary" id="btnCancelModal">Cancelar</button>
          <button type="submit" class="btn-primary">Crear Usuario</button>
        </div>
      </form>
    </div>
  </div>
</AdminLayout>

<style>
  .usuarios-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-500);
    margin: 0.25rem 0 0;
  }

  .btn-primary {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--color-primary-600);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
  }

  .btn-primary:hover {
    background: var(--color-primary-700);
  }

  /* Filtros */
  .filters-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    padding: 1rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .search-box {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--neutral-100);
    border-radius: 8px;
    min-width: 250px;
  }

  .search-box svg {
    color: var(--neutral-400);
  }

  .search-input {
    border: none;
    background: transparent;
    outline: none;
    font-size: 0.875rem;
    width: 100%;
  }

  .filter-group {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .filter-select {
    padding: 0.5rem 1rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    font-size: 0.875rem;
    background: white;
    cursor: pointer;
  }

  /* Tabla */
  .table-container {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    overflow: hidden;
  }

  .users-table {
    width: 100%;
    border-collapse: collapse;
  }

  .users-table th,
  .users-table td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid var(--neutral-100);
  }

  .users-table th {
    background: var(--neutral-50);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--neutral-600);
  }

  .users-table td {
    font-size: 0.875rem;
    color: var(--neutral-700);
  }

  .users-table tr:hover {
    background: var(--neutral-50);
  }

  .user-cell {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .user-avatar {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 600;
    color: white;
  }

  .user-avatar.blue { background: var(--color-primary-600); }
  .user-avatar.green { background: var(--success-green-600); }
  .user-avatar.purple { background: var(--secondary-purple-600); }
  .user-avatar.orange { background: var(--accent-orange-600); }

  .user-name {
    font-weight: 500;
    color: var(--neutral-800);
  }

  /* Badges */
  .badge {
    display: inline-flex;
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .badge.role-admin { background: var(--color-primary-100); color: var(--color-primary-700); }
  .badge.role-responsable { background: #FEF3C7; color: #92400E; }
  .badge.role-supervisor { background: var(--success-green-100); color: var(--success-green-700); }
  .badge.role-auditor { background: var(--secondary-purple-100); color: var(--secondary-purple-700); }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .status-badge.active {
    background: var(--success-green-100);
    color: var(--success-green-700);
  }

  .status-badge.inactive {
    background: var(--neutral-100);
    color: var(--neutral-600);
  }

  /* Action Buttons */
  .action-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .btn-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--neutral-200);
    border-radius: 6px;
    background: white;
    color: var(--neutral-600);
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-icon:hover {
    background: var(--neutral-100);
    color: var(--neutral-800);
  }

  .btn-icon.danger:hover {
    background: var(--error-red-100);
    color: var(--error-red-600);
    border-color: var(--error-red-200);
  }

  .btn-icon:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* Pagination */
  .pagination {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .pagination-info {
    font-size: 0.875rem;
    color: var(--neutral-600);
  }

  .pagination-controls {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .pagination-btn {
    min-width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--neutral-200);
    border-radius: 6px;
    background: white;
    font-size: 0.875rem;
    color: var(--neutral-600);
    cursor: pointer;
    transition: all 0.2s;
  }

  .pagination-btn:hover:not(:disabled) {
    background: var(--neutral-100);
  }

  .pagination-btn.active {
    background: var(--color-primary-600);
    border-color: var(--color-primary-600);
    color: white;
  }

  .pagination-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .pagination-ellipsis {
    padding: 0 0.5rem;
    color: var(--neutral-400);
  }

  /* Modal */
  .modal-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }

  .modal-overlay.active {
    display: flex;
  }

  .modal-container {
    width: 100%;
    max-width: 560px;
    background: white;
    border-radius: 16px;
    box-shadow: var(--shadow-2xl);
    margin: 1rem;
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--neutral-100);
  }

  .modal-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .modal-close {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    border-radius: 8px;
    background: transparent;
    color: var(--neutral-500);
    cursor: pointer;
    transition: all 0.2s;
  }

  .modal-close:hover {
    background: var(--neutral-100);
    color: var(--neutral-800);
  }

  .modal-form {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-700);
  }

  .form-input {
    padding: 0.75rem 1rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    font-size: 0.875rem;
    transition: border-color 0.2s;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-primary-500);
  }

  .modal-actions {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .btn-secondary {
    padding: 0.75rem 1.25rem;
    background: white;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    font-weight: 600;
    color: var(--neutral-600);
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-secondary:hover {
    background: var(--neutral-100);
  }
</style>

<script>
  // Toggle modal
  const modal = document.getElementById('modalUsuario');
  const btnNuevo = document.getElementById('btnNuevoUsuario');
  const btnClose = document.getElementById('btnCloseModal');
  const btnCancel = document.getElementById('btnCancelModal');

  btnNuevo?.addEventListener('click', () => modal?.classList.add('active'));
  btnClose?.addEventListener('click', () => modal?.classList.remove('active'));
  btnCancel?.addEventListener('click', () => modal?.classList.remove('active'));
  
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) modal.classList.remove('active');
  });
</script>

