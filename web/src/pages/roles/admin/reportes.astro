---
import AdminLayout from '../../../layouts/roles/AdminLayout.astro';
import AdminReportesClient from '../../../components/admin/AdminReportesClient';
---

<AdminLayout title="GestiÃ³n de Reportes">
  <AdminReportesClient client:load />
</AdminLayout>

<style is:global>
  .reportes-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .header-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-600);
    margin: 0;
  }

  .header-actions {
    display: flex;
    gap: 0.75rem;
  }

  .btn-primary, .btn-secondary {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-primary {
    background: var(--color-primary-600);
    color: white;
  }

  .btn-primary:hover {
    background: var(--color-primary-700);
    transform: translateY(-1px);
    box-shadow: var(--shadow-hover);
  }

  .btn-secondary {
    background: white;
    color: var(--neutral-700);
    border: 1px solid var(--neutral-200);
  }

  .btn-secondary:hover {
    background: var(--neutral-50);
  }

  .status-stats {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 1rem;
  }

  .status-card {
    background: white;
    padding: 1.25rem;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .status-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-hover);
  }

  .status-card.active {
    background: var(--color-primary-50);
    border: 2px solid var(--color-primary-500);
  }

  .status-count {
    font-size: 2rem;
    font-weight: 700;
    color: var(--neutral-900);
    line-height: 1;
  }

  .status-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-600);
  }

  .filters-bar {
    display: flex;
    gap: 1rem;
    padding: 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .search-box {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: var(--neutral-50);
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
  }

  .search-box svg {
    color: var(--neutral-500);
    flex-shrink: 0;
  }

  .search-input {
    flex: 1;
    border: none;
    background: transparent;
    font-size: 0.875rem;
    color: var(--neutral-900);
    outline: none;
  }

  .search-input::placeholder {
    color: var(--neutral-500);
  }

  .filter-group {
    display: flex;
    gap: 0.75rem;
  }

  .filter-select {
    padding: 0.75rem 1rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    background: white;
    font-size: 0.875rem;
    color: var(--neutral-700);
    cursor: pointer;
    transition: all 0.2s;
  }

  .filter-select:hover {
    border-color: var(--color-primary-400);
  }

  .filter-select:focus {
    outline: none;
    border-color: var(--color-primary-500);
    box-shadow: 0 0 0 3px rgba(61, 133, 209, 0.1);
  }

  .table-container {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    overflow: hidden;
  }

  .reportes-table {
    width: 100%;
    border-collapse: collapse;
  }

  .reportes-table thead {
    background: var(--neutral-50);
  }

  .reportes-table th {
    padding: 1rem 1.25rem;
    text-align: left;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--neutral-600);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .reportes-table tbody tr {
    border-bottom: 1px solid var(--neutral-100);
    transition: background 0.2s;
  }

  .reportes-table tbody tr:hover {
    background: var(--neutral-50);
  }

  .reportes-table td {
    padding: 1rem 1.25rem;
    font-size: 0.875rem;
    color: var(--neutral-700);
  }

  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .status-badge.pending {
    background: var(--neutral-100);
    color: var(--neutral-700);
  }

  .status-badge.progress {
    background: var(--color-primary-100);
    color: var(--color-primary-700);
  }

  .status-badge.completed {
    background: var(--success-green-100);
    color: var(--success-green-700);
  }

  .status-badge.overdue {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  .action-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .btn-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    background: var(--neutral-100);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
    color: var(--neutral-600);
  }

  .btn-icon:hover {
    background: var(--neutral-200);
    color: var(--neutral-900);
  }

  .btn-icon.danger:hover {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  /* Modal Styles */
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    padding: 1rem;
  }

  .modal-content {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-lg);
    max-width: 700px;
    width: 100%;
    max-height: 90vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid var(--neutral-200);
  }

  .modal-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .btn-close {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    background: transparent;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
    color: var(--neutral-600);
  }

  .btn-close:hover {
    background: var(--neutral-100);
    color: var(--neutral-900);
  }

  .modal-body {
    padding: 1.5rem;
    overflow-y: auto;
    flex: 1;
  }

  .modal-footer {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
    padding: 1.5rem;
    border-top: 1px solid var(--neutral-200);
  }

  .reporte-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--neutral-700);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.75rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    font-size: 0.875rem;
    color: var(--neutral-900);
    transition: all 0.2s;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary-500);
    box-shadow: 0 0 0 3px rgba(61, 133, 209, 0.1);
  }

  .form-group input:disabled,
  .form-group select:disabled,
  .form-group textarea:disabled {
    background: var(--neutral-50);
    cursor: not-allowed;
  }

  .reporte-details {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .detail-row {
    display: grid;
    grid-template-columns: 150px 1fr;
    gap: 1rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--neutral-100);
  }

  .detail-row:last-child {
    border-bottom: none;
  }

  .detail-row label {
    font-weight: 600;
    color: var(--neutral-700);
  }

  .detail-row span {
    color: var(--neutral-900);
  }

  .loading-spinner {
    display: inline-block;
    width: 40px;
    height: 40px;
    border: 4px solid var(--neutral-200);
    border-top-color: var(--color-primary-600);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Modal Fullscreen Styles */
  .modal-overlay-fullscreen {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.75);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    padding: 2rem;
    backdrop-filter: blur(4px);
  }

  .modal-content-large {
    background: white;
    border-radius: 16px;
    width: 95%;
    max-width: 1400px;
    height: 90vh;
    overflow-y: auto;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    position: relative;
    animation: modalSlideIn 0.3s ease-out;
  }

  @keyframes modalSlideIn {
    from {
      opacity: 0;
      transform: translateY(-20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .btn-close-floating {
    position: sticky;
    top: 1rem;
    right: 1rem;
    float: right;
    z-index: 10;
    background: white;
    border: 2px solid var(--neutral-200);
    width: 42px;
    height: 42px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    margin: 1rem 1rem 0 0;
  }

  .btn-close-floating:hover {
    background: var(--color-danger-50);
    border-color: var(--color-danger-400);
    color: var(--color-danger-600);
    transform: rotate(90deg) scale(1.1);
  }

  .modal-form-wrapper {
    padding: 0 2rem 2rem 2rem;
    clear: both;
  }

  /* Ocultar el header del ReporteForm dentro del modal */
  .modal-form-wrapper .form-header {
    display: none;
  }

  /* Ajustar el contenedor del formulario para que no tenga margen auto */
  .modal-form-wrapper .reporte-form-container {
    max-width: 100%;
    margin: 0;
  }

  @media (max-width: 1024px) {
    .status-stats {
      grid-template-columns: repeat(3, 1fr);
    }

    .filters-bar {
      flex-direction: column;
    }

    .filter-group {
      width: 100%;
    }

    .filter-select {
      flex: 1;
    }

    .modal-overlay-fullscreen {
      padding: 1rem;
    }

    .modal-content-large {
      width: 100%;
      height: 95vh;
      border-radius: 12px;
    }

    .modal-form-wrapper {
      padding: 0 1rem 1rem 1rem;
    }
  }
</style>
