---
import AdminLayout from '../../../layouts/roles/AdminLayout.astro';
import SupervisorDashboardClient from '../../../components/supervisor/SupervisorDashboardClient';
---

<AdminLayout title="Supervisión integrada">
  <div class="dashboard-shell">
    <div class="info-banner">
      <div>
        <p class="info-title">Supervisión sin cambiar de vista</p>
        <p class="info-subtitle">Accede a las métricas y acciones del rol Supervisor directamente desde tu sesión de administrador.</p>
      </div>
      <div class="info-pill">Vista unificada</div>
    </div>
    <SupervisorDashboardClient client:load />
  </div>
</AdminLayout>

<style is:global>
  body {
    background: #f5f7fa;
  }

  .dashboard-shell {
    max-width: 1440px;
    margin: 0 auto;
    padding: 28px 80px 56px;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .info-banner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 18px;
    background: white;
    border: 1px solid var(--neutral-200);
    border-radius: 12px;
    box-shadow: 0 6px 18px rgba(15,23,42,0.06);
    gap: 12px;
  }

  .info-title {
    margin: 0;
    font-size: 1rem;
    font-weight: 700;
    color: var(--neutral-900);
  }

  .info-subtitle {
    margin: 2px 0 0 0;
    color: var(--neutral-600);
    font-size: 0.875rem;
  }

  .info-pill {
    padding: 8px 14px;
    border-radius: 999px;
    border: 1px solid var(--success-green-200);
    background: var(--success-green-50);
    color: var(--success-green-800);
    font-weight: 700;
    font-size: 0.85rem;
    white-space: nowrap;
  }

  .dashboard-supervisor {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .dashboard-header-bar {
    background: white;
    border-radius: 14px;
    padding: 26px 28px;
    border: 1px solid #e5e7eb;
    box-shadow: 0 10px 30px rgba(15,23,42,0.06);
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .filters-shell .filters-top-row {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    align-items: flex-start;
    justify-content: space-between;
  }

  .filters-group {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 12px 16px;
    align-items: flex-end;
    flex: 1;
  }

  .filters-group.basic {
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .filters-advanced {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
    padding: 14px 16px;
    background: #f8fafc;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    margin-top: 8px;
  }

  .filters-actions {
    display: flex;
    align-items: center;
    gap: 12px;
    justify-content: flex-end;
    min-width: 220px;
  }

  .filters-footer {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-top: 10px;
  }

  .period-filter {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .filter-label {
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--neutral-800);
  }

  .filter-select {
    width: 100%;
    padding: 0.55rem 0.85rem;
    border: 1px solid var(--neutral-200);
    border-radius: 10px;
    background: white;
    font-size: 0.9rem;
    color: var(--neutral-800);
    box-shadow: 0 1px 2px rgba(15,23,42,0.06);
    cursor: pointer;
    transition: border-color 0.15s ease, box-shadow 0.15s ease;
  }

  .filter-select.small {
    padding: 0.45rem 0.75rem;
    font-size: 0.85rem;
  }

  .filter-select:focus {
    outline: none;
    border-color: var(--color-primary-500);
    box-shadow: 0 0 0 3px rgba(61, 133, 209, 0.16);
  }

  .link-toggle {
    background: transparent;
    border: none;
    color: var(--color-primary-700);
    font-weight: 600;
    cursor: pointer;
    padding: 6px 0;
    text-decoration: underline;
  }

  .badge {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .badge.subtle {
    background: #eef2f7;
    color: #475569;
    border-radius: 999px;
    padding: 6px 10px;
    font-size: 0.78rem;
  }

  .badge.neutral { background: var(--neutral-100); color: var(--neutral-700); }
  .badge.info { background: var(--color-primary-100); color: var(--color-primary-700); }
  .badge.danger { background: var(--error-red-100); color: var(--error-red-700); }

  .btn-review {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.85rem 1.4rem;
    background: var(--color-primary-600);
    color: white;
    border: none;
    border-radius: 10px;
    font-weight: 700;
    font-size: 0.95rem;
    cursor: pointer;
    transition: transform 0.15s ease, box-shadow 0.15s ease, background 0.15s ease;
    box-shadow: 0 12px 30px rgba(79, 130, 255, 0.2);
  }

  .btn-review:hover {
    background: var(--color-primary-700);
    transform: translateY(-1px);
    box-shadow: 0 16px 36px rgba(79, 130, 255, 0.24);
  }

  .kpis-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 18px 20px;
  }

  .kpi-card {
    background: #f8fafc;
    padding: 16px 18px;
    border-radius: 12px;
    box-shadow: 0 6px 18px rgba(15,23,42,0.04);
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 12px;
    border-left: 3px solid var(--color-primary-500);
    transition: transform 0.15s ease, box-shadow 0.15s ease;
    min-height: 120px;
    cursor: pointer;
  }

  .kpi-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 24px rgba(15,23,42,0.08);
  }

  .kpi-card.primary { border-left-color: var(--color-primary-500); background: #f4f7fb; }
  .kpi-card.warning { border-left-color: #f59e0b; background: #fdf7ec; }
  .kpi-card.info { border-left-color: #3b82f6; background: #eef4ff; }
  .kpi-card.danger { border-left-color: #ef4444; background: #fdf2f2; }
  .kpi-card.success { border-left-color: #10b981; background: #f1f9f5; }

  .kpi-icon {
    width: 36px;
    height: 36px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
    color: var(--color-primary-600);
    box-shadow: 0 2px 8px rgba(15,23,42,0.08);
  }

  .kpi-card.warning .kpi-icon { color: #d97706; background: #fff7ed; }
  .kpi-card.info .kpi-icon { color: #2563eb; background: #eef4ff; }
  .kpi-card.danger .kpi-icon { color: #b91c1c; background: #fff1f2; }
  .kpi-card.success .kpi-icon { color: #0f9f6e; background: #eefcf4; }

  .kpi-content {
    flex: 1;
  }

  .kpi-value {
    display: block;
    font-size: 1.7rem;
    font-weight: 800;
    color: var(--neutral-900);
    line-height: 1.1;
    margin: 0 0 0.2rem 0;
  }

  .kpi-label {
    display: block;
    font-size: 0.9rem;
    color: var(--neutral-650, #4b5563);
    margin: 0;
  }

  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 20px;
  }

  .dashboard-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 14px rgba(15,23,42,0.06);
    border: 1px solid #e5e7eb;
    overflow: hidden;
  }

  .dashboard-card.wide {
    grid-column: span 12;
  }

  .dashboard-card.half {
    grid-column: span 6;
  }

  .card-header {
    padding: 18px 22px;
    border-bottom: 1px solid var(--neutral-100);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .card-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .card-body {
    padding: 18px 22px;
  }

  .donut-chart-container {
    display: flex;
    justify-content: center;
    margin-bottom: 1.5rem;
  }

  .donut-chart {
    width: 220px;
    height: 220px;
  }

  .legend-grid {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--neutral-700);
  }

  .legend-dot {
    width: 12px;
    height: 12px;
    border-radius: 3px;
  }

  .table-container {
    overflow-x: auto;
  }

  .data-table {
    width: 100%;
    border-collapse: collapse;
  }

  .data-table thead {
    background: var(--neutral-50);
  }

  .data-table th {
    padding: 0.75rem 1rem;
    text-align: left;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--neutral-600);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
  }

  .data-table tbody tr {
    border-bottom: 1px solid var(--neutral-100);
    transition: background 0.2s;
  }

  .data-table tbody tr:nth-child(even) {
    background: #fafafa;
  }

  .data-table tbody tr:hover {
    background: var(--neutral-50);
  }

  .data-table td {
    padding: 0.875rem 1rem;
    font-size: 0.875rem;
    color: var(--neutral-700);
  }

  .progress-bar-small {
    height: 6px;
    background: var(--neutral-200);
    border-radius: 3px;
    overflow: hidden;
    margin-bottom: 0.25rem;
  }

  .progress-fill-small {
    height: 100%;
    border-radius: 3px;
    transition: width 0.3s;
  }

  .progress-label-small {
    font-size: 0.75rem;
    color: var(--neutral-600);
  }

  .loading-spinner {
    display: inline-block;
    width: 40px;
    height: 40px;
    border: 4px solid var(--neutral-200);
    border-top-color: var(--color-primary-600);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  @media (max-width: 1200px) {
    .dashboard-shell {
      padding: 24px 32px 40px;
    }
  }

  @media (max-width: 1024px) {
    .kpis-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .dashboard-grid {
      grid-template-columns: 1fr;
    }

    .dashboard-card.wide,
    .dashboard-card.half {
      grid-column: span 1;
    }
  }

  @media (max-width: 640px) {
    .dashboard-shell {
      padding: 16px;
    }

    .kpis-grid {
      grid-template-columns: 1fr;
    }

    .filters-actions {
      width: 100%;
      justify-content: flex-start;
    }
  }
</style>
