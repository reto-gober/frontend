---
import AdminLayout from '../../../layouts/roles/AdminLayout.astro';
import AdminEvidenciasClient from '../../../components/admin/AdminEvidenciasClient';
---

<AdminLayout title="GestiÃ³n de Evidencias">
  <AdminEvidenciasClient client:load />
</AdminLayout>

<style is:global>
  .evidencias-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .header-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-600);
    margin: 0;
  }

  .evidencias-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
  }

  .stat-card {
    background: white;
    padding: 1.25rem;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .stat-value {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--neutral-900);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-600);
    text-align: center;
  }

  .filters-bar {
    display: flex;
    gap: 1rem;
    padding: 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .search-box {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: var(--neutral-50);
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
  }

  .search-box svg {
    color: var(--neutral-500);
    flex-shrink: 0;
  }

  .search-input {
    flex: 1;
    border: none;
    background: transparent;
    font-size: 0.875rem;
    color: var(--neutral-900);
    outline: none;
  }

  .search-input::placeholder {
    color: var(--neutral-500);
  }

  .filter-select {
    padding: 0.75rem 1rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    background: white;
    font-size: 0.875rem;
    color: var(--neutral-700);
    cursor: pointer;
    transition: all 0.2s;
  }

  .filter-select:hover {
    border-color: var(--color-primary-400);
  }

  .filter-select:focus {
    outline: none;
    border-color: var(--color-primary-500);
    box-shadow: 0 0 0 3px rgba(61, 133, 209, 0.1);
  }

  .evidencias-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  .evidencia-card {
    background: white;
    border-radius: 12px;
    padding: 1.25rem;
    box-shadow: var(--shadow-card);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: all 0.2s;
  }

  .evidencia-card:hover {
    box-shadow: var(--shadow-hover);
    transform: translateY(-2px);
  }

  .evidencia-icon {
    font-size: 2.5rem;
    text-align: center;
  }

  .evidencia-info {
    flex: 1;
  }

  .evidencia-nombre {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--neutral-900);
    margin: 0 0 0.5rem 0;
    word-break: break-word;
  }

  .evidencia-reporte {
    font-size: 0.75rem;
    color: var(--neutral-600);
    margin: 0 0 0.25rem 0;
  }

  .evidencia-entidad {
    font-size: 0.75rem;
    color: var(--color-primary-600);
    font-weight: 500;
    margin: 0;
  }

  .evidencia-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 0.75rem;
    border-top: 1px solid var(--neutral-100);
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  .evidencia-actions {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
  }

  .btn-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    background: var(--neutral-100);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
    color: var(--neutral-600);
  }

  .btn-icon:hover {
    background: var(--neutral-200);
    color: var(--neutral-900);
  }

  .btn-icon.danger:hover {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  .btn-primary {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--color-primary-600);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-primary:hover {
    background: var(--color-primary-700);
    transform: translateY(-1px);
    box-shadow: var(--shadow-hover);
  }

  .loading-spinner {
    display: inline-block;
    width: 40px;
    height: 40px;
    border: 4px solid var(--neutral-200);
    border-top-color: var(--color-primary-600);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  @media (max-width: 768px) {
    .evidencias-stats {
      grid-template-columns: repeat(2, 1fr);
    }

    .evidencias-grid {
      grid-template-columns: 1fr;
    }

    .filters-bar {
      flex-direction: column;
    }
  }
</style>
