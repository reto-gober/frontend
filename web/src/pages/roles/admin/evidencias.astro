---
import AdminLayout from '../../../layouts/roles/AdminLayout.astro';
import AdminEvidenciasClient from '../../../components/admin/AdminEvidenciasClient';
---

<AdminLayout title="Gestión de Evidencias">
  <AdminEvidenciasClient client:load />
</AdminLayout>

<style is:global>
  .evidencias-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .header-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-600);
    margin: 0;
  }

  .evidencias-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
  }

  .stat-card {
    background: white;
    padding: 1.25rem;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .stat-value {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--neutral-900);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-600);
    text-align: center;
  }

  .filters-bar {
    display: flex;
    gap: 1rem;
    padding: 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .search-box {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: var(--neutral-50);
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
  }

  .search-box svg {
    color: var(--neutral-500);
    flex-shrink: 0;
  }

  .search-input {
    flex: 1;
    border: none;
    background: transparent;
    font-size: 0.875rem;
    color: var(--neutral-900);
    outline: none;
  }

  .search-input::placeholder {
    color: var(--neutral-500);
  }

  .filter-select {
    padding: 0.75rem 1rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    background: white;
    font-size: 0.875rem;
    color: var(--neutral-700);
    cursor: pointer;
    transition: all 0.2s;
  }

  .filter-select:hover {
    border-color: var(--color-primary-400);
  }

  .filter-select:focus {
    outline: none;
    border-color: var(--color-primary-500);
    box-shadow: 0 0 0 3px rgba(61, 133, 209, 0.1);
  }

  /* Estilos para agrupación por periodo */
  .evidencias-por-periodo {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .periodo-group {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: var(--shadow-card);
  }

  .periodo-header {
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--neutral-100);
    transition: all 0.2s;
  }

  .periodo-header.clickable:hover {
    background: var(--neutral-50);
    border-radius: 8px;
    margin: -0.5rem;
    padding: 0.5rem 0.5rem 1.5rem 0.5rem;
  }

  .periodo-info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .periodo-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--neutral-900);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .periodo-title svg {
    color: var(--color-primary-600);
    flex-shrink: 0;
  }

  .periodo-stats {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .periodo-stat {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: var(--neutral-600);
  }

  .periodo-stat svg {
    color: var(--neutral-400);
  }

  /* Lista de evidencias */
  .evidencias-lista {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .evidencia-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    border-bottom: 1px solid var(--neutral-100);
    transition: all 0.2s;
  }

  .evidencia-item:hover {
    background: var(--neutral-50);
  }

  .evidencia-item:last-child {
    border-bottom: none;
  }

  .evidencia-item-icon {
    font-size: 2rem;
    flex-shrink: 0;
    width: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .evidencia-item-info {
    flex: 1;
    min-width: 0;
  }

  .evidencia-item-nombre {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--neutral-900);
    margin: 0 0 0.375rem 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .evidencia-item-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    color: var(--neutral-600);
  }

  .evidencia-meta-text {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .evidencia-meta-separator {
    color: var(--neutral-400);
  }

  .evidencia-item-details {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.375rem;
    flex-shrink: 0;
  }

  .evidencia-tamano-badge {
    padding: 0.25rem 0.625rem;
    background: var(--color-primary-50);
    color: var(--color-primary-700);
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 4px;
  }

  .evidencia-fecha-text {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  .evidencia-item-actions {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  /* Paginación */
  .pagination {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    margin-top: 1rem;
    border-top: 1px solid var(--neutral-100);
  }

  .pagination-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: white;
    border: 1px solid var(--neutral-300);
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-700);
    cursor: pointer;
    transition: all 0.2s;
  }

  .pagination-btn:hover:not(:disabled) {
    background: var(--neutral-50);
    border-color: var(--color-primary-400);
    color: var(--color-primary-600);
  }

  .pagination-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .pagination-info {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-700);
  }

  .evidencias-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  .evidencia-card {
    background: white;
    border-radius: 12px;
    padding: 1.25rem;
    box-shadow: var(--shadow-card);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: all 0.2s;
  }

  .evidencia-card:hover {
    box-shadow: var(--shadow-hover);
    transform: translateY(-2px);
  }

  .evidencia-icon {
    font-size: 2.5rem;
    text-align: center;
  }

  .evidencia-info {
    flex: 1;
  }

  .evidencia-nombre {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--neutral-900);
    margin: 0 0 0.5rem 0;
    word-break: break-word;
  }

  .evidencia-reporte {
    font-size: 0.75rem;
    color: var(--neutral-600);
    margin: 0 0 0.25rem 0;
  }

  .evidencia-entidad {
    font-size: 0.75rem;
    color: var(--color-primary-600);
    font-weight: 500;
    margin: 0;
  }

  .evidencia-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 0.75rem;
    border-top: 1px solid var(--neutral-100);
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  .evidencia-actions {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
  }

  .btn-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    background: var(--neutral-100);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
    color: var(--neutral-600);
  }

  .btn-icon:hover {
    background: var(--neutral-200);
    color: var(--neutral-900);
  }

  .btn-icon.danger:hover {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  .btn-primary {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--color-primary-600);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-primary:hover {
    background: var(--color-primary-700);
    transform: translateY(-1px);
    box-shadow: var(--shadow-hover);
  }

  .loading-spinner {
    display: inline-block;
    width: 40px;
    height: 40px;
    border: 4px solid var(--neutral-200);
    border-top-color: var(--color-primary-600);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Modal */
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    padding: 1rem;
  }

  .modal-content {
    background: white;
    border-radius: 12px;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    max-height: 90vh;
    overflow-y: auto;
    width: 100%;
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid var(--neutral-200);
  }

  .modal-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--neutral-900);
    margin: 0;
  }

  .modal-close {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    background: transparent;
    color: var(--neutral-500);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
  }

  .modal-close:hover {
    background: var(--neutral-100);
    color: var(--neutral-700);
  }

  .modal-body {
    padding: 1.5rem;
  }

  .modal-footer {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
    padding: 1.5rem;
    border-top: 1px solid var(--neutral-200);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    border: none;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-secondary {
    background: white;
    border: 1px solid var(--neutral-300);
    color: var(--neutral-700);
  }

  .btn-secondary:hover {
    background: var(--neutral-50);
  }

  .btn-danger {
    background: var(--error-red-600);
    color: white;
  }

  .btn-danger:hover:not(:disabled) {
    background: var(--error-red-700);
  }

  .input-field {
    padding: 0.625rem 1rem;
    border: 1px solid var(--neutral-300);
    border-radius: 8px;
    font-size: 0.875rem;
    transition: all 0.2s;
  }

  .input-field:focus {
    outline: none;
    border-color: var(--color-primary-500);
    box-shadow: 0 0 0 3px rgba(61, 133, 209, 0.1);
  }

  @media (max-width: 768px) {
    .evidencias-stats {
      grid-template-columns: repeat(2, 1fr);
    }

    .evidencias-grid {
      grid-template-columns: 1fr;
    }

    .filters-bar {
      flex-direction: column;
    }
  }
</style>
