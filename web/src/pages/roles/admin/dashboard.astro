---
import AdminLayout from '../../../layouts/roles/AdminLayout.astro';
---

<AdminLayout title="Dashboard Administrativo">
  <div class="admin-dashboard">
    <!-- KPIs Globales -->
    <section class="kpis-section">
      <h2 class="section-title">Resumen del Sistema</h2>
      <div class="kpis-grid">
        <div class="kpi-card">
          <div class="kpi-icon blue">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <path d="M14 2v6h6"/>
            </svg>
          </div>
          <div class="kpi-content">
            <span class="kpi-value">248</span>
            <span class="kpi-label">Reportes Totales</span>
          </div>
          <span class="kpi-trend positive">+12% vs mes anterior</span>
        </div>

        <div class="kpi-card">
          <div class="kpi-icon orange">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M3 22V8l9-5 9 5v14"/>
              <path d="M9 22V12h6v10"/>
            </svg>
          </div>
          <div class="kpi-content">
            <span class="kpi-value">15</span>
            <span class="kpi-label">Entidades Activas</span>
          </div>
          <span class="kpi-trend neutral">Sin cambios</span>
        </div>

        <div class="kpi-card">
          <div class="kpi-icon green">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
          </div>
          <div class="kpi-content">
            <span class="kpi-value">42</span>
            <span class="kpi-label">Usuarios Activos</span>
          </div>
          <span class="kpi-trend positive">+3 nuevos</span>
        </div>

        <div class="kpi-card">
          <div class="kpi-icon red">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12,6 12,12 16,14"/>
            </svg>
          </div>
          <div class="kpi-content">
            <span class="kpi-value">8</span>
            <span class="kpi-label">Reportes Vencidos</span>
          </div>
          <span class="kpi-trend negative">Requiere atención</span>
        </div>
      </div>
    </section>

    <!-- Alertas del Sistema -->
    <section class="alerts-section">
      <div class="section-header">
        <h2 class="section-title">Alertas del Sistema</h2>
        <a href="/roles/admin/alertas" class="view-all-link">Ver todas</a>
      </div>
      <div class="alerts-list">
        <div class="alert-item critical">
          <div class="alert-icon">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
              <line x1="12" y1="9" x2="12" y2="13"/>
              <line x1="12" y1="17" x2="12.01" y2="17"/>
            </svg>
          </div>
          <div class="alert-content">
            <span class="alert-title">5 reportes vencidos sin enviar</span>
            <span class="alert-time">Hace 2 horas</span>
          </div>
        </div>
        <div class="alert-item warning">
          <div class="alert-icon">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" strokeWidth="2">
              <circle cx="12" cy="12" r="10"/>
              <line x1="12" y1="8" x2="12" y2="12"/>
              <line x1="12" y1="16" x2="12.01" y2="16"/>
            </svg>
          </div>
          <div class="alert-content">
            <span class="alert-title">12 reportes próximos a vencer (7 días)</span>
            <span class="alert-time">Actualizado hace 30 min</span>
          </div>
        </div>
        <div class="alert-item info">
          <div class="alert-icon">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" strokeWidth="2">
              <circle cx="12" cy="12" r="10"/>
              <line x1="12" y1="16" x2="12" y2="12"/>
              <line x1="12" y1="8" x2="12.01" y2="8"/>
            </svg>
          </div>
          <div class="alert-content">
            <span class="alert-title">Nueva entidad regulatoria añadida: ANH</span>
            <span class="alert-time">Ayer a las 14:30</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Grid de dos columnas -->
    <div class="dashboard-grid">
      <!-- Últimas Actividades -->
      <section class="activities-section">
        <div class="section-header">
          <h2 class="section-title">Últimas Actividades</h2>
        </div>
        <div class="activities-list">
          <div class="activity-item">
            <div class="activity-avatar blue">JR</div>
            <div class="activity-content">
              <span class="activity-text"><strong>Juan Rodríguez</strong> envió el reporte SUI-001</span>
              <span class="activity-time">Hace 15 minutos</span>
            </div>
          </div>
          <div class="activity-item">
            <div class="activity-avatar green">MC</div>
            <div class="activity-content">
              <span class="activity-text"><strong>María Castro</strong> creó nuevo reporte CREG-045</span>
              <span class="activity-time">Hace 45 minutos</span>
            </div>
          </div>
          <div class="activity-item">
            <div class="activity-avatar purple">AL</div>
            <div class="activity-content">
              <span class="activity-text"><strong>Admin</strong> agregó usuario nuevo</span>
              <span class="activity-time">Hace 2 horas</span>
            </div>
          </div>
          <div class="activity-item">
            <div class="activity-avatar orange">PM</div>
            <div class="activity-content">
              <span class="activity-text"><strong>Pedro Martínez</strong> subió evidencia para ANH-012</span>
              <span class="activity-time">Hace 3 horas</span>
            </div>
          </div>
          <div class="activity-item">
            <div class="activity-avatar red">SR</div>
            <div class="activity-content">
              <span class="activity-text"><strong>Sistema</strong> generó alerta de vencimiento</span>
              <span class="activity-time">Hace 5 horas</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Gráfico de Reportes por Estado -->
      <section class="chart-section">
        <div class="section-header">
          <h2 class="section-title">Reportes por Estado</h2>
        </div>
        <div class="chart-placeholder">
          <div class="bar-chart">
            <div class="bar-item">
              <div class="bar-label">Enviados</div>
              <div class="bar-container">
                <div class="bar-fill green" style="width: 75%"></div>
              </div>
              <span class="bar-value">156</span>
            </div>
            <div class="bar-item">
              <div class="bar-label">En Progreso</div>
              <div class="bar-container">
                <div class="bar-fill blue" style="width: 35%"></div>
              </div>
              <span class="bar-value">52</span>
            </div>
            <div class="bar-item">
              <div class="bar-label">Pendientes</div>
              <div class="bar-container">
                <div class="bar-fill yellow" style="width: 20%"></div>
              </div>
              <span class="bar-value">32</span>
            </div>
            <div class="bar-item">
              <div class="bar-label">Vencidos</div>
              <div class="bar-container">
                <div class="bar-fill red" style="width: 5%"></div>
              </div>
              <span class="bar-value">8</span>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- Acciones Rápidas -->
    <section class="quick-actions">
      <h2 class="section-title">Acciones Rápidas</h2>
      <div class="actions-grid">
        <a href="/roles/admin/usuarios" class="action-card">
          <div class="action-icon blue">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
              <circle cx="8.5" cy="7" r="4"/>
              <line x1="20" y1="8" x2="20" y2="14"/>
              <line x1="23" y1="11" x2="17" y2="11"/>
            </svg>
          </div>
          <span class="action-label">Nuevo Usuario</span>
        </a>
        <a href="/roles/admin/entidades" class="action-card">
          <div class="action-icon orange">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M3 22V8l9-5 9 5v14"/>
              <line x1="12" y1="8" x2="12" y2="14"/>
              <line x1="9" y1="11" x2="15" y2="11"/>
            </svg>
          </div>
          <span class="action-label">Nueva Entidad</span>
        </a>
        <a href="/roles/admin/reportes" class="action-card">
          <div class="action-icon purple">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <path d="M14 2v6h6"/>
              <line x1="12" y1="11" x2="12" y2="17"/>
              <line x1="9" y1="14" x2="15" y2="14"/>
            </svg>
          </div>
          <span class="action-label">Ver Reportes</span>
        </a>
        <a href="/roles/admin/configuracion" class="action-card">
          <div class="action-icon gray">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
              <circle cx="12" cy="12" r="3"/>
              <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>
            </svg>
          </div>
          <span class="action-label">Configuración</span>
        </a>
      </div>
    </section>
  </div>
</AdminLayout>

<style>
  .admin-dashboard {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .section-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--neutral-800);
    margin-bottom: 1rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .view-all-link {
    font-size: 0.875rem;
    color: var(--color-primary-600);
    font-weight: 500;
  }

  /* KPIs */
  .kpis-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1rem;
  }

  .kpi-card {
    background: white;
    border-radius: 12px;
    padding: 1.25rem;
    box-shadow: var(--shadow-card);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .kpi-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .kpi-icon.blue { background: var(--color-primary-100); color: var(--color-primary-600); }
  .kpi-icon.orange { background: var(--accent-orange-100); color: var(--accent-orange-600); }
  .kpi-icon.green { background: var(--success-green-100); color: var(--success-green-600); }
  .kpi-icon.red { background: var(--error-red-100); color: var(--error-red-500); }

  .kpi-content {
    display: flex;
    flex-direction: column;
  }

  .kpi-value {
    font-size: 2rem;
    font-weight: 700;
    color: var(--neutral-900);
    line-height: 1;
  }

  .kpi-label {
    font-size: 0.875rem;
    color: var(--neutral-500);
    margin-top: 0.25rem;
  }

  .kpi-trend {
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    align-self: flex-start;
  }

  .kpi-trend.positive { background: var(--success-green-100); color: var(--success-green-700); }
  .kpi-trend.negative { background: var(--error-red-100); color: var(--error-red-700); }
  .kpi-trend.neutral { background: var(--neutral-100); color: var(--neutral-600); }

  /* Alerts */
  .alerts-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .alert-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: white;
    border-radius: 8px;
    border-left: 4px solid;
    box-shadow: var(--shadow-sm);
  }

  .alert-item.critical { border-left-color: var(--error-red-500); }
  .alert-item.warning { border-left-color: var(--warning-yellow-500); }
  .alert-item.info { border-left-color: var(--color-primary-500); }

  .alert-icon {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .alert-item.critical .alert-icon { background: var(--error-red-100); color: var(--error-red-500); }
  .alert-item.warning .alert-icon { background: var(--warning-yellow-100); color: var(--warning-yellow-700); }
  .alert-item.info .alert-icon { background: var(--color-primary-100); color: var(--color-primary-600); }

  .alert-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .alert-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-800);
  }

  .alert-time {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  /* Dashboard Grid */
  .dashboard-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  @media (max-width: 1024px) {
    .dashboard-grid {
      grid-template-columns: 1fr;
    }
  }

  .activities-section,
  .chart-section {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: var(--shadow-card);
  }

  .activities-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .activity-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .activity-avatar {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 600;
    color: white;
    flex-shrink: 0;
  }

  .activity-avatar.blue { background: var(--color-primary-600); }
  .activity-avatar.green { background: var(--success-green-600); }
  .activity-avatar.purple { background: var(--secondary-purple-600); }
  .activity-avatar.orange { background: var(--accent-orange-600); }
  .activity-avatar.red { background: var(--error-red-500); }

  .activity-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .activity-text {
    font-size: 0.875rem;
    color: var(--neutral-700);
  }

  .activity-time {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  /* Chart Placeholder */
  .bar-chart {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .bar-item {
    display: grid;
    grid-template-columns: 100px 1fr 50px;
    align-items: center;
    gap: 1rem;
  }

  .bar-label {
    font-size: 0.8125rem;
    color: var(--neutral-600);
    font-weight: 500;
  }

  .bar-container {
    height: 24px;
    background: var(--neutral-100);
    border-radius: 6px;
    overflow: hidden;
  }

  .bar-fill {
    height: 100%;
    border-radius: 6px;
    transition: width 0.5s ease;
  }

  .bar-fill.green { background: var(--success-green-500); }
  .bar-fill.blue { background: var(--color-primary-500); }
  .bar-fill.yellow { background: var(--warning-yellow-500); }
  .bar-fill.red { background: var(--error-red-500); }

  .bar-value {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--neutral-800);
    text-align: right;
  }

  /* Quick Actions */
  .actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
  }

  .action-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    text-decoration: none;
    transition: all 0.2s;
  }

  .action-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-hover);
  }

  .action-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .action-icon.blue { background: var(--color-primary-100); color: var(--color-primary-600); }
  .action-icon.orange { background: var(--accent-orange-100); color: var(--accent-orange-600); }
  .action-icon.purple { background: var(--secondary-purple-100); color: var(--secondary-purple-600); }
  .action-icon.gray { background: var(--neutral-100); color: var(--neutral-600); }

  .action-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--neutral-700);
  }
</style>
