---
import AdminLayout from '../../../layouts/roles/AdminLayout.astro';
import AdminCalendarioClient from '../../../components/admin/AdminCalendarioClient';
---

<AdminLayout title="Calendario de Vencimientos">
  <AdminCalendarioClient client:load />
</AdminLayout>

<style is:global>
  .calendario-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .calendario-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .calendar-controls {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .month-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--neutral-700);
    text-transform: capitalize;
    min-width: 200px;
    text-align: center;
  }

  .btn-icon {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    background: var(--neutral-100);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s;
    color: var(--neutral-600);
  }

  .btn-icon:hover {
    background: var(--color-primary-100);
    color: var(--color-primary-600);
  }

  .calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 1px;
    background: var(--neutral-200);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow-card);
  }

  .calendar-day-header {
    background: var(--neutral-100);
    padding: 0.75rem;
    text-align: center;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--neutral-600);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .calendar-day {
    background: white;
    padding: 0.75rem;
    min-height: 100px;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    transition: background 0.2s;
  }

  .calendar-day:hover {
    background: var(--neutral-50);
  }

  .calendar-day.empty {
    background: var(--neutral-50);
  }

  .calendar-day.today {
    background: var(--color-primary-50);
    border: 2px solid var(--color-primary-500);
  }

  .day-number {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--neutral-700);
  }

  .day-events {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
  }

  .event-dot {
    width: 100%;
    height: 4px;
    border-radius: 2px;
  }

  .more-events {
    font-size: 0.6875rem;
    color: var(--neutral-500);
    font-weight: 600;
    text-align: center;
    margin-top: 0.25rem;
  }

  .calendar-legend {
    display: flex;
    justify-content: center;
    gap: 2rem;
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    flex-wrap: wrap;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .legend-dot {
    width: 16px;
    height: 16px;
    border-radius: 4px;
  }

  .legend-item span {
    font-size: 0.875rem;
    color: var(--neutral-700);
  }

  .loading-spinner {
    display: inline-block;
    width: 40px;
    height: 40px;
    border: 4px solid var(--neutral-200);
    border-top-color: var(--color-primary-600);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  @media (max-width: 768px) {
    .calendar-day {
      min-height: 60px;
      padding: 0.5rem;
    }

    .day-number {
      font-size: 0.75rem;
    }

    .calendar-legend {
      gap: 1rem;
    }

    .legend-item span {
      font-size: 0.75rem;
    }
  }
</style>
