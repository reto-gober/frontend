---
import AdminLayout from '../../../layouts/roles/AdminLayout.astro';
import AdminEntidadesClient from '../../../components/admin/AdminEntidadesClient';
---

<AdminLayout title="GestiÃ³n de Entidades">
  <AdminEntidadesClient client:load />
</AdminLayout>

<style is:global>
  .entidades-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .header-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-600);
    margin: 0;
  }

  .btn-primary {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--color-primary-600);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-primary:hover {
    background: var(--color-primary-700);
    transform: translateY(-1px);
    box-shadow: var(--shadow-hover);
  }

  .entidades-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .entidad-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: var(--shadow-card);
    transition: all 0.2s;
  }

  .entidad-card:hover {
    box-shadow: var(--shadow-hover);
    transform: translateY(-2px);
  }

  .entidad-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .entidad-logo {
    width: 56px;
    height: 56px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.875rem;
    color: white;
  }

  .entidad-logo.blue { background: var(--color-primary-600); }
  .entidad-logo.orange { background: var(--accent-orange-600); }
  .entidad-logo.green { background: var(--success-green-600); }
  .entidad-logo.purple { background: var(--secondary-purple-600); }
  .entidad-logo.red { background: var(--error-red-600); }

  .entidad-actions {
    display: flex;
    gap: 0.5rem;
  }

  .btn-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    background: var(--neutral-100);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
    color: var(--neutral-600);
  }

  .btn-icon:hover {
    background: var(--neutral-200);
    color: var(--neutral-900);
  }

  .entidad-info {
    margin-bottom: 1.5rem;
  }

  .entidad-nombre {
    font-size: 1rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0 0 0.25rem 0;
  }

  .entidad-sigla {
    font-size: 0.75rem;
    color: var(--neutral-500);
    font-weight: 500;
  }

  .entidad-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-bottom: 1rem;
    padding: 1rem 0;
    border-top: 1px solid var(--neutral-100);
    border-bottom: 1px solid var(--neutral-100);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--neutral-600);
  }

  .entidad-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .status-active {
    padding: 0.25rem 0.625rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    background: var(--success-green-100);
    color: var(--success-green-700);
  }

  .status-inactive {
    padding: 0.25rem 0.625rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    background: var(--neutral-200);
    color: var(--neutral-600);
  }

  .link-reportes {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-primary-600);
    text-decoration: none;
    transition: color 0.2s;
  }

  .link-reportes:hover {
    color: var(--color-primary-700);
  }

  .loading-spinner {
    display: inline-block;
    width: 40px;
    height: 40px;
    border: 4px solid var(--neutral-200);
    border-top-color: var(--color-primary-600);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }
</style>
