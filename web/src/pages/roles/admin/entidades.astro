---
import AdminLayout from '../../../layouts/roles/AdminLayout.astro';
---

<AdminLayout title="Gestión de Entidades">
  <div class="entidades-page">
    <!-- Header con acciones -->
    <div class="page-header">
      <div class="header-info">
        <h1 class="page-title">Gestión de Entidades</h1>
        <p class="page-description">Administra las entidades regulatorias del sistema</p>
      </div>
      <button class="btn-primary" id="btnNuevaEntidad">
        <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 22V8l9-5 9 5v14"/>
          <line x1="12" y1="8" x2="12" y2="14"/>
          <line x1="9" y1="11" x2="15" y2="11"/>
        </svg>
        Nueva Entidad
      </button>
    </div>

    <!-- Grid de entidades -->
    <div class="entidades-grid">
      <!-- Entidad CREG -->
      <div class="entidad-card">
        <div class="entidad-header">
          <div class="entidad-logo blue">
            <span>CREG</span>
          </div>
          <div class="entidad-actions">
            <button class="btn-icon" title="Editar">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
              </svg>
            </button>
          </div>
        </div>
        <div class="entidad-info">
          <h3 class="entidad-nombre">Comisión de Regulación de Energía y Gas</h3>
          <span class="entidad-sigla">CREG</span>
        </div>
        <div class="entidad-stats">
          <div class="stat-item">
            <span class="stat-value">24</span>
            <span class="stat-label">Reportes</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">5</span>
            <span class="stat-label">Responsables</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">92%</span>
            <span class="stat-label">Cumplimiento</span>
          </div>
        </div>
        <div class="entidad-footer">
          <span class="status-active">Activa</span>
          <a href="#" class="link-reportes">Ver reportes →</a>
        </div>
      </div>

      <!-- Entidad SUI -->
      <div class="entidad-card">
        <div class="entidad-header">
          <div class="entidad-logo orange">
            <span>SUI</span>
          </div>
          <div class="entidad-actions">
            <button class="btn-icon" title="Editar">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
              </svg>
            </button>
          </div>
        </div>
        <div class="entidad-info">
          <h3 class="entidad-nombre">Sistema Único de Información</h3>
          <span class="entidad-sigla">SUI</span>
        </div>
        <div class="entidad-stats">
          <div class="stat-item">
            <span class="stat-value">48</span>
            <span class="stat-label">Reportes</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">8</span>
            <span class="stat-label">Responsables</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">88%</span>
            <span class="stat-label">Cumplimiento</span>
          </div>
        </div>
        <div class="entidad-footer">
          <span class="status-active">Activa</span>
          <a href="#" class="link-reportes">Ver reportes →</a>
        </div>
      </div>

      <!-- Entidad ANH -->
      <div class="entidad-card">
        <div class="entidad-header">
          <div class="entidad-logo green">
            <span>ANH</span>
          </div>
          <div class="entidad-actions">
            <button class="btn-icon" title="Editar">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
              </svg>
            </button>
          </div>
        </div>
        <div class="entidad-info">
          <h3 class="entidad-nombre">Agencia Nacional de Hidrocarburos</h3>
          <span class="entidad-sigla">ANH</span>
        </div>
        <div class="entidad-stats">
          <div class="stat-item">
            <span class="stat-value">36</span>
            <span class="stat-label">Reportes</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">4</span>
            <span class="stat-label">Responsables</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">95%</span>
            <span class="stat-label">Cumplimiento</span>
          </div>
        </div>
        <div class="entidad-footer">
          <span class="status-active">Activa</span>
          <a href="#" class="link-reportes">Ver reportes →</a>
        </div>
      </div>

      <!-- Entidad SSPD -->
      <div class="entidad-card">
        <div class="entidad-header">
          <div class="entidad-logo purple">
            <span>SSPD</span>
          </div>
          <div class="entidad-actions">
            <button class="btn-icon" title="Editar">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
              </svg>
            </button>
          </div>
        </div>
        <div class="entidad-info">
          <h3 class="entidad-nombre">Superservicios - Superintendencia de Servicios Públicos</h3>
          <span class="entidad-sigla">SSPD</span>
        </div>
        <div class="entidad-stats">
          <div class="stat-item">
            <span class="stat-value">52</span>
            <span class="stat-label">Reportes</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">6</span>
            <span class="stat-label">Responsables</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">85%</span>
            <span class="stat-label">Cumplimiento</span>
          </div>
        </div>
        <div class="entidad-footer">
          <span class="status-active">Activa</span>
          <a href="#" class="link-reportes">Ver reportes →</a>
        </div>
      </div>

      <!-- Entidad MinMinas -->
      <div class="entidad-card">
        <div class="entidad-header">
          <div class="entidad-logo red">
            <span>MME</span>
          </div>
          <div class="entidad-actions">
            <button class="btn-icon" title="Editar">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
              </svg>
            </button>
          </div>
        </div>
        <div class="entidad-info">
          <h3 class="entidad-nombre">Ministerio de Minas y Energía</h3>
          <span class="entidad-sigla">MinMinas</span>
        </div>
        <div class="entidad-stats">
          <div class="stat-item">
            <span class="stat-value">18</span>
            <span class="stat-label">Reportes</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">3</span>
            <span class="stat-label">Responsables</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">100%</span>
            <span class="stat-label">Cumplimiento</span>
          </div>
        </div>
        <div class="entidad-footer">
          <span class="status-active">Activa</span>
          <a href="#" class="link-reportes">Ver reportes →</a>
        </div>
      </div>

      <!-- Card para agregar nueva entidad -->
      <div class="entidad-card add-card" id="btnAddEntidad">
        <div class="add-content">
          <div class="add-icon">
            <svg viewBox="0 0 24 24" width="32" height="32" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="5" x2="12" y2="19"/>
              <line x1="5" y1="12" x2="19" y2="12"/>
            </svg>
          </div>
          <span class="add-label">Agregar Entidad</span>
        </div>
      </div>
    </div>

    <!-- Resumen de entidades -->
    <div class="summary-section">
      <h2 class="section-title">Resumen General</h2>
      <div class="summary-grid">
        <div class="summary-card">
          <div class="summary-icon blue">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 22V8l9-5 9 5v14"/>
            </svg>
          </div>
          <div class="summary-content">
            <span class="summary-value">5</span>
            <span class="summary-label">Entidades Activas</span>
          </div>
        </div>
        <div class="summary-card">
          <div class="summary-icon green">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
            </svg>
          </div>
          <div class="summary-content">
            <span class="summary-value">178</span>
            <span class="summary-label">Reportes Totales</span>
          </div>
        </div>
        <div class="summary-card">
          <div class="summary-icon orange">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
            </svg>
          </div>
          <div class="summary-content">
            <span class="summary-value">26</span>
            <span class="summary-label">Responsables Asignados</span>
          </div>
        </div>
        <div class="summary-card">
          <div class="summary-icon purple">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
            </svg>
          </div>
          <div class="summary-content">
            <span class="summary-value">92%</span>
            <span class="summary-label">Cumplimiento Promedio</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Nueva/Editar Entidad -->
  <div class="modal-overlay" id="modalEntidad">
    <div class="modal-container">
      <div class="modal-header">
        <h2 class="modal-title">Nueva Entidad</h2>
        <button class="modal-close" id="btnCloseModal">
          <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="18" y1="6" x2="6" y2="18"/>
            <line x1="6" y1="6" x2="18" y2="18"/>
          </svg>
        </button>
      </div>
      <form class="modal-form">
        <div class="form-group">
          <label class="form-label">Nombre de la entidad</label>
          <input type="text" class="form-input" placeholder="Nombre completo de la entidad" />
        </div>
        <div class="form-row">
          <div class="form-group">
            <label class="form-label">Sigla</label>
            <input type="text" class="form-input" placeholder="Ej: CREG" maxlength="10" />
          </div>
          <div class="form-group">
            <label class="form-label">Color identificador</label>
            <div class="color-options">
              <label class="color-option">
                <input type="radio" name="color" value="blue" checked />
                <span class="color-swatch blue"></span>
              </label>
              <label class="color-option">
                <input type="radio" name="color" value="orange" />
                <span class="color-swatch orange"></span>
              </label>
              <label class="color-option">
                <input type="radio" name="color" value="green" />
                <span class="color-swatch green"></span>
              </label>
              <label class="color-option">
                <input type="radio" name="color" value="purple" />
                <span class="color-swatch purple"></span>
              </label>
              <label class="color-option">
                <input type="radio" name="color" value="red" />
                <span class="color-swatch red"></span>
              </label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="form-label">Descripción (opcional)</label>
          <textarea class="form-textarea" rows="3" placeholder="Descripción breve de la entidad"></textarea>
        </div>
        <div class="form-group">
          <label class="form-label">URL del portal (opcional)</label>
          <input type="url" class="form-input" placeholder="https://www.entidad.gov.co" />
        </div>
        <div class="modal-actions">
          <button type="button" class="btn-secondary" id="btnCancelModal">Cancelar</button>
          <button type="submit" class="btn-primary">Crear Entidad</button>
        </div>
      </form>
    </div>
  </div>
</AdminLayout>

<style>
  .entidades-page {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-500);
    margin: 0.25rem 0 0;
  }

  .btn-primary {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--color-primary-600);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
  }

  .btn-primary:hover {
    background: var(--color-primary-700);
  }

  /* Grid de entidades */
  .entidades-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .entidad-card {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: all 0.2s;
  }

  .entidad-card:hover {
    box-shadow: var(--shadow-hover);
  }

  .entidad-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .entidad-logo {
    width: 56px;
    height: 56px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    font-weight: 700;
    color: white;
  }

  .entidad-logo.blue { background: var(--color-primary-600); }
  .entidad-logo.orange { background: var(--accent-orange-600); }
  .entidad-logo.green { background: var(--success-green-600); }
  .entidad-logo.purple { background: var(--secondary-purple-600); }
  .entidad-logo.red { background: var(--error-red-500); }

  .btn-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--neutral-200);
    border-radius: 6px;
    background: white;
    color: var(--neutral-600);
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-icon:hover {
    background: var(--neutral-100);
    color: var(--neutral-800);
  }

  .entidad-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .entidad-nombre {
    font-size: 1rem;
    font-weight: 600;
    color: var(--neutral-900);
    margin: 0;
    line-height: 1.4;
  }

  .entidad-sigla {
    font-size: 0.75rem;
    color: var(--neutral-500);
    font-weight: 500;
  }

  .entidad-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.5rem;
    padding: 1rem 0;
    border-top: 1px solid var(--neutral-100);
    border-bottom: 1px solid var(--neutral-100);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .stat-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--neutral-900);
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  .entidad-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .status-active {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--success-green-700);
  }

  .status-active::before {
    content: '';
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--success-green-500);
  }

  .link-reportes {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-primary-600);
    text-decoration: none;
  }

  .link-reportes:hover {
    text-decoration: underline;
  }

  /* Add Card */
  .add-card {
    border: 2px dashed var(--neutral-200);
    background: var(--neutral-50);
    cursor: pointer;
    min-height: 200px;
    justify-content: center;
    align-items: center;
  }

  .add-card:hover {
    border-color: var(--color-primary-300);
    background: var(--color-primary-50);
  }

  .add-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .add-icon {
    width: 64px;
    height: 64px;
    border-radius: 12px;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--neutral-400);
    box-shadow: var(--shadow-sm);
  }

  .add-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--neutral-500);
  }

  /* Summary Section */
  .section-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--neutral-800);
    margin-bottom: 1rem;
  }

  .summary-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .summary-card {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    padding: 1.25rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .summary-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .summary-icon.blue { background: var(--color-primary-100); color: var(--color-primary-600); }
  .summary-icon.green { background: var(--success-green-100); color: var(--success-green-600); }
  .summary-icon.orange { background: var(--accent-orange-100); color: var(--accent-orange-600); }
  .summary-icon.purple { background: var(--secondary-purple-100); color: var(--secondary-purple-600); }

  .summary-content {
    display: flex;
    flex-direction: column;
  }

  .summary-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    line-height: 1;
  }

  .summary-label {
    font-size: 0.8125rem;
    color: var(--neutral-500);
    margin-top: 0.25rem;
  }

  /* Modal */
  .modal-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }

  .modal-overlay.active {
    display: flex;
  }

  .modal-container {
    width: 100%;
    max-width: 480px;
    background: white;
    border-radius: 16px;
    box-shadow: var(--shadow-2xl);
    margin: 1rem;
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--neutral-100);
  }

  .modal-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .modal-close {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    border-radius: 8px;
    background: transparent;
    color: var(--neutral-500);
    cursor: pointer;
    transition: all 0.2s;
  }

  .modal-close:hover {
    background: var(--neutral-100);
    color: var(--neutral-800);
  }

  .modal-form {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-700);
  }

  .form-input,
  .form-textarea {
    padding: 0.75rem 1rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    font-size: 0.875rem;
    transition: border-color 0.2s;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--color-primary-500);
  }

  .form-textarea {
    resize: vertical;
    font-family: inherit;
  }

  .color-options {
    display: flex;
    gap: 0.5rem;
  }

  .color-option {
    cursor: pointer;
  }

  .color-option input {
    display: none;
  }

  .color-swatch {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    display: block;
    border: 2px solid transparent;
    transition: all 0.2s;
  }

  .color-option input:checked + .color-swatch {
    border-color: var(--neutral-900);
    transform: scale(1.1);
  }

  .color-swatch.blue { background: var(--color-primary-600); }
  .color-swatch.orange { background: var(--accent-orange-600); }
