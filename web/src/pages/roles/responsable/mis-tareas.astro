---
import ResponsableLayout from '../../../layouts/roles/ResponsableLayout.astro';
import MisTareasClient from '../../../components/responsable/MisTareasClient';
---

<ResponsableLayout title="Mis Tareas">
  <MisTareasClient client:load />
</ResponsableLayout>
    <!-- Header -->
    <div class="page-header">
      <div class="header-info">
        <h1 class="page-title">Mis Tareas</h1>
        <p class="page-description">Gestión de tareas y actividades pendientes</p>
      </div>
      <div class="header-stats">
        <div class="stat-badge pending">
          <span class="stat-number">8</span>
          <span class="stat-label">Pendientes</span>
        </div>
        <div class="stat-badge today">
          <span class="stat-number">3</span>
          <span class="stat-label">Para Hoy</span>
        </div>
      </div>
    </div>

    <!-- Quick Filters -->
    <div class="quick-filters">
      <button class="filter-btn active">
        <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
        </svg>
        Todas (12)
      </button>
      <button class="filter-btn">
        <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <polyline points="12,6 12,12 16,14"/>
        </svg>
        Pendientes (8)
      </button>
      <button class="filter-btn">
        <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
