      <button class="filter-btn">
        <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
          <line x1="12" y1="9" x2="12" y2="13"/>
          <line x1="12" y1="17" x2="12.01" y2="17"/>
        </svg>
        Vencidas (2)
      </button>
    </div>

    <!-- Tareas List -->
    <div class="tareas-container">
      <!-- Sección: Vencidas -->
      <div class="tareas-section overdue">
        <div class="section-header">
          <div class="section-title">
            <span class="section-icon">
              <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
              </svg>
            </span>
            <h2>Vencidas</h2>
            <span class="count">2</span>
          </div>
        </div>
        <div class="tareas-list">
          <div class="tarea-item overdue">
            <div class="tarea-checkbox">
              <input type="checkbox" id="task-1" />
              <label for="task-1"></label>
            </div>
            <div class="tarea-content">
              <div class="tarea-header">
                <h3 class="tarea-title">Completar datos faltantes - Reporte SUI-001</h3>
                <div class="tarea-priority high">
                  <svg viewBox="0 0 24 24" width="14" height="14" fill="currentColor">
                    <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
                  </svg>
                  Alta
                </div>
              </div>
              <p class="tarea-description">Faltan 2 campos por completar en la sección de indicadores comerciales</p>
