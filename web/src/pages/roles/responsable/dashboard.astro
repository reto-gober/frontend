---
import ResponsableLayout from '../../../layouts/roles/ResponsableLayout.astro';
---

<ResponsableLayout title="Dashboard Personal">
  <div class="dashboard-responsable">
    <!-- Bienvenida -->
    <section class="welcome-section">
      <div class="welcome-content">
        <h1 class="welcome-title">¡Buenos días, Juan!</h1>
        <p class="welcome-subtitle">Aquí está el resumen de tus actividades</p>
      </div>
      <div class="welcome-date">
        <span class="date-day">10</span>
        <span class="date-month">Febrero 2025</span>
      </div>
    </section>

    <!-- KPIs Personales -->
    <section class="kpis-section">
      <div class="kpis-grid">
        <div class="kpi-card primary">
          <div class="kpi-icon">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <path d="M14 2v6h6"/>
            </svg>
          </div>
          <div class="kpi-content">
            <span class="kpi-value">12</span>
            <span class="kpi-label">Mis Reportes</span>
          </div>
        </div>

        <div class="kpi-card warning">
          <div class="kpi-icon">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12,6 12,12 16,14"/>
            </svg>
          </div>
          <div class="kpi-content">
            <span class="kpi-value">4</span>
            <span class="kpi-label">Pendientes</span>
          </div>
        </div>

        <div class="kpi-card danger">
          <div class="kpi-icon">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
              <line x1="12" y1="9" x2="12" y2="13"/>
              <line x1="12" y1="17" x2="12.01" y2="17"/>
            </svg>
          </div>
          <div class="kpi-content">
            <span class="kpi-value">2</span>
            <span class="kpi-label">Próximos a Vencer</span>
          </div>
        </div>

        <div class="kpi-card success">
          <div class="kpi-icon">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
          </div>
          <div class="kpi-content">
            <span class="kpi-value">91%</span>
            <span class="kpi-label">Cumplimiento</span>
          </div>
        </div>
      </div>
    </section>

    <div class="dashboard-grid">
      <!-- Reportes Próximos a Vencer -->
      <section class="section-card">
        <div class="section-header">
          <h2 class="section-title">Próximos a Vencer</h2>
          <a href="/roles/responsable/mis-reportes" class="view-all">Ver todos</a>
        </div>
        <div class="reportes-list">
          <div class="reporte-item urgent">
            <div class="reporte-info">
              <span class="reporte-code">SUI-001</span>
              <span class="reporte-name">Informe Comercial de Gas Natural</span>
            </div>
            <div class="reporte-meta">
              <span class="reporte-entidad">SUI</span>
              <span class="reporte-deadline urgent">En 5 días</span>
            </div>
            <div class="progress-bar">
              <div class="progress-fill" style="width: 65%"></div>
            </div>
            <span class="progress-text">65% completado</span>
          </div>

          <div class="reporte-item warning">
            <div class="reporte-info">
              <span class="reporte-code">SUI-008</span>
              <span class="reporte-name">Informe de Calidad del Servicio</span>
            </div>
            <div class="reporte-meta">
              <span class="reporte-entidad">SUI</span>
              <span class="reporte-deadline warning">En 10 días</span>
            </div>
            <div class="progress-bar">
              <div class="progress-fill" style="width: 30%"></div>
            </div>
            <span class="progress-text">30% completado</span>
          </div>
        </div>
      </section>

      <!-- Tareas Pendientes -->
      <section class="section-card">
        <div class="section-header">
          <h2 class="section-title">Tareas Pendientes</h2>
          <a href="/roles/responsable/mis-tareas" class="view-all">Ver todas</a>
        </div>
        <div class="tareas-list">
          <div class="tarea-item">
            <label class="tarea-checkbox">
              <input type="checkbox" />
              <span class="checkmark"></span>
            </label>
            <div class="tarea-content">
              <span class="tarea-titulo">Completar sección 3 del SUI-001</span>
              <span class="tarea-meta">Vence hoy</span>
            </div>
            <span class="tarea-priority high">Alta</span>
          </div>
          <div class="tarea-item">
            <label class="tarea-checkbox">
              <input type="checkbox" />
              <span class="checkmark"></span>
            </label>
            <div class="tarea-content">
              <span class="tarea-titulo">Subir evidencias ANH-012</span>
              <span class="tarea-meta">Vence mañana</span>
            </div>
            <span class="tarea-priority medium">Media</span>
          </div>
          <div class="tarea-item">
            <label class="tarea-checkbox">
              <input type="checkbox" />
              <span class="checkmark"></span>
            </label>
            <div class="tarea-content">
              <span class="tarea-titulo">Revisar comentarios supervisor</span>
              <span class="tarea-meta">Vence en 3 días</span>
            </div>
            <span class="tarea-priority low">Baja</span>
          </div>
          <div class="tarea-item completed">
            <label class="tarea-checkbox">
              <input type="checkbox" checked />
              <span class="checkmark"></span>
            </label>
            <div class="tarea-content">
              <span class="tarea-titulo">Enviar reporte CREG-102</span>
              <span class="tarea-meta">Completada</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Alertas Recientes -->
      <section class="section-card">
        <div class="section-header">
          <h2 class="section-title">Alertas</h2>
          <a href="/roles/responsable/alertas" class="view-all">Ver todas</a>
        </div>
        <div class="alertas-list">
          <div class="alerta-item critical">
            <div class="alerta-icon">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" strokeWidth="2">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="8" x2="12" y2="12"/>
                <line x1="12" y1="16" x2="12.01" y2="16"/>
              </svg>
            </div>
            <div class="alerta-content">
              <span class="alerta-titulo">SUI-001 vence en 5 días</span>
              <span class="alerta-tiempo">Hace 2 horas</span>
            </div>
          </div>
          <div class="alerta-item info">
            <div class="alerta-icon">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" strokeWidth="2">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="16" x2="12" y2="12"/>
                <line x1="12" y1="8" x2="12.01" y2="8"/>
              </svg>
            </div>
            <div class="alerta-content">
              <span class="alerta-titulo">Supervisor aprobó ANH-012</span>
              <span class="alerta-tiempo">Ayer</span>
            </div>
          </div>
          <div class="alerta-item warning">
            <div class="alerta-icon">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" strokeWidth="2">
                <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
                <line x1="12" y1="9" x2="12" y2="13"/>
                <line x1="12" y1="17" x2="12.01" y2="17"/>
              </svg>
            </div>
            <div class="alerta-content">
              <span class="alerta-titulo">Nuevo reporte asignado: SUI-015</span>
              <span class="alerta-tiempo">Hace 2 días</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Mi Calendario Resumen -->
      <section class="section-card">
        <div class="section-header">
          <h2 class="section-title">Esta Semana</h2>
          <a href="/roles/responsable/calendario" class="view-all">Ver calendario</a>
        </div>
        <div class="mini-calendar">
          <div class="week-days">
            <div class="week-day">
              <span class="day-name">Lun</span>
              <span class="day-num">10</span>
              <span class="day-today">Hoy</span>
            </div>
            <div class="week-day">
              <span class="day-name">Mar</span>
              <span class="day-num">11</span>
            </div>
            <div class="week-day has-event">
              <span class="day-name">Mié</span>
              <span class="day-num">12</span>
              <span class="event-dot pending"></span>
            </div>
            <div class="week-day">
              <span class="day-name">Jue</span>
              <span class="day-num">13</span>
            </div>
            <div class="week-day has-event">
              <span class="day-name">Vie</span>
              <span class="day-num">14</span>
              <span class="event-dot progress"></span>
            </div>
            <div class="week-day has-event">
              <span class="day-name">Sáb</span>
              <span class="day-num">15</span>
              <span class="event-dot urgent"></span>
            </div>
            <div class="week-day">
              <span class="day-name">Dom</span>
              <span class="day-num">16</span>
            </div>
          </div>
          <div class="week-events">
            <div class="week-event urgent">
              <span class="event-date">15 Feb</span>
              <span class="event-name">SUI-001 - Fecha límite</span>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- Acción Rápida -->
    <section class="quick-action-section">
      <a href="/roles/responsable/crear-reporte" class="quick-action-card">
        <div class="quick-action-icon">
          <svg viewBox="0 0 24 24" width="32" height="32" fill="none" stroke="currentColor" strokeWidth="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
            <polyline points="14 2 14 8 20 8"/>
            <line x1="12" y1="11" x2="12" y2="17"/>
            <line x1="9" y1="14" x2="15" y2="14"/>
          </svg>
        </div>
        <div class="quick-action-content">
          <h3>Crear Nuevo Reporte</h3>
          <p>Inicia la elaboración de un nuevo reporte regulatorio</p>
        </div>
        <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" strokeWidth="2">
          <polyline points="9,18 15,12 9,6"/>
        </svg>
      </a>
    </section>
  </div>
</ResponsableLayout>

<style>
  .dashboard-responsable {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* Welcome Section */
  .welcome-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: linear-gradient(135deg, var(--role-accent) 0%, #E5B800 100%);
    border-radius: 16px;
    color: var(--neutral-900);
  }

  .welcome-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
  }

  .welcome-subtitle {
    font-size: 0.9375rem;
    margin: 0.25rem 0 0;
    opacity: 0.8;
  }

  .welcome-date {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0.75rem 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .date-day {
    font-size: 1.75rem;
    font-weight: 700;
    line-height: 1;
    color: var(--neutral-900);
  }

  .date-month {
    font-size: 0.75rem;
    color: var(--neutral-600);
    margin-top: 0.25rem;
  }

  /* KPIs */
  .kpis-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  @media (max-width: 1024px) {
    .kpis-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .kpi-card {
    background: white;
    border-radius: 12px;
    padding: 1.25rem;
    box-shadow: var(--shadow-card);
    display: flex;
    align-items: center;
    gap: 1rem;
    border-left: 4px solid;
  }

  .kpi-card.primary { border-left-color: var(--role-accent); }
  .kpi-card.warning { border-left-color: var(--accent-orange-500); }
  .kpi-card.danger { border-left-color: var(--error-red-500); }
  .kpi-card.success { border-left-color: var(--success-green-500); }

  .kpi-icon {
    width: 44px;
    height: 44px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .kpi-card.primary .kpi-icon { background: var(--role-accent-light); color: #92400E; }
  .kpi-card.warning .kpi-icon { background: var(--accent-orange-100); color: var(--accent-orange-600); }
  .kpi-card.danger .kpi-icon { background: var(--error-red-100); color: var(--error-red-600); }
  .kpi-card.success .kpi-icon { background: var(--success-green-100); color: var(--success-green-600); }

  .kpi-content {
    display: flex;
    flex-direction: column;
  }

  .kpi-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    line-height: 1;
  }

  .kpi-label {
    font-size: 0.8125rem;
    color: var(--neutral-500);
    margin-top: 0.25rem;
  }

  /* Dashboard Grid */
  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 1024px) {
    .dashboard-grid {
      grid-template-columns: 1fr;
    }
  }

  .section-card {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    padding: 1.25rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: 1rem;
    font-weight: 700;
    color: var(--neutral-800);
    margin: 0;
  }

  .view-all {
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--color-primary-600);
    text-decoration: none;
  }

  .view-all:hover {
    text-decoration: underline;
  }

  /* Reportes List */
  .reportes-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .reporte-item {
    padding: 1rem;
    background: var(--neutral-50);
    border-radius: 10px;
    border-left: 3px solid;
  }

  .reporte-item.urgent { border-left-color: var(--error-red-500); }
  .reporte-item.warning { border-left-color: var(--warning-yellow-500); }

  .reporte-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    margin-bottom: 0.5rem;
  }

  .reporte-code {
    font-size: 0.75rem;
    font-weight: 600;
    font-family: monospace;
    color: var(--neutral-500);
  }

  .reporte-name {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--neutral-800);
  }

  .reporte-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .reporte-entidad {
    font-size: 0.6875rem;
    font-weight: 600;
    padding: 0.125rem 0.5rem;
    background: var(--neutral-200);
    border-radius: 4px;
    color: var(--neutral-700);
  }

  .reporte-deadline {
    font-size: 0.75rem;
    font-weight: 600;
  }

  .reporte-deadline.urgent { color: var(--error-red-600); }
  .reporte-deadline.warning { color: var(--warning-yellow-600); }

  .progress-bar {
    height: 6px;
    background: var(--neutral-200);
    border-radius: 3px;
    overflow: hidden;
    margin-bottom: 0.375rem;
  }

  .progress-fill {
    height: 100%;
    background: var(--role-accent);
    border-radius: 3px;
    transition: width 0.3s ease;
  }

  .progress-text {
    font-size: 0.6875rem;
    color: var(--neutral-500);
  }

  /* Tareas List */
  .tareas-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .tarea-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    background: var(--neutral-50);
    border-radius: 8px;
  }

  .tarea-item.completed {
    opacity: 0.6;
  }

  .tarea-item.completed .tarea-titulo {
    text-decoration: line-through;
  }

  .tarea-checkbox {
    position: relative;
    display: flex;
    align-items: center;
    cursor: pointer;
  }

  .tarea-checkbox input {
    display: none;
  }

  .checkmark {
    width: 18px;
    height: 18px;
    border: 2px solid var(--neutral-300);
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
  }

  .tarea-checkbox input:checked + .checkmark {
    background: var(--success-green-500);
    border-color: var(--success-green-500);
  }

  .tarea-checkbox input:checked + .checkmark::after {
    content: '✓';
    color: white;
    font-size: 0.75rem;
    font-weight: bold;
  }

  .tarea-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .tarea-titulo {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-800);
  }

  .tarea-meta {
    font-size: 0.6875rem;
    color: var(--neutral-500);
  }

  .tarea-priority {
    font-size: 0.625rem;
    font-weight: 600;
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    text-transform: uppercase;
  }

  .tarea-priority.high { background: var(--error-red-100); color: var(--error-red-700); }
  .tarea-priority.medium { background: var(--warning-yellow-100); color: var(--warning-yellow-700); }
  .tarea-priority.low { background: var(--success-green-100); color: var(--success-green-700); }

  /* Alertas List */
  .alertas-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .alerta-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    border-radius: 8px;
    border-left: 3px solid;
  }

  .alerta-item.critical {
    background: var(--error-red-50);
    border-left-color: var(--error-red-500);
  }

  .alerta-item.warning {
    background: var(--warning-yellow-50);
    border-left-color: var(--warning-yellow-500);
  }

  .alerta-item.info {
    background: var(--color-primary-50);
    border-left-color: var(--color-primary-500);
  }

  .alerta-icon {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
  }

  .alerta-item.critical .alerta-icon { color: var(--error-red-600); }
  .alerta-item.warning .alerta-icon { color: var(--warning-yellow-600); }
  .alerta-item.info .alerta-icon { color: var(--color-primary-600); }

  .alerta-content {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .alerta-titulo {
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--neutral-800);
  }

  .alerta-tiempo {
    font-size: 0.6875rem;
    color: var(--neutral-500);
  }

  /* Mini Calendar */
  .mini-calendar {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .week-days {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 0.5rem;
  }

  .week-day {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0.5rem;
    border-radius: 8px;
    position: relative;
  }

  .week-day:first-child {
    background: var(--role-accent-light);
  }

  .day-name {
    font-size: 0.625rem;
    font-weight: 600;
    color: var(--neutral-500);
    text-transform: uppercase;
  }

  .day-num {
    font-size: 1rem;
    font-weight: 600;
    color: var(--neutral-800);
    margin: 0.25rem 0;
  }

  .day-today {
    font-size: 0.5625rem;
    font-weight: 600;
    color: #92400E;
  }

  .event-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
  }

  .event-dot.pending { background: var(--warning-yellow-500); }
  .event-dot.progress { background: var(--color-primary-500); }
  .event-dot.urgent { background: var(--error-red-500); }

  .week-events {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .week-event {
    display: flex;
    gap: 0.75rem;
    padding: 0.5rem 0.75rem;
    border-radius: 6px;
    font-size: 0.75rem;
  }

  .week-event.urgent {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  .event-date {
    font-weight: 600;
  }

  /* Quick Action Section */
  .quick-action-section {
    margin-top: 0.5rem;
  }

  .quick-action-card {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, var(--role-accent) 0%, #E5B800 100%);
    border-radius: 16px;
    text-decoration: none;
    transition: transform 0.2s;
  }

  .quick-action-card:hover {
    transform: translateY(-2px);
  }

  .quick-action-icon {
    width: 56px;
    height: 56px;
    background: white;
    border-radius: 12px;
    display: flex;
