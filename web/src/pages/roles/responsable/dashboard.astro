---
import ResponsableLayout from '../../../layouts/roles/ResponsableLayout.astro';
import ResponsableDashboardClient from '../../../components/responsable/ResponsableDashboardClient.tsx';
---

<ResponsableLayout title="Mi Panel de Reportes">
  <ResponsableDashboardClient client:load />
</ResponsableLayout>

<style is:global>
  .dashboard-responsable {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .dashboard-header-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 1.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .header-left {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .period-filter {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .filter-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--neutral-700);
  }

  .filter-select {
    padding: 0.5rem 1rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    background: white;
    font-size: 0.875rem;
    color: var(--neutral-700);
    cursor: pointer;
    transition: all 0.2s;
  }

  .filter-select:hover {
    border-color: var(--color-primary-400);
  }

  .filter-select:focus {
    outline: none;
    border-color: var(--color-primary-500);
    box-shadow: 0 0 0 3px rgba(61, 133, 209, 0.1);
  }

  .header-actions {
    display: flex;
    gap: 0.75rem;
  }

  .btn-create-report {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.125rem;
    background: var(--color-primary-600);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-create-report:hover {
    background: var(--color-primary-700);
    transform: translateY(-1px);
    box-shadow: var(--shadow-hover);
  }

  .kpis-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  .kpi-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: all 0.2s;
  }

  .kpi-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-hover);
  }

  .kpi-card.neutral { border-left: 4px solid var(--neutral-600); }
  .kpi-card.success { border-left: 4px solid var(--success-green-600); }
  .kpi-card.danger { border-left: 4px solid var(--error-red-600); }
  .kpi-card.warning { border-left: 4px solid var(--accent-orange-600); }

  .kpi-icon {
    width: 56px;
    height: 56px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .kpi-card.neutral .kpi-icon {
    background: var(--neutral-100);
    color: var(--neutral-600);
  }

  .kpi-card.success .kpi-icon {
    background: var(--success-green-100);
    color: var(--success-green-600);
  }

  .kpi-card.danger .kpi-icon {
    background: var(--error-red-100);
    color: var(--error-red-600);
  }

  .kpi-card.warning .kpi-icon {
    background: var(--accent-orange-100);
    color: var(--accent-orange-600);
  }

  .kpi-content {
    flex: 1;
  }

  .kpi-value {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    color: var(--neutral-900);
    line-height: 1;
    margin-bottom: 0.25rem;
  }

  .kpi-label {
    display: block;
    font-size: 0.875rem;
    color: var(--neutral-600);
  }

  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .dashboard-card {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    overflow: hidden;
  }

  .dashboard-card.wide {
    grid-column: span 2;
  }

  .card-header {
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--neutral-100);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .card-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .card-link {
    font-size: 0.875rem;
    color: var(--color-primary-600);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
  }

  .card-link:hover {
    color: var(--color-primary-700);
  }

  .card-body {
    padding: 1.5rem;
  }

  .donut-chart-container {
    display: flex;
    justify-content: center;
    margin-bottom: 1.5rem;
  }

  .donut-chart {
    width: 200px;
    height: 200px;
  }

  .legend-grid {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--neutral-700);
  }

  .legend-dot {
    width: 12px;
    height: 12px;
    border-radius: 3px;
  }

  .vencimientos-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .vencimiento-item {
    padding: 1rem;
    background: var(--neutral-50);
    border-radius: 8px;
    border-left: 4px solid var(--color-primary-500);
  }

  .vencimiento-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .vencimiento-codigo {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--neutral-600);
    text-transform: uppercase;
  }

  .dias-badge {
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .dias-badge.urgent {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  .dias-badge.normal {
    background: var(--accent-orange-100);
    color: var(--accent-orange-700);
  }

  .vencimiento-nombre {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--neutral-900);
    margin: 0 0 0.5rem 0;
  }

  .vencimiento-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.75rem;
    color: var(--neutral-600);
    margin-bottom: 0.75rem;
  }

  .entidad-badge {
    padding: 0.125rem 0.5rem;
    background: var(--color-primary-100);
    color: var(--color-primary-700);
    border-radius: 4px;
    font-weight: 600;
  }

  .progress-bar {
    height: 6px;
    background: var(--neutral-200);
    border-radius: 3px;
    overflow: hidden;
    margin-bottom: 0.25rem;
  }

  .progress-fill {
    height: 100%;
    background: var(--color-primary-600);
    border-radius: 3px;
    transition: width 0.3s;
  }

  .progress-label {
    font-size: 0.75rem;
    color: var(--neutral-600);
  }

  .loading-spinner {
    display: inline-block;
    width: 40px;
    height: 40px;
    border: 4px solid var(--neutral-200);
    border-top-color: var(--color-primary-600);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  @media (max-width: 1024px) {
    .kpis-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .dashboard-grid {
      grid-template-columns: 1fr;
    }

    .dashboard-card.wide {
      grid-column: span 1;
    }
  }

  @media (max-width: 640px) {
    .kpis-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
