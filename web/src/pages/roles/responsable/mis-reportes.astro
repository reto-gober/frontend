---
import ResponsableLayout from '../../../layouts/roles/ResponsableLayout.astro';
---

<ResponsableLayout title="Mis Reportes">
  <div class="mis-reportes-page">
    <!-- Header -->
    <div class="page-header">
      <div class="header-info">
        <h1 class="page-title">Mis Reportes</h1>
        <p class="page-description">Reportes asignados a tu cargo</p>
      </div>
      <a href="/roles/responsable/crear-reporte" class="btn-primary">
        <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" strokeWidth="2">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
          <line x1="12" y1="11" x2="12" y2="17"/>
          <line x1="9" y1="14" x2="15" y2="14"/>
        </svg>
        Nuevo Reporte
      </a>
    </div>

    <!-- Filtros rápidos por estado -->
    <div class="status-tabs">
      <button class="status-tab active" data-status="all">
        <span class="tab-count">12</span>
        <span class="tab-label">Todos</span>
      </button>
      <button class="status-tab" data-status="pending">
        <span class="tab-count">4</span>
        <span class="tab-label">Pendientes</span>
      </button>
      <button class="status-tab" data-status="progress">
        <span class="tab-count">3</span>
        <span class="tab-label">En Progreso</span>
      </button>
      <button class="status-tab" data-status="review">
        <span class="tab-count">2</span>
        <span class="tab-label">En Revisión</span>
      </button>
      <button class="status-tab" data-status="sent">
        <span class="tab-count">3</span>
        <span class="tab-label">Enviados</span>
      </button>
    </div>

    <!-- Búsqueda y filtros adicionales -->
    <div class="filters-bar">
      <div class="search-box">
        <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" strokeWidth="2">
          <circle cx="11" cy="11" r="8"/>
          <path d="M21 21l-4.35-4.35"/>
        </svg>
        <input type="text" placeholder="Buscar por código o nombre..." class="search-input" />
      </div>
      <div class="filter-group">
        <select class="filter-select">
          <option value="">Todas las entidades</option>
          <option value="sui">SUI</option>
          <option value="creg">CREG</option>
          <option value="anh">ANH</option>
        </select>
        <select class="filter-select">
          <option value="">Frecuencia</option>
          <option value="mensual">Mensual</option>
          <option value="trimestral">Trimestral</option>
        </select>
      </div>
    </div>

    <!-- Lista de reportes -->
    <div class="reportes-list">
      <!-- Reporte Urgente -->
      <div class="reporte-card urgent">
        <div class="reporte-header">
          <div class="reporte-badge urgent">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
            </svg>
            Vence en 5 días
          </div>
          <span class="reporte-code">SUI-001</span>
        </div>
        <h3 class="reporte-title">Informe Comercial de Gas Natural</h3>
        <div class="reporte-meta">
          <span class="meta-item">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M3 22V8l9-5 9 5v14"/>
            </svg>
            SUI
          </span>
          <span class="meta-item">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
            15 Feb 2025
          </span>
          <span class="meta-item">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <polyline points="23 4 23 10 17 10"/>
              <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"/>
            </svg>
            Mensual
          </span>
        </div>
        <div class="reporte-progress">
          <div class="progress-header">
            <span class="progress-label">Progreso</span>
            <span class="progress-value">65%</span>
          </div>
          <div class="progress-bar">
            <div class="progress-fill" style="width: 65%"></div>
          </div>
        </div>
        <div class="reporte-footer">
          <span class="status-badge progress">En Progreso</span>
          <div class="action-buttons">
            <button class="btn-action">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" strokeWidth="2">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                <circle cx="12" cy="12" r="3"/>
              </svg>
              Ver
            </button>
            <button class="btn-action primary">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" strokeWidth="2">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
              </svg>
              Continuar
            </button>
          </div>
        </div>
      </div>

      <!-- Reporte Warning -->
      <div class="reporte-card warning">
        <div class="reporte-header">
          <div class="reporte-badge warning">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12,6 12,12 16,14"/>
            </svg>
            Vence en 10 días
          </div>
          <span class="reporte-code">SUI-008</span>
        </div>
        <h3 class="reporte-title">Informe de Calidad del Servicio</h3>
        <div class="reporte-meta">
          <span class="meta-item">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M3 22V8l9-5 9 5v14"/>
            </svg>
            SUI
          </span>
          <span class="meta-item">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
            20 Feb 2025
          </span>
          <span class="meta-item">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <polyline points="23 4 23 10 17 10"/>
              <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"/>
            </svg>
            Mensual
          </span>
        </div>
        <div class="reporte-progress">
          <div class="progress-header">
            <span class="progress-label">Progreso</span>
            <span class="progress-value">30%</span>
          </div>
          <div class="progress-bar">
            <div class="progress-fill" style="width: 30%"></div>
          </div>
        </div>
        <div class="reporte-footer">
          <span class="status-badge progress">En Progreso</span>
          <div class="action-buttons">
            <button class="btn-action">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" strokeWidth="2">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                <circle cx="12" cy="12" r="3"/>
              </svg>
              Ver
            </button>
            <button class="btn-action primary">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" strokeWidth="2">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
              </svg>
              Continuar
            </button>
          </div>
        </div>
      </div>

      <!-- Reporte Pendiente -->
      <div class="reporte-card">
        <div class="reporte-header">
          <div class="reporte-badge normal">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12,6 12,12 16,14"/>
            </svg>
            Vence en 18 días
          </div>
          <span class="reporte-code">CREG-045</span>
        </div>
        <h3 class="reporte-title">Resolución Tarifaria</h3>
        <div class="reporte-meta">
          <span class="meta-item">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M3 22V8l9-5 9 5v14"/>
            </svg>
            CREG
          </span>
          <span class="meta-item">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
            28 Feb 2025
          </span>
          <span class="meta-item">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <polyline points="23 4 23 10 17 10"/>
              <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"/>
            </svg>
            Trimestral
          </span>
        </div>
        <div class="reporte-progress">
          <div class="progress-header">
            <span class="progress-label">Progreso</span>
            <span class="progress-value">0%</span>
          </div>
          <div class="progress-bar">
            <div class="progress-fill" style="width: 0%"></div>
          </div>
        </div>
        <div class="reporte-footer">
          <span class="status-badge pending">Pendiente</span>
          <div class="action-buttons">
            <button class="btn-action">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" strokeWidth="2">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                <circle cx="12" cy="12" r="3"/>
              </svg>
              Ver
            </button>
            <button class="btn-action primary">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" strokeWidth="2">
                <polygon points="5 3 19 12 5 21 5 3"/>
              </svg>
              Iniciar
            </button>
          </div>
        </div>
      </div>

      <!-- Reporte En Revisión -->
      <div class="reporte-card review">
        <div class="reporte-header">
          <div class="reporte-badge review">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
            En revisión
          </div>
          <span class="reporte-code">ANH-012</span>
        </div>
        <h3 class="reporte-title">Informe de Producción</h3>
        <div class="reporte-meta">
          <span class="meta-item">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M3 22V8l9-5 9 5v14"/>
            </svg>
            ANH
          </span>
          <span class="meta-item">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
            10 Feb 2025
          </span>
          <span class="meta-item">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <polyline points="23 4 23 10 17 10"/>
              <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"/>
            </svg>
            Mensual
          </span>
        </div>
        <div class="reporte-progress">
          <div class="progress-header">
            <span class="progress-label">Progreso</span>
            <span class="progress-value">100%</span>
          </div>
          <div class="progress-bar">
            <div class="progress-fill complete" style="width: 100%"></div>
          </div>
        </div>
        <div class="reporte-footer">
          <span class="status-badge review">En Revisión</span>
          <div class="action-buttons">
            <button class="btn-action">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" strokeWidth="2">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                <circle cx="12" cy="12" r="3"/>
              </svg>
              Ver
            </button>
          </div>
        </div>
      </div>

      <!-- Reporte Enviado -->
      <div class="reporte-card sent">
        <div class="reporte-header">
          <div class="reporte-badge sent">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            Enviado
          </div>
          <span class="reporte-code">CREG-102</span>
        </div>
        <h3 class="reporte-title">Balance Energético Mensual</h3>
        <div class="reporte-meta">
          <span class="meta-item">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <path d="M3 22V8l9-5 9 5v14"/>
            </svg>
            CREG
          </span>
          <span class="meta-item">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
            08 Feb 2025
          </span>
          <span class="meta-item">
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" strokeWidth="2">
              <polyline points="23 4 23 10 17 10"/>
              <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"/>
            </svg>
            Mensual
          </span>
        </div>
        <div class="reporte-progress">
          <div class="progress-header">
            <span class="progress-label">Enviado el</span>
            <span class="progress-value">08 Feb 2025</span>
          </div>
          <div class="progress-bar">
            <div class="progress-fill complete" style="width: 100%"></div>
          </div>
        </div>
        <div class="reporte-footer">
          <span class="status-badge sent">Enviado</span>
          <div class="action-buttons">
            <button class="btn-action">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" strokeWidth="2">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                <circle cx="12" cy="12" r="3"/>
              </svg>
              Ver
            </button>
            <button class="btn-action">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" strokeWidth="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                <polyline points="7,10 12,15 17,10"/>
                <line x1="12" y1="15" x2="12" y2="3"/>
              </svg>
              Descargar
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</ResponsableLayout>

<style>
  .mis-reportes-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-500);
    margin: 0.25rem 0 0;
  }

  .btn-primary {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--role-accent);
    color: var(--neutral-900);
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-primary:hover {
    background: var(--role-accent-dark);
  }

  /* Status Tabs */
  .status-tabs {
    display: flex;
    gap: 0.5rem;
    background: white;
    padding: 0.5rem;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    overflow-x: auto;
  }

  .status-tab {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    border: none;
    border-radius: 8px;
    background: transparent;
    cursor: pointer;
    transition: all 0.2s;
  }

  .status-tab:hover {
    background: var(--neutral-100);
  }

  .status-tab.active {
    background: var(--role-accent);
  }

  .tab-count {
    font-size: 1rem;
    font-weight: 700;
    color: var(--neutral-800);
  }

  .tab-label {
    font-size: 0.8125rem;
    color: var(--neutral-600);
    white-space: nowrap;
  }

  .status-tab.active .tab-count,
  .status-tab.active .tab-label {
    color: var(--neutral-900);
  }

  /* Filters */
  .filters-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    padding: 1rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .search-box {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--neutral-100);
    border-radius: 8px;
    min-width: 250px;
  }

  .search-box svg {
    color: var(--neutral-400);
  }

  .search-input {
    border: none;
    background: transparent;
    outline: none;
    font-size: 0.875rem;
    width: 100%;
  }

  .filter-group {
    display: flex;
    gap: 0.75rem;
  }

  .filter-select {
    padding: 0.5rem 1rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    font-size: 0.875rem;
    background: white;
    cursor: pointer;
  }

  /* Reportes List */
  .reportes-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .reporte-card {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    padding: 1.25rem;
    border-left: 4px solid var(--neutral-300);
    transition: all 0.2s;
  }

  .reporte-card:hover {
    box-shadow: var(--shadow-hover);
  }

  .reporte-card.urgent { border-left-color: var(--error-red-500); }
  .reporte-card.warning { border-left-color: var(--warning-yellow-500); }
  .reporte-card.review { border-left-color: var(--secondary-purple-500); }
  .reporte-card.sent { border-left-color: var(--success-green-500); }

  .reporte-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .reporte-badge {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.25rem 0.625rem;
    border-radius: 6px;
    font-size: 0.6875rem;
    font-weight: 600;
  }

  .reporte-badge.urgent {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  .reporte-badge.warning {
    background: var(--warning-yellow-100);
    color: var(--warning-yellow-700);
  }

  .reporte-badge.normal {
    background: var(--neutral-100);
    color: var(--neutral-600);
  }

  .reporte-badge.review {
    background: var(--secondary-purple-100);
    color: var(--secondary-purple-700);
  }

  .reporte-badge.sent {
    background: var(--success-green-100);
    color: var(--success-green-700);
  }

  .reporte-code {
    font-size: 0.75rem;
    font-weight: 600;
    font-family: monospace;
    color: var(--neutral-500);
  }

  .reporte-title {
    font-size: 1.0625rem;
    font-weight: 600;
    color: var(--neutral-900);
    margin: 0 0 0.75rem;
  }

  .reporte-meta {
    display: flex;
    gap: 1.25rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    color: var(--neutral-600);
  }

  .meta-item svg {
    color: var(--neutral-400);
  }

  .reporte-progress {
    margin-bottom: 1rem;
  }

  .progress-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.375rem;
  }

  .progress-label {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  .progress-value {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--neutral-700);
  }

  .progress-bar {
    height: 6px;
    background: var(--neutral-200);
    border-radius: 3px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: var(--role-accent);
    border-radius: 3px;
    transition: width 0.3s ease;
  }

  .progress-fill.complete {
    background: var(--success-green-500);
  }

  .reporte-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid var(--neutral-100);
  }

  .status-badge {
    display: inline-flex;
    padding: 0.25rem 0.75rem;
