---
import AuditorLayout from '../../../layouts/roles/AuditorLayout.astro';
import AuditorReportesClient from '../../../components/auditor/AuditorReportesClient';
---

<AuditorLayout title="Reportes - Vista General">
  <AuditorReportesClient client:load />
</AuditorLayout>

<style is:global>
  .reportes-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-500);
    margin: 0.25rem 0 0;
  }

  .btn-export {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: var(--role-accent);
    border: none;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: white;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-export:hover {
    background: #9575e0;
  }

  /* Filters */
  .filters-section {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    flex-wrap: wrap;
  }

  .search-box {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: var(--neutral-100);
    border-radius: 8px;
    flex: 1;
    min-width: 280px;
    max-width: 400px;
  }

  .search-box svg {
    color: var(--neutral-400);
    flex-shrink: 0;
  }

  .search-input {
    border: none;
    background: transparent;
    outline: none;
    font-size: 0.875rem;
    width: 100%;
  }

  .filters {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .filter-select {
    padding: 0.625rem 0.875rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    background: white;
    color: var(--neutral-600);
    font-size: 0.875rem;
    min-width: 140px;
    cursor: pointer;
  }

  /* Table */
  .table-container {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .table-wrapper {
    overflow-x: auto;
  }

  .reports-table {
    width: 100%;
    border-collapse: collapse;
  }

  .reports-table th,
  .reports-table td {
    padding: 1rem 1.25rem;
    text-align: left;
  }

  .reports-table thead {
    background: var(--neutral-50);
  }

  .reports-table th {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--neutral-500);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .reports-table tbody tr {
    border-bottom: 1px solid var(--neutral-100);
  }

  .reports-table tbody tr:hover {
    background: var(--neutral-50);
  }

  .reports-table .code {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    background: var(--neutral-100);
    border-radius: 6px;
    font-weight: 700;
    color: var(--neutral-700);
  }

  .report-title {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .report-title .title {
    font-weight: 700;
    color: var(--neutral-900);
  }

  .report-title .subtitle {
    font-size: 0.8125rem;
    color: var(--neutral-500);
  }

  .user-info {
    display: flex;
    flex-direction: column;
  }

  .user-name {
    font-weight: 600;
    color: var(--neutral-800);
  }

  .user-team {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  .supervisor {
    color: var(--neutral-700);
    font-weight: 600;
  }

  .date {
    color: var(--neutral-700);
    font-weight: 600;
  }

  .date-label {
    display: inline-block;
    margin-left: 0.5rem;
    padding: 0.125rem 0.5rem;
    background: var(--neutral-100);
    border-radius: 12px;
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.375rem 0.75rem;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .status-badge.pending {
    background: var(--warning-yellow-100);
    color: var(--warning-yellow-800);
  }

  .status-badge.review {
    background: var(--color-primary-100);
    color: var(--color-primary-700);
  }

  .status-badge.observations {
    background: var(--accent-orange-100);
    color: var(--accent-orange-700);
  }

  .status-badge.sent {
    background: var(--success-green-100);
    color: var(--success-green-700);
  }

  .status-badge.error {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  .date-na {
    color: var(--neutral-400);
    font-weight: 600;
  }

  .btn-action {
    width: 32px;
    height: 32px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: var(--neutral-100);
    border: none;
    border-radius: 8px;
    color: var(--neutral-500);
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-action:hover {
    background: var(--neutral-200);
    color: var(--neutral-700);
  }

  /* Row states */
  .reports-table tr.urgent {
    background: var(--warning-yellow-50);
  }

  .reports-table tr.warning {
    background: var(--accent-orange-50);
  }

  .reports-table tr.overdue {
    background: var(--error-red-50);
  }

  .reports-table tr.sent {
    background: var(--success-green-50);
  }

  /* Pagination */
  .table-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    border-top: 1px solid var(--neutral-100);
  }

  .showing-info {
    color: var(--neutral-500);
    font-size: 0.875rem;
  }

  .pagination {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .page-btn {
    width: 36px;
    height: 36px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: white;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    color: var(--neutral-600);
    cursor: pointer;
    transition: all 0.2s;
  }

  .page-btn:hover {
    border-color: var(--neutral-300);
    color: var(--neutral-800);
  }

  .page-btn.active {
    background: var(--role-accent);
    border-color: var(--role-accent);
    color: white;
  }

  .page-btn.disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .page-dots {
    color: var(--neutral-400);
    padding: 0 0.25rem;
  }

  @media (max-width: 1024px) {
    .filters-section {
      flex-direction: column;
      align-items: stretch;
    }

    .filters {
      width: 100%;
      justify-content: flex-start;
    }

    .filter-select {
      flex: 1;
      min-width: 160px;
    }
  }

  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      gap: 1rem;
    }

    .filters-section {
      gap: 0.75rem;
    }

    .filters {
      flex-direction: column;
    }

    .filter-select {
      width: 100%;
    }
  }
</style>
