---
import AuditorLayout from '../../../layouts/roles/AuditorLayout.astro';
import AuditorCumplimientoClient from '../../../components/auditor/AuditorCumplimientoClient';
---

<AuditorLayout title="Cumplimiento Regulatorio">
  <AuditorCumplimientoClient client:load />
</AuditorLayout>

<style is:global>
  .cumplimiento-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-500);
    margin: 0.25rem 0 0;
  }

  .header-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .date-range {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: white;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    font-size: 0.875rem;
    color: var(--neutral-600);
    cursor: pointer;
  }

  .btn-export {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: var(--role-accent);
    border: none;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: white;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-export:hover {
    background: #9575e0;
  }

  /* Summary Cards */
  .summary-cards {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .summary-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .summary-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    background: var(--role-accent-light);
    color: var(--role-accent);
  }

  .summary-icon.blue {
    background: var(--color-primary-100);
    color: var(--color-primary-600);
  }

  .summary-icon.green {
    background: var(--success-green-100);
    color: var(--success-green-600);
  }

  .summary-icon.red {
    background: var(--error-red-100);
    color: var(--error-red-600);
  }

  .summary-content {
    flex: 1;
  }

  .summary-value {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    line-height: 1;
  }

  .summary-label {
    display: block;
    font-size: 0.75rem;
    color: var(--neutral-500);
    margin-top: 0.25rem;
  }

  .summary-trend {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .summary-trend.up {
    background: var(--success-green-100);
    color: var(--success-green-700);
  }

  /* Entity Tabs */
  .entity-tabs {
    display: flex;
    gap: 0.5rem;
    padding: 0.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    overflow-x: auto;
  }

  .entity-tab {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: transparent;
    border: none;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-500);
    cursor: pointer;
    transition: all 0.2s;
    white-space: nowrap;
    position: relative;
  }

  .entity-tab:hover {
    background: var(--neutral-100);
    color: var(--neutral-700);
  }

  .entity-tab.active {
    background: var(--role-accent);
    color: white;
  }

  .entity-tab.warning {
    color: var(--warning-yellow-700);
  }

  .tab-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .tab-dot.all { background: var(--neutral-400); }
  .tab-dot.sui { background: #3b82f6; }
  .tab-dot.creg { background: #8b5cf6; }
  .tab-dot.anh { background: #f59e0b; }
  .tab-dot.sspd { background: #ef4444; }
  .tab-dot.minenergia { background: #22c55e; }

  .tab-alert {
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--error-red-500);
    color: white;
    border-radius: 50%;
    font-size: 0.625rem;
    font-weight: 700;
  }

  /* Compliance Table */
  .compliance-table-container {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    overflow: hidden;
  }

  .table-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem;
    border-bottom: 1px solid var(--neutral-100);
  }

  .table-title h3 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--neutral-800);
    margin: 0;
  }

  .table-subtitle {
    display: block;
    font-size: 0.75rem;
    color: var(--neutral-500);
    margin-top: 0.25rem;
  }

  .table-search {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--neutral-100);
    border-radius: 8px;
  }

  .table-search svg {
    color: var(--neutral-400);
  }

  .table-search input {
    border: none;
    background: transparent;
    outline: none;
    font-size: 0.875rem;
    width: 200px;
  }

  .table-wrapper {
    overflow-x: auto;
  }

  .compliance-table {
    width: 100%;
    border-collapse: collapse;
  }

  .compliance-table th {
    padding: 0.875rem 1rem;
    text-align: left;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--neutral-500);
    background: var(--neutral-50);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .compliance-table td {
    padding: 1rem;
    font-size: 0.875rem;
    color: var(--neutral-700);
    border-top: 1px solid var(--neutral-100);
  }

  .compliance-table tr.highlight-warning td {
    background: var(--warning-yellow-50);
  }

  .compliance-table tfoot td {
    background: var(--neutral-50);
    font-weight: 600;
  }

  .center {
    text-align: center;
  }

  .entity-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .entity-badge {
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.6875rem;
    font-weight: 600;
    color: white;
  }

  .entity-badge.sui { background: #3b82f6; }
  .entity-badge.creg { background: #8b5cf6; }
  .entity-badge.anh { background: #f59e0b; }
  .entity-badge.sspd { background: #ef4444; }
  .entity-badge.minenergia { background: #22c55e; }

  .entity-name {
    font-size: 0.8125rem;
    color: var(--neutral-600);
  }

  .count-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 24px;
    height: 24px;
    padding: 0 0.5rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .count-badge.green {
    background: var(--success-green-100);
    color: var(--success-green-700);
  }

  .count-badge.yellow {
    background: var(--warning-yellow-100);
    color: var(--warning-yellow-800);
  }

  .count-badge.red {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  .count-badge.neutral {
    background: var(--neutral-200);
    color: var(--neutral-500);
  }

  .compliance-bar {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .bar-track {
    flex: 1;
    height: 8px;
    background: var(--neutral-200);
    border-radius: 4px;
    overflow: hidden;
  }

  .bar-fill {
    height: 100%;
    border-radius: 4px;
  }

  .bar-fill.green {
    background: var(--success-green-500);
  }

  .bar-fill.warning {
    background: var(--warning-yellow-500);
  }

  .bar-value {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--neutral-700);
    min-width: 45px;
  }

  .bar-value.warning {
    color: var(--warning-yellow-700);
  }

  .trend {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .trend.up {
    color: var(--success-green-600);
  }

  .trend.down {
    color: var(--error-red-600);
  }

  .trend.stable {
    color: var(--neutral-500);
  }

  .status-indicator {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.625rem;
    border-radius: 12px;
    font-size: 0.6875rem;
    font-weight: 600;
  }

  .status-indicator.ok {
    background: var(--success-green-100);
    color: var(--success-green-700);
  }

  .status-indicator.excellent {
    background: var(--role-accent-light);
    color: var(--role-accent);
  }

  .status-indicator.critical {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  /* Alerts Section */
  .alerts-section {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    overflow: hidden;
  }

  .alerts-header {
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--neutral-100);
  }

  .alerts-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    color: var(--neutral-800);
    margin: 0;
  }

  .alerts-title svg {
    color: var(--error-red-500);
  }

  .alerts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    padding: 1.25rem;
  }

  .alert-card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
    border-radius: 8px;
    border-left: 4px solid;
  }

  .alert-card.critical {
    background: var(--error-red-50);
    border-color: var(--error-red-500);
  }

  .alert-card.warning {
    background: var(--warning-yellow-50);
    border-color: var(--warning-yellow-500);
  }

  .alert-card.info {
    background: var(--color-primary-50);
    border-color: var(--color-primary-500);
  }

  .alert-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
  }

  .alert-card.critical .alert-icon {
    background: var(--error-red-100);
    color: var(--error-red-600);
  }

  .alert-card.warning .alert-icon {
    background: var(--warning-yellow-100);
    color: var(--warning-yellow-700);
  }

  .alert-card.info .alert-icon {
    background: var(--color-primary-100);
    color: var(--color-primary-600);
  }

  .alert-content {
    flex: 1;
  }

  .alert-badge {
    display: inline-block;
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-size: 0.625rem;
    font-weight: 700;
    background: var(--neutral-200);
    color: var(--neutral-600);
    margin-bottom: 0.5rem;
  }

  .alert-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--neutral-800);
    margin: 0 0 0.25rem;
  }

  .alert-description {
    font-size: 0.75rem;
    color: var(--neutral-500);
    margin: 0;
    line-height: 1.4;
  }

  .btn-view {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    background: white;
    border: 1px solid var(--neutral-200);
    border-radius: 6px;
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--neutral-600);
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-view:hover {
    background: var(--neutral-100);
    border-color: var(--neutral-300);
  }

  @media (max-width: 1200px) {
    .summary-cards {
      grid-template-columns: repeat(2, 1fr);
    }

    .alerts-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      gap: 1rem;
    }

    .summary-cards {
      grid-template-columns: 1fr;
    }

    .entity-tabs {
      overflow-x: auto;
    }
  }
</style>
