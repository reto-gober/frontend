<style>
  .entidades-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-500);
    margin: 0.25rem 0 0;
  }

  .btn-export {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: var(--role-accent);
    border: none;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: white;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-export:hover {
    background: #9575e0;
  }

  /* Summary Cards */
  .summary-cards {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .summary-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .summary-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    background: var(--role-accent-light);
    color: var(--role-accent);
  }

  .summary-icon.blue {
    background: var(--color-primary-100);
    color: var(--color-primary-600);
  }

  .summary-icon.green {
    background: var(--success-green-100);
    color: var(--success-green-600);
  }

  .summary-icon.yellow {
    background: var(--warning-yellow-100);
    color: var(--warning-yellow-700);
  }

  .summary-content {
    flex: 1;
  }

  .summary-value {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    line-height: 1;
  }

  .summary-label {
    display: block;
    font-size: 0.75rem;
    color: var(--neutral-500);
    margin-top: 0.25rem;
  }

  /* Entities Grid */
  .entities-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .entity-card {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .entity-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-card-hover);
  }

  .entity-card.critical {
    border: 2px solid var(--error-red-300);
  }

  .entity-card.excellent {
    border: 2px solid var(--success-green-300);
  }

  .entity-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    background: linear-gradient(135deg, var(--neutral-100), var(--neutral-50));
  }

  .entity-header.sui {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(59, 130, 246, 0.05));
  }

  .entity-header.creg {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(139, 92, 246, 0.05));
  }

  .entity-header.anh {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(245, 158, 11, 0.05));
  }

  .entity-header.sspd {
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(239, 68, 68, 0.05));
  }

  .entity-header.minenergia {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(34, 197, 94, 0.05));
  }

  .entity-logo {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    background: white;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  }

  .logo-text {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--neutral-700);
  }

  .entity-title {
    flex: 1;
  }

  .entity-title h3 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--neutral-800);
    margin: 0;
  }

  .entity-type {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  .entity-status {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.75rem;
    border-radius: 16px;
    font-size: 0.6875rem;
    font-weight: 600;
  }

  .entity-status.ok {
    background: var(--success-green-100);
    color: var(--success-green-700);
  }

  .entity-status.critical {
    background: var(--error-red-100);
    color: var(--error-red-700);
  }

  .entity-status.excellent {
    background: var(--role-accent-light);
    color: var(--role-accent);
  }

  .entity-body {
    padding: 1.25rem;
  }

  .alert-banner {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem;
    background: var(--error-red-50);
    border-radius: 8px;
    border-left: 3px solid var(--error-red-500);
    font-size: 0.75rem;
    color: var(--error-red-700);
    margin-bottom: 1rem;
  }

  .success-banner {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem;
    background: var(--success-green-50);
    border-radius: 8px;
    border-left: 3px solid var(--success-green-500);
    font-size: 0.75rem;
    color: var(--success-green-700);
    margin-bottom: 1rem;
  }

  .entity-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0.75rem;
    background: var(--neutral-50);
    border-radius: 8px;
  }

  .stat-item .stat-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--neutral-800);
  }

