---
import AuditorLayout from '../../../layouts/roles/AuditorLayout.astro';
---

<AuditorLayout title="Entidades Regulatorias">
  <div class="entidades-page">
    <!-- Header -->
    <div class="page-header">
      <div class="header-info">
        <h1 class="page-title">Entidades Regulatorias</h1>
        <p class="page-description">Información consolidada de entidades y sus requisitos regulatorios</p>
      </div>
      <div class="header-actions">
        <button class="btn-export">
          <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
            <polyline points="7,10 12,15 17,10"/>
            <line x1="12" y1="15" x2="12" y2="3"/>
          </svg>
          Exportar Informe
        </button>
      </div>
    </div>

    <!-- Summary Cards -->
    <div class="summary-cards">
      <div class="summary-card">
        <div class="summary-icon">
          <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 21h18"/>
            <path d="M5 21V7l8-4v18"/>
            <path d="M19 21V11l-6-4"/>
            <path d="M9 9v.01"/>
            <path d="M9 12v.01"/>
            <path d="M9 15v.01"/>
            <path d="M9 18v.01"/>
          </svg>
        </div>
        <div class="summary-content">
          <span class="summary-value">5</span>
          <span class="summary-label">Entidades Activas</span>
        </div>
      </div>
      <div class="summary-card">
        <div class="summary-icon blue">
          <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
            <polyline points="14 2 14 8 20 8"/>
          </svg>
        </div>
        <div class="summary-content">
          <span class="summary-value">156</span>
          <span class="summary-label">Reportes Totales</span>
        </div>
      </div>
      <div class="summary-card">
        <div class="summary-icon green">
          <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
        </div>
        <div class="summary-content">
          <span class="summary-value">91%</span>
          <span class="summary-label">Cumplimiento Global</span>
        </div>
      </div>
      <div class="summary-card">
        <div class="summary-icon yellow">
          <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <polyline points="12,6 12,12 16,14"/>
          </svg>
        </div>
        <div class="summary-content">
          <span class="summary-value">14</span>
          <span class="summary-label">Reportes Pendientes</span>
        </div>
      </div>
    </div>

    <!-- Entities Grid -->
    <div class="entities-grid">
      <!-- SUI -->
      <div class="entity-card">
        <div class="entity-header sui">
          <div class="entity-logo">
            <span class="logo-text">SUI</span>
          </div>
          <div class="entity-title">
            <h3>Sistema Único de Información</h3>
            <span class="entity-type">Superintendencia de Servicios Públicos</span>
          </div>
          <div class="entity-status ok">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            OK
          </div>
        </div>
        <div class="entity-body">
          <div class="entity-stats">
            <div class="stat-item">
              <span class="stat-value">45</span>
              <span class="stat-label">Reportes</span>
            </div>
            <div class="stat-item">
              <span class="stat-value success">41</span>
              <span class="stat-label">Enviados</span>
            </div>
            <div class="stat-item">
              <span class="stat-value warning">3</span>
              <span class="stat-label">Pendientes</span>
            </div>
            <div class="stat-item">
              <span class="stat-value danger">1</span>
              <span class="stat-label">Atrasado</span>
            </div>
          </div>
          <div class="compliance-bar">
            <div class="bar-header">
              <span class="bar-label">Cumplimiento</span>
              <span class="bar-value">92%</span>
            </div>
            <div class="bar-track">
              <div class="bar-fill sui" style="width: 92%"></div>
            </div>
          </div>
          <div class="entity-details">
            <div class="detail-row">
              <span class="detail-label">Frecuencia principal:</span>
              <span class="detail-value">Mensual</span>
            </div>
            <div class="detail-row">
              <span class="detail-label">Próximo vencimiento:</span>
              <span class="detail-value urgent">12 Feb 2025 (Hoy)</span>
            </div>
            <div class="detail-row">
              <span class="detail-label">Responsables asignados:</span>
              <span class="detail-value">3 usuarios</span>
            </div>
          </div>
        </div>
        <div class="entity-footer">
          <a href="/roles/auditor/reportes?entity=sui" class="btn-link">
            Ver Reportes
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 18 15 12 9 6"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- CREG -->
      <div class="entity-card">
        <div class="entity-header creg">
          <div class="entity-logo">
            <span class="logo-text">CREG</span>
          </div>
          <div class="entity-title">
            <h3>Comisión de Regulación</h3>
            <span class="entity-type">Energía y Gas</span>
          </div>
