---
import AuditorLayout from '../../../layouts/roles/AuditorLayout.astro';
import AuditorEntidadesClient from '../../../components/auditor/AuditorEntidadesClient';
---

<AuditorLayout title="Entidades Regulatorias">
  <AuditorEntidadesClient client:load />
</AuditorLayout>

<style is:global>
  .entidades-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-500);
    margin: 0.25rem 0 0;
  }

  .header-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .btn-export {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: var(--role-accent);
    border: none;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: white;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-export:hover {
    background: #9575e0;
  }

  /* Summary Cards */
  .summary-cards {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .summary-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .summary-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    background: var(--role-accent-light);
    color: var(--role-accent);
  }

  .summary-icon.blue {
    background: var(--color-primary-100);
    color: var(--color-primary-600);
  }

  .summary-icon.green {
    background: var(--success-green-100);
    color: var(--success-green-600);
  }

  .summary-icon.yellow {
    background: var(--warning-yellow-100);
    color: var(--warning-yellow-800);
  }

  .summary-content {
    flex: 1;
  }

  .summary-value {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    line-height: 1;
  }

  .summary-label {
    display: block;
    font-size: 0.75rem;
    color: var(--neutral-500);
    margin-top: 0.25rem;
  }

  /* Entities Grid */
  .entities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1rem;
  }

  .entity-card {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .entity-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    color: white;
  }

  .entity-header.sui { background: linear-gradient(90deg, #3b82f6, #60a5fa); }
  .entity-header.creg { background: linear-gradient(90deg, #8b5cf6, #a78bfa); }
  .entity-header.anh { background: linear-gradient(90deg, #f59e0b, #fbbf24); }
  .entity-header.sspd { background: linear-gradient(90deg, #ef4444, #f87171); }
  .entity-header.minenergia { background: linear-gradient(90deg, #22c55e, #4ade80); }

  .entity-logo {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255,255,255,0.15);
    border-radius: 12px;
    font-weight: 700;
    font-size: 0.875rem;
  }

  .entity-title h3 {
    margin: 0;
    font-size: 1rem;
  }

  .entity-title .entity-type {
    font-size: 0.8125rem;
    opacity: 0.9;
  }

  .entity-status {
    margin-left: auto;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    background: rgba(255,255,255,0.15);
    padding: 0.35rem 0.75rem;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 700;
  }

  .entity-status.ok {
    background: rgba(255,255,255,0.2);
  }

  .entity-status.critical {
    background: rgba(255,0,0,0.2);
  }

  .entity-body {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .entity-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.75rem;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 0.75rem;
    background: var(--neutral-50);
    border-radius: 8px;
    border: 1px solid var(--neutral-100);
  }

  .stat-value {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--neutral-900);
  }

  .stat-value.success { color: var(--success-green-600); }
  .stat-value.warning { color: var(--warning-yellow-700); }
  .stat-value.danger { color: var(--error-red-600); }

  .stat-label {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  .compliance-bar {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .bar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.875rem;
    color: var(--neutral-600);
  }

  .bar-track {
    width: 100%;
    height: 8px;
    background: var(--neutral-200);
    border-radius: 999px;
    overflow: hidden;
  }

  .bar-fill {
    height: 100%;
    border-radius: 999px;
  }

  .bar-fill.sui { background: #3b82f6; }
  .bar-fill.creg { background: #8b5cf6; }
  .bar-fill.anh { background: #f59e0b; }
  .bar-fill.sspd { background: #ef4444; }
  .bar-fill.minenergia { background: #22c55e; }

  .entity-details {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
    padding: 0.75rem;
    background: var(--neutral-50);
    border-radius: 8px;
    border: 1px solid var(--neutral-100);
  }

  .detail-row {
    display: flex;
    justify-content: space-between;
    font-size: 0.8125rem;
    color: var(--neutral-600);
  }

  .detail-label {
    font-weight: 600;
  }

  .detail-value {
    color: var(--neutral-800);
    font-weight: 700;
  }

  .detail-value.urgent {
    color: var(--error-red-600);
  }

  .entity-footer {
    padding: 0.75rem 1rem;
    background: var(--neutral-50);
    border-top: 1px solid var(--neutral-100);
  }

  .btn-link {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    color: var(--neutral-700);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
  }

  .btn-link svg {
    color: var(--neutral-500);
  }

  @media (max-width: 1024px) {
    .summary-cards {
      grid-template-columns: repeat(2, 1fr);
    }

    .entity-stats {
      grid-template-columns: repeat(2, 1fr);
    }

    .entity-details {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      gap: 1rem;
    }

    .summary-cards {
      grid-template-columns: 1fr;
    }
  }
</style>
