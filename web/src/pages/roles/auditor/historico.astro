---
import AuditorLayout from '../../../layouts/roles/AuditorLayout.astro';
import AuditorHistoricoClient from '../../../components/auditor/AuditorHistoricoClient';
---

<AuditorLayout title="Historico de Cumplimiento">
  <AuditorHistoricoClient client:load />
</AuditorLayout>

<style is:global>
  .historico-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-500);
    margin: 0.25rem 0 0;
  }

  .header-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .date-range {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: white;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    font-size: 0.875rem;
    color: var(--neutral-600);
    cursor: pointer;
  }

  .btn-export {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: var(--role-accent);
    border: none;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: white;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-export:hover {
    background: #9575e0;
  }

  .summary-cards {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .summary-card {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .summary-card.highlight {
    border: 1px solid var(--role-accent);
    box-shadow: 0 10px 25px -12px rgba(124, 58, 237, 0.35);
  }

  .summary-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8125rem;
    color: var(--neutral-500);
  }

  .summary-label {
    font-weight: 600;
  }

  .summary-badge {
    padding: 0.125rem 0.5rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 700;
  }

  .summary-badge.up {
    background: var(--success-green-100);
    color: var(--success-green-700);
  }

  .summary-value {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--neutral-900);
  }

  .summary-trend {
    font-size: 0.875rem;
    color: var(--neutral-500);
  }

  .chart-section {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    padding: 1rem;
  }

  .chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .chart-title {
    margin: 0;
    font-size: 1rem;
    font-weight: 700;
    color: var(--neutral-800);
  }

  .chart-tabs {
    display: flex;
    gap: 0.5rem;
  }

  .chart-tab {
    padding: 0.5rem 0.75rem;
    border: 1px solid var(--neutral-200);
    background: white;
    border-radius: 8px;
    font-size: 0.875rem;
    color: var(--neutral-600);
    cursor: pointer;
  }

  .chart-tab.active {
    background: var(--role-accent);
    color: white;
    border-color: var(--role-accent);
  }

  .chart-container {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 1rem;
    align-items: center;
  }

  .line-chart {
    background: var(--neutral-50);
    border-radius: 12px;
    padding: 1rem;
  }

  .chart-y-axis {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 200px;
    font-size: 0.75rem;
    color: var(--neutral-400);
  }

  .chart-area {
    position: relative;
    flex: 1;
  }

  .chart-x-axis {
    display: flex;
    justify-content: space-between;
    font-size: 0.75rem;
    color: var(--neutral-500);
    margin-top: 0.5rem;
  }

  .data-labels {
    display: flex;
    justify-content: space-between;
    margin-top: 0.5rem;
    color: var(--neutral-700);
  }

  .data-label {
    position: relative;
    font-size: 0.75rem;
    color: var(--neutral-500);
    width: max-content;
  }

  .data-label.active {
    color: var(--role-accent);
    font-weight: 700;
  }

  .chart-legend {
    display: flex;
    gap: 1rem;
    margin-top: 0.75rem;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--neutral-600);
  }

  .legend-line {
    width: 28px;
    height: 4px;
    border-radius: 4px;
  }

  .legend-line.purple {
    background: var(--role-accent);
  }

  .legend-line.dashed {
    border-bottom: 2px dashed;
  }

  .legend-line.red {
    border-color: var(--error-red-500);
  }

  .table-section {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .table-header {
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--neutral-100);
  }

  .table-title {
    margin: 0;
    font-size: 1rem;
    font-weight: 700;
    color: var(--neutral-800);
  }

  .table-wrapper {
    overflow-x: auto;
  }

  .compliance-table {
    width: 100%;
    border-collapse: collapse;
  }

  .compliance-table th,
  .compliance-table td {
    padding: 0.875rem 1rem;
    text-align: left;
  }

  .compliance-table thead {
    background: var(--neutral-50);
  }

  .compliance-table th {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--neutral-500);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .compliance-table tbody tr {
    border-bottom: 1px solid var(--neutral-100);
  }

  .compliance-table tbody tr:hover {
    background: var(--neutral-50);
  }

  .center {
    text-align: center;
  }

  @media (max-width: 1200px) {
    .summary-cards {
      grid-template-columns: repeat(2, 1fr);
    }

    .chart-container {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      gap: 1rem;
    }

    .summary-cards {
      grid-template-columns: 1fr;
    }
  }
</style>
