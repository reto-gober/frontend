---
import AuditorLayout from '../../../layouts/roles/AuditorLayout.astro';
import AuditorCalendarioClient from '../../../components/auditor/AuditorCalendarioClient';
---

<AuditorLayout title="Calendario de Auditoria">
  <AuditorCalendarioClient client:load />
</AuditorLayout>

<style is:global>
  .calendario-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-500);
    margin: 0.25rem 0 0;
  }

  .btn-export {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: var(--role-accent);
    border: none;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: white;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-export:hover {
    background: #9575e0;
  }

  .filters-bar {
    margin-top: 0.5rem;
  }

  .calendar-layout {
    display: grid;
    grid-template-columns: 360px 1fr;
    gap: 1.5rem;
  }

  .calendar-widget {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    padding: 1.25rem;
    height: fit-content;
  }

  .calendar-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
  }

  .month-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--neutral-800);
    margin: 0;
  }

  .nav-btn {
    width: 36px;
    height: 36px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    background: white;
    color: var(--neutral-500);
    cursor: not-allowed;
  }

  .calendar-widget .filters-bar {
    margin-top: 1rem;
  }

  .calendar-widget .filters-bar select {
    min-width: 200px;
  }

  .calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 4px;
    background: white;
    padding: 1rem;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .calendar-day-header {
    text-align: center;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--neutral-400);
    padding-bottom: 0.5rem;
  }

  .calendar-day {
    min-height: 72px;
    background: var(--neutral-50);
    border-radius: 10px;
    padding: 0.5rem;
    position: relative;
    border: 1px solid transparent;
    transition: all 0.2s;
  }

  .calendar-day:hover {
    border-color: var(--neutral-200);
  }

  .calendar-day.today {
    border-color: var(--role-accent);
    background: rgba(167, 139, 250, 0.08);
  }

  .calendar-day.selected {
    box-shadow: 0 0 0 2px var(--role-accent);
  }

  .calendar-day.empty {
    background: transparent;
    border: none;
  }

  .day-number {
    font-weight: 700;
    color: var(--neutral-800);
    margin-bottom: 0.25rem;
  }

  .day-events {
    display: flex;
    align-items: center;
    gap: 4px;
    flex-wrap: wrap;
  }

  .event-dot {
    width: 8px;
    height: 8px;
  }

  .more-count {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  .calendar-widget .legend-item {
    font-size: 0.85rem;
  }

  /* Sidebar */
  .calendar-widget .sidebar-section {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--neutral-100);
  }

  .sidebar-section .section-title {
    margin: 0 0 0.5rem;
  }

  .eventos-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .evento-item {
    background: var(--neutral-50);
    border: 1px solid var(--neutral-100);
    border-left-width: 4px;
    border-radius: 10px;
    padding: 0.75rem;
  }

  .stats-grid .stat-card {
    box-shadow: none;
    border: 1px solid var(--neutral-100);
  }

  /* Events panel */
  .events-panel {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    padding: 1rem;
  }

  .selected-day-details {
    margin-top: 1rem;
    background: white;
    border: 1px solid var(--neutral-100);
    border-radius: 10px;
    padding: 1rem;
  }

  .evento-detail {
    border-left: 4px solid var(--role-accent);
    background: var(--neutral-50);
    padding: 0.75rem;
    border-radius: 8px;
  }

  /* Stats */
  .stats-summary {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .stat-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: white;
    border-radius: 10px;
    box-shadow: var(--shadow-card);
  }

  .stat-icon {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
  }

  .stat-icon.pending { background: var(--warning-yellow-100); color: var(--warning-yellow-700); }
  .stat-icon.critical { background: var(--error-red-100); color: var(--error-red-600); }
  .stat-icon.completed { background: var(--success-green-100); color: var(--success-green-600); }
  .stat-icon.rate { background: rgba(167, 139, 250, 0.15); color: var(--role-accent); }

  .stat-info {
    display: flex;
    flex-direction: column;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--neutral-500);
  }

  @media (max-width: 1200px) {
    .calendar-layout {
      grid-template-columns: 1fr;
    }

    .calendar-widget {
      max-width: 420px;
      width: 100%;
    }

    .stats-summary {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      gap: 1rem;
    }

    .calendar-grid {
      padding: 0.75rem;
    }

    .stats-summary {
      grid-template-columns: 1fr;
    }
  }
</style>
