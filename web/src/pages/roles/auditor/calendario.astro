---
import AuditorLayout from '../../../layouts/roles/AuditorLayout.astro';
---

<AuditorLayout title="Calendario de Auditoría">
  <div class="calendario-page">
    <!-- Header -->
    <div class="page-header">
      <div class="header-info">
        <h1 class="page-title">Calendario de Auditoría</h1>
        <p class="page-description">Calendario de vencimientos y fechas críticas de cumplimiento regulatorio</p>
      </div>
      <div class="header-actions">
        <button class="btn-export">
          <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
            <polyline points="7,10 12,15 17,10"/>
            <line x1="12" y1="15" x2="12" y2="3"/>
          </svg>
          Exportar Calendario
        </button>
      </div>
    </div>

    <div class="calendar-layout">
      <!-- Calendar Widget -->
      <div class="calendar-widget">
        <div class="calendar-header">
          <button class="nav-btn">
            <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15 18 9 12 15 6"/>
            </svg>
          </button>
          <h2 class="calendar-month">Febrero 2025</h2>
          <button class="nav-btn">
            <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 18 15 12 9 6"/>
            </svg>
          </button>
        </div>
        
        <div class="calendar-grid">
          <div class="weekdays">
            <span>Dom</span>
            <span>Lun</span>
            <span>Mar</span>
            <span>Mié</span>
            <span>Jue</span>
            <span>Vie</span>
            <span>Sáb</span>
          </div>
          <div class="days">
            <!-- Week 1 -->
            <span class="day other-month">26</span>
            <span class="day other-month">27</span>
            <span class="day other-month">28</span>
            <span class="day other-month">29</span>
            <span class="day other-month">30</span>
            <span class="day other-month">31</span>
            <span class="day">1</span>
            
            <!-- Week 2 -->
            <span class="day">2</span>
            <span class="day">3</span>
            <span class="day">4</span>
            <span class="day has-event warning">5</span>
            <span class="day">6</span>
            <span class="day has-event primary">7</span>
            <span class="day">8</span>
            
            <!-- Week 3 -->
            <span class="day">9</span>
            <span class="day has-event critical">10</span>
            <span class="day">11</span>
            <span class="day selected">12</span>
            <span class="day">13</span>
            <span class="day has-event primary">14</span>
            <span class="day has-event warning">15</span>
            
            <!-- Week 4 -->
            <span class="day">16</span>
            <span class="day">17</span>
            <span class="day has-event primary">18</span>
            <span class="day">19</span>
            <span class="day has-event critical">20</span>
            <span class="day">21</span>
            <span class="day">22</span>
            
            <!-- Week 5 -->
            <span class="day">23</span>
            <span class="day">24</span>
            <span class="day has-event warning">25</span>
            <span class="day">26</span>
            <span class="day">27</span>
            <span class="day has-event primary">28</span>
            <span class="day other-month">1</span>
          </div>
        </div>

        <!-- Legend -->
        <div class="calendar-legend">
          <div class="legend-item">
            <span class="legend-dot primary"></span>
            <span>Vencimientos SUI</span>
          </div>
          <div class="legend-item">
            <span class="legend-dot warning"></span>
            <span>Vencimientos CREG</span>
          </div>
          <div class="legend-item">
            <span class="legend-dot critical"></span>
            <span>Vencimientos ANH</span>
          </div>
        </div>
      </div>

      <!-- Events Panel -->
      <div class="events-panel">
        <div class="events-header">
          <h3 class="events-title">Próximos Vencimientos</h3>
          <div class="events-filter">
            <select>
              <option>Todas las entidades</option>
              <option>SUI</option>
              <option>CREG</option>
              <option>ANH</option>
              <option>SSPD</option>
            </select>
          </div>
        </div>

        <div class="events-list">
          <!-- Today Section -->
          <div class="events-section">
            <div class="section-header">
              <span class="section-date">Hoy - 12 Feb</span>
              <span class="section-badge">3 vencimientos</span>
            </div>
            <div class="event-card active">
              <div class="event-indicator critical"></div>
              <div class="event-content">
                <div class="event-header">
                  <h4 class="event-name">Informe Reservas ANH</h4>
                  <span class="event-entity">ANH</span>
                </div>
                <p class="event-description">Reporte mensual de reservas de gas natural</p>
                <div class="event-meta">
                  <span class="event-time">
                    <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"/>
                      <polyline points="12 6 12 12 16 14"/>
                    </svg>
                    Vence a las 23:59
                  </span>
                  <span class="event-status pending">Pendiente</span>
                </div>
              </div>
            </div>
            <div class="event-card">
              <div class="event-indicator primary"></div>
              <div class="event-content">
                <div class="event-header">
                  <h4 class="event-name">Actualización Tarifas SUI</h4>
                  <span class="event-entity">SUI</span>
                </div>
                <p class="event-description">Carga de nuevas tarifas vigentes</p>
                <div class="event-meta">
                  <span class="event-time">
                    <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"/>
                      <polyline points="12 6 12 12 16 14"/>
                    </svg>
                    Vence a las 17:00
                  </span>
                  <span class="event-status completed">Completado</span>
                </div>
              </div>
            </div>
            <div class="event-card">
              <div class="event-indicator warning"></div>
              <div class="event-content">
                <div class="event-header">
                  <h4 class="event-name">Informe Técnico CREG</h4>
                  <span class="event-entity">CREG</span>
                </div>
                <p class="event-description">Reporte de condiciones técnicas de operación</p>
                <div class="event-meta">
                  <span class="event-time">
                    <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"/>
                      <polyline points="12 6 12 12 16 14"/>
                    </svg>
                    Vence a las 18:00
                  </span>
                  <span class="event-status in-progress">En Proceso</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Tomorrow Section -->
          <div class="events-section">
            <div class="section-header">
              <span class="section-date">Mañana - 13 Feb</span>
              <span class="section-badge">1 vencimiento</span>
            </div>
            <div class="event-card">
              <div class="event-indicator primary"></div>
              <div class="event-content">
                <div class="event-header">
                  <h4 class="event-name">Indicadores Calidad SUI</h4>
                  <span class="event-entity">SUI</span>
                </div>
                <p class="event-description">Reporte de indicadores de calidad del servicio</p>
                <div class="event-meta">
                  <span class="event-time">
                    <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"/>
                      <polyline points="12 6 12 12 16 14"/>
                    </svg>
                    Vence a las 15:00
                  </span>
                  <span class="event-status scheduled">Programado</span>
                </div>
              </div>
            </div>
          </div>

          <!-- This Week Section -->
          <div class="events-section">
            <div class="section-header">
              <span class="section-date">Esta Semana</span>
              <span class="section-badge">4 vencimientos</span>
            </div>
            <div class="event-card">
              <div class="event-indicator warning"></div>
              <div class="event-content">
                <div class="event-header">
                  <h4 class="event-name">Balance Comercial CREG</h4>
                  <span class="event-entity">CREG</span>
                </div>
                <p class="event-description">Balance mensual de actividades comerciales</p>
                <div class="event-meta">
                  <span class="event-time">
                    <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                      <line x1="16" y1="2" x2="16" y2="6"/>
                      <line x1="8" y1="2" x2="8" y2="6"/>
                      <line x1="3" y1="10" x2="21" y2="10"/>
                    </svg>
                    14 Feb, 18:00
                  </span>
                  <span class="event-status scheduled">Programado</span>
                </div>
              </div>
            </div>
            <div class="event-card">
              <div class="event-indicator primary"></div>
              <div class="event-content">
                <div class="event-header">
                  <h4 class="event-name">Datos Comerciales SUI</h4>
                  <span class="event-entity">SUI</span>
                </div>
                <p class="event-description">Actualización de datos comerciales mensuales</p>
                <div class="event-meta">
                  <span class="event-time">
                    <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                      <line x1="16" y1="2" x2="16" y2="6"/>
                      <line x1="8" y1="2" x2="8" y2="6"/>
                      <line x1="3" y1="10" x2="21" y2="10"/>
                    </svg>
                    15 Feb, 12:00
                  </span>
                  <span class="event-status scheduled">Programado</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Summary -->
    <div class="stats-summary">
      <div class="stat-card">
        <div class="stat-icon pending">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <polyline points="12 6 12 12 16 14"/>
          </svg>
        </div>
        <div class="stat-info">
          <span class="stat-value">8</span>
          <span class="stat-label">Vencimientos Febrero</span>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon critical">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
            <line x1="12" y1="9" x2="12" y2="13"/>
            <line x1="12" y1="17" x2="12.01" y2="17"/>
          </svg>
        </div>
        <div class="stat-info">
          <span class="stat-value">3</span>
          <span class="stat-label">Críticos Esta Semana</span>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon completed">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
        </div>
        <div class="stat-info">
          <span class="stat-value">5</span>
          <span class="stat-label">Completados Febrero</span>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon rate">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/>
          </svg>
        </div>
        <div class="stat-info">
          <span class="stat-value">91%</span>
          <span class="stat-label">Tasa de Cumplimiento</span>
        </div>
      </div>
    </div>
  </div>
</AuditorLayout>

<style>
  .calendario-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .page-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--neutral-500);
    margin: 0.25rem 0 0;
  }

  .btn-export {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: var(--role-accent);
    border: none;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: white;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-export:hover {
    background: #9575e0;
  }

  /* Calendar Layout */
  .calendar-layout {
    display: grid;
    grid-template-columns: 350px 1fr;
    gap: 1.5rem;
  }

  /* Calendar Widget */
  .calendar-widget {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    padding: 1.25rem;
    height: fit-content;
  }

  .calendar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .calendar-month {
    font-size: 1rem;
    font-weight: 600;
    color: var(--neutral-800);
    margin: 0;
  }

  .nav-btn {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    background: var(--neutral-100);
    border-radius: 6px;
    cursor: pointer;
    color: var(--neutral-600);
    transition: all 0.2s;
  }

  .nav-btn:hover {
    background: var(--neutral-200);
  }

  .calendar-grid {
    margin-bottom: 1rem;
  }

  .weekdays {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    margin-bottom: 0.5rem;
  }

  .weekdays span {
    text-align: center;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--neutral-400);
    padding: 0.5rem 0;
  }

  .days {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 4px;
  }

  .day {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 36px;
    font-size: 0.8125rem;
    color: var(--neutral-700);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
    position: relative;
  }

  .day:hover {
    background: var(--neutral-100);
  }

  .day.other-month {
    color: var(--neutral-300);
  }

  .day.selected {
    background: var(--role-accent);
    color: white;
  }

  .day.has-event::after {
    content: '';
    position: absolute;
    bottom: 4px;
    left: 50%;
    transform: translateX(-50%);
    width: 6px;
    height: 6px;
    border-radius: 50%;
  }

  .day.has-event.primary::after {
    background: #3d85d1;
  }

  .day.has-event.warning::after {
    background: #F4C453;
  }

  .day.has-event.critical::after {
    background: #ef4444;
  }

  .calendar-legend {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-top: 1rem;
    border-top: 1px solid var(--neutral-100);
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    color: var(--neutral-600);
  }

  .legend-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .legend-dot.primary {
    background: #3d85d1;
  }

  .legend-dot.warning {
    background: #F4C453;
  }

  .legend-dot.critical {
    background: #ef4444;
  }

  /* Events Panel */
  .events-panel {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    display: flex;
    flex-direction: column;
    max-height: 600px;
  }

  .events-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--neutral-100);
  }

  .events-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--neutral-800);
    margin: 0;
  }

  .events-filter select {
    padding: 0.5rem 0.75rem;
    border: 1px solid var(--neutral-200);
    border-radius: 6px;
    font-size: 0.8125rem;
    background: white;
    cursor: pointer;
  }

  .events-list {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .events-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .section-date {
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--neutral-700);
  }

  .section-badge {
    font-size: 0.6875rem;
    color: var(--neutral-500);
    background: var(--neutral-100);
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
  }

  .event-card {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background: var(--neutral-50);
    border-radius: 8px;
    border: 1px solid transparent;
    transition: all 0.2s;
  }

  .event-card.active {
    background: rgba(167, 139, 250, 0.08);
    border-color: var(--role-accent);
  }

  .event-indicator {
    width: 4px;
    border-radius: 2px;
    flex-shrink: 0;
  }

  .event-indicator.primary {
    background: #3d85d1;
  }

  .event-indicator.warning {
    background: #F4C453;
  }

  .event-indicator.critical {
    background: #ef4444;
  }

  .event-content {
    flex: 1;
    min-width: 0;
  }

  .event-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.25rem;
  }

  .event-name {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--neutral-800);
    margin: 0;
  }

  .event-entity {
    padding: 0.125rem 0.5rem;
    background: var(--neutral-200);
    border-radius: 12px;
    font-size: 0.625rem;
    font-weight: 600;
    color: var(--neutral-600);
    flex-shrink: 0;
  }

  .event-description {
    font-size: 0.75rem;
    color: var(--neutral-500);
    margin: 0 0 0.5rem;
    line-height: 1.4;
  }

  .event-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .event-time {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.6875rem;
    color: var(--neutral-500);
  }

  .event-status {
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    font-size: 0.625rem;
    font-weight: 600;
  }

  .event-status.pending {
    background: var(--warning-yellow-100);
    color: var(--warning-yellow-800);
  }

  .event-status.completed {
    background: var(--success-green-100);
    color: var(--success-green-700);
  }

  .event-status.in-progress {
    background: #e0e7ff;
    color: #4338ca;
  }

  .event-status.scheduled {
    background: var(--neutral-200);
    color: var(--neutral-600);
  }

  /* Stats Summary */
  .stats-summary {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .stat-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .stat-icon {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    flex-shrink: 0;
  }

  .stat-icon.pending {
    background: var(--warning-yellow-100);
    color: var(--warning-yellow-700);
  }

  .stat-icon.critical {
    background: var(--error-red-100);
    color: var(--error-red-600);
  }

  .stat-icon.completed {
    background: var(--success-green-100);
    color: var(--success-green-600);
  }

  .stat-icon.rate {
    background: rgba(167, 139, 250, 0.15);
    color: var(--role-accent);
  }

  .stat-info {
    display: flex;
    flex-direction: column;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--neutral-500);
    margin-top: 0.25rem;
  }

  @media (max-width: 1200px) {
    .calendar-layout {
      grid-template-columns: 1fr;
    }

    .calendar-widget {
      max-width: 400px;
      margin: 0 auto;
      width: 100%;
    }

    .stats-summary {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      gap: 1rem;
    }

    .stats-summary {
      grid-template-columns: 1fr;
    }
  }
</style>

