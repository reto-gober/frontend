---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Iniciar Sesión">
  <div class="page-bg">
    <div class="bg-overlay"></div>
  </div>

  <div class="container-auth">
    <div class="login-card">
      <div class="login-header">
        <div class="login-logo">
          <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect width="40" height="40" rx="10" fill="url(#gradient)"/>
            <path d="M12 20L18 26L28 14" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
            <defs>
              <linearGradient id="gradient" x1="0" y1="0" x2="40" y2="40">
                <stop offset="0%" stop-color="var(--color-primary-600)"/>
                <stop offset="100%" stop-color="var(--color-primary-800)"/>
              </linearGradient>
            </defs>
          </svg>
        </div>
        <h1 class="login-title">Iniciar sesión</h1>
        <p class="login-subtitle">Acceso para usuarios autorizados del sistema Tracely</p>
      </div>

      <div id="login-error"></div>

      <form id="loginForm" class="login-form" autocomplete="on">
        <div class="form-field">
          <label class="field-label" for="loginEmail">Correo electrónico</label>
          <input 
            class="field-input" 
            id="loginEmail" 
            name="email" 
            type="email" 
            autocomplete="email" 
            placeholder="usuario@ejemplo.com"
            required 
          />
        </div>

        <div class="form-field">
          <label class="field-label" for="loginPassword">Contraseña</label>
          <input 
            class="field-input" 
            id="loginPassword" 
            name="password" 
            type="password" 
            autocomplete="current-password"
            placeholder="••••••••" 
            required 
          />
        </div>

        <button id="loginBtn" type="submit" class="btn-login">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"/>
            <path d="M5 11a7 7 0 0 0 14 0"/>
          </svg>
          Iniciar Sesión
        </button>

        <a href="#" class="forgot-link">¿Olvidó su contraseña?</a>
      </form>
    </div>
  </div>
</BaseLayout>

<script>
  import { authService } from '../lib/auth';

  const loginForm = document.getElementById('loginForm') as HTMLFormElement;
  const loginError = document.getElementById('login-error');
  const loginBtn = document.getElementById('loginBtn') as HTMLButtonElement;

  // Redirección si ya está autenticado
  if (authService.isAuthenticated()) {
    window.location.href = "/dashboard";
  }

  // Login
  loginForm?.addEventListener("submit", async (e) => {
    e.preventDefault();
    if (loginError) loginError.innerHTML = "";
    loginBtn.disabled = true;
    loginBtn.innerHTML = '<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="spinner"><circle cx="12" cy="12" r="10"/></svg> Iniciando sesión...';
    const data = new FormData(loginForm);
    try {
      const response = await authService.login({
        email: data.get("email") as string,
        password: data.get("password") as string,
      });
      authService.saveToken(response);
      window.location.href = "/dashboard";
    } catch (error: any) {
      const message =
        error.response?.data?.mensaje ||
        "Error al iniciar sesión. Verifica tus credenciales.";
      if (loginError)
        loginError.innerHTML = `<div class="alert alert-error">${message}</div>`;
      loginBtn.disabled = false;
      loginBtn.innerHTML = '<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"/><path d="M5 11a7 7 0 0 0 14 0"/></svg> Iniciar Sesión';
    }
  });
</script>

<style>
  /* Fondo con degradado institucional */
  .page-bg { 
    position: fixed; 
    inset: 0; 
    background: linear-gradient(135deg, var(--color-primary-900) 0%, var(--color-primary-600) 100%); 
    z-index: -2; 
    overflow: hidden; 
  }
  .bg-overlay { 
    position: absolute; 
    inset: 0; 
    background:
      radial-gradient(circle at 20% 80%, rgba(110, 168, 255, 0.15), transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(53, 160, 222, 0.12), transparent 50%);
  }

  /* Contenedor centrado */
  .container-auth { 
    min-height: 100vh; 
    display: grid; 
    place-items: center; 
    padding: 2rem 1rem; 
  }

  /* Card de login minimalista */
  .login-card {
    width: 100%;
    max-width: 420px;
    background: rgba(255, 255, 255, 0.98);
    border-radius: 16px;
    padding: 2.5rem 2rem;
    box-shadow: 
      0 30px 60px rgba(0, 0, 0, 0.12),
      0 10px 30px rgba(0, 0, 0, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px) saturate(120%);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  /* Header del login */
  .login-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .login-logo {
    display: inline-flex;
    margin-bottom: 1.5rem;
    filter: drop-shadow(0 4px 12px rgba(61, 133, 209, 0.3));
  }

  .login-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-primary-900);
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .login-subtitle {
    font-size: 0.9rem;
    color: var(--neutral-600, #64748b);
    line-height: 1.5;
    max-width: 340px;
    margin: 0 auto;
  }

  /* Formulario */
  .login-form {
    display: grid;
    gap: 1.25rem;
  }

  .form-field {
    display: grid;
    gap: 0.5rem;
  }

  .field-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--neutral-600, #64748b);
    letter-spacing: 0.01em;
  }

  .field-input {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1.5px solid var(--color-primary-200);
    border-radius: 10px;
    font-size: 0.95rem;
    background: #fff;
    transition: all 0.2s ease;
    color: var(--color-primary-900);
  }

  .field-input::placeholder {
    color: #94a3b8;
  }

  .field-input:hover {
    border-color: var(--color-primary-300);
  }

  .field-input:focus {
    outline: none;
    border-color: var(--color-primary-600);
    box-shadow: 0 0 0 3px rgba(61, 133, 209, 0.1);
  }

  /* Botón principal con ícono de candado */
  .btn-login {
    width: 100%;
    padding: 0.875rem 1.5rem;
    background: var(--color-primary-600);
    color: white;
    border: none;
    border-radius: 10px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 
      0 4px 12px rgba(61, 133, 209, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .btn-login:hover {
    background: var(--color-primary-700);
    transform: translateY(-1px);
    box-shadow: 
      0 6px 16px rgba(61, 133, 209, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.25);
  }

  .btn-login:active {
    transform: translateY(0);
  }

  .btn-login:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none;
  }

  .btn-login .spinner {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Enlace "Olvidó contraseña" */
  .forgot-link {
    text-align: center;
    font-size: 0.875rem;
    color: var(--color-primary-600);
    text-decoration: none;
    transition: color 0.2s ease;
    margin-top: 0.5rem;
    display: block;
  }

  .forgot-link:hover {
    color: var(--color-primary-700);
    text-decoration: underline;
  }

  /* Alertas dentro del card */
  #login-error {
    margin-bottom: 1rem;
  }

  #login-error .alert {
    padding: 0.875rem 1rem;
    border-radius: 8px;
    font-size: 0.875rem;
    animation: slideDown 0.3s ease;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 480px) {
    .login-card {
      padding: 2rem 1.5rem;
    }

    .login-title {
      font-size: 1.5rem;
    }

    .login-subtitle {
      font-size: 0.85rem;
    }
  }
</style>
